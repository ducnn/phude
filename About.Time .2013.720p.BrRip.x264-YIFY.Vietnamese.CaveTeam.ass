Dialogue: 0,0:00:41.86,0:00:50.19,Default,,0000,0000,0000,,<FONT COLOR="#CC3366">Động Phim<FONT COLOR="#FFFFFF"> - <FONT COLOR="#33CC99">Cave Subbing Team\N<FONT COLOR="#FFFFFF">Trân Trọng Giới Thiệu
Dialogue: 0,0:00:50.19,0:00:54.61,Default,,0000,0000,0000,,<FONT COLOR="#FFCCCC">ĐÃ ĐẾN LÚC
Dialogue: 0,0:00:54.61,0:00:56.60,Default,,0000,0000,0000,,Tôi luôn biết gia đình mình khá dị hợm
Dialogue: 0,0:00:56.64,0:00:58.66,Default,,0000,0000,0000,,Đầu tiên là tôi.
Dialogue: 0,0:00:59.03,0:01:02.04,Default,,0000,0000,0000,,Quá cao. Quá gầy.\NCam lè một màu.
Dialogue: 0,0:01:02.58,0:01:05.04,Default,,0000,0000,0000,,Mẹ tôi cũng rất đáng yêu\Nnhưng lại rất khác những bà mẹ khác.
Dialogue: 0,0:01:05.17,0:01:06.57,Default,,0000,0000,0000,,Ở bà có gì đó cương trực.
Dialogue: 0,0:01:06.62,0:01:09.71,Default,,0000,0000,0000,,Thẳng thắn, luôn bận bịu và mạnh mẽ.
Dialogue: 0,0:01:09.84,0:01:11.59,Default,,0000,0000,0000,,Nữ Hoàng chính là hình mẫu lý tưởng của mẹ.
Dialogue: 0,0:01:12.51,0:01:16.93,Default,,0000,0000,0000,,Còn bố tôi. Ông lại vô cùng bình thường.\NBố luôn có thời gian cho riêng mình, không vướng bận.
Dialogue: 0,0:01:17.05,0:01:20.35,Default,,0000,0000,0000,,Sau khi về hưu, giã từ dạy dỗ sinh viên ở tuổi 50
Dialogue: 0,0:01:20.47,0:01:23.72,Default,,0000,0000,0000,,ông vô cùng rảnh rỗi ngồi tám chuyện với tôi
Dialogue: 0,0:01:23.85,0:01:25.06,Default,,0000,0000,0000,,và nhường cho tôi thắng bóng bàn.
Dialogue: 0,0:01:26.39,0:01:29.27,Default,,0000,0000,0000,,Còn đây là em trai mẹ tôi, ông cậu Desmond.
Dialogue: 0,0:01:29.40,0:01:33.40,Default,,0000,0000,0000,,Cậu luôn ăn vận rất chỉn chu\Nvà dành cả ngày để làm...
Dialogue: 0,0:01:33.53,0:01:35.11,Default,,0000,0000,0000,,ờ thì... làm ông cậu Desmond.
Dialogue: 0,0:01:35.24,0:01:38.11,Default,,0000,0000,0000,,Ổng là người quyến rũ bậc nhất\Nvà cũng ngu bậc nhất mà bạn từng gặp.
Dialogue: 0,0:01:38.87,0:01:42.03,Default,,0000,0000,0000,,Cậu luôn vướng bận đầu óc vào những thứ\Nmà chúng tôi không tài nào đoán nổi.
Dialogue: 0,0:01:42.24,0:01:45.04,Default,,0000,0000,0000,,Cuối cùng là Catherine.
Dialogue: 0,0:01:45.12,0:01:47.87,Default,,0000,0000,0000,,Katie. Kit Kat. Em gái tôi.
Dialogue: 0,0:01:48.04,0:01:51.54,Default,,0000,0000,0000,,Trong một gia đình mà ai cũng áo quần là lượt,\Nđầu tóc chỉn chu...
Dialogue: 0,0:01:51.71,0:01:54.21,Default,,0000,0000,0000,,thì em gái tôi chính là điều tự nhiên nhất.
Dialogue: 0,0:01:54.38,0:01:59.13,Default,,0000,0000,0000,,Đôi mắt nhỏ tinh ranh của con bé,\N áo phông tím, chân trần...
Dialogue: 0,0:01:59.26,0:02:01.72,Default,,0000,0000,0000,,đối với tôi mà nói,\Ntừ trước tới nay...
Dialogue: 0,0:02:01.89,0:02:04.52,Default,,0000,0000,0000,,đều là những điều tuyệt nhất thế gian này.
Dialogue: 0,0:02:05.73,0:02:09.44,Default,,0000,0000,0000,,Dù sao, đó cũng là quãng niên thiếu tươi đẹp.\NĐầy lời ca và thói quen.
Dialogue: 0,0:02:09.60,0:02:11.23,Default,,0000,0000,0000,,Tới tận năm tôi 21 tuổi\Ncả gia đình tôi
Dialogue: 0,0:02:11.31,0:02:13.65,Default,,0000,0000,0000,,vẫn luôn có những buổi tiệc trà bên bãi biển mỗi ngày.
Dialogue: 0,0:02:13.78,0:02:16.57,Default,,0000,0000,0000,,Chơi lia đá và ăn bánh kẹp.
Dialogue: 0,0:02:16.74,0:02:19.95,Default,,0000,0000,0000,,Dù đông hay hè.\NKhông quản nắng cháy.
Dialogue: 0,0:02:24.24,0:02:26.91,Default,,0000,0000,0000,,Và mỗi tối thứ 6,\Nvẫn cùng nhau xem phim
Dialogue: 0,0:02:27.79,0:02:29.79,Default,,0000,0000,0000,,không quản gió mưa.
Dialogue: 0,0:02:30.75,0:02:34.96,Default,,0000,0000,0000,,Và mỗi năm một lần,\Ntiệc năm mới kinh hoàng lại ập tới.
Dialogue: 0,0:02:51.77,0:02:53.77,Default,,0000,0000,0000,,Chắc tôi chỉ uống một chai thôi.
Dialogue: 0,0:02:56.86,0:02:59.70,Default,,0000,0000,0000,,Anh đẹp trai thật đấy.
Dialogue: 0,0:03:01.11,0:03:03.28,Default,,0000,0000,0000,,Em là Katie.\NMà em đang uống cái gì ấy nhỉ?
Dialogue: 0,0:03:04.12,0:03:05.95,Default,,0000,0000,0000,,Một thứ vô cùng đắt tiền đấy.
Dialogue: 0,0:03:06.12,0:03:07.41,Default,,0000,0000,0000,,Nâng ly nào.
Dialogue: 0,0:03:22.34,0:03:23.76,Default,,0000,0000,0000,,Đi nào, nửa đêm tới nơi rồi.
Dialogue: 0,0:03:23.85,0:03:25.85,Default,,0000,0000,0000,,Cho tôi đi ké với nào.
Dialogue: 0,0:03:25.97,0:03:27.93,Default,,0000,0000,0000,,Tôi phải kiếm cho cậu một...
Dialogue: 0,0:03:29.48,0:03:30.81,Default,,0000,0000,0000,,Ôi trời!
Dialogue: 0,0:03:31.10,0:03:34.77,Default,,0000,0000,0000,,Ai chả có lúc mắc lỗi.\NKhông hề hấn gì.
Dialogue: 0,0:03:36.44,0:03:41.15,Default,,0000,0000,0000,,6, 5, 4, 3, 2, 1.
Dialogue: 0,0:03:41.28,0:03:43.32,Default,,0000,0000,0000,,Chúc mừng năm mới!
Dialogue: 0,0:03:43.49,0:03:45.53,Default,,0000,0000,0000,,Chúc mừng năm mới!
Dialogue: 0,0:03:47.45,0:03:48.45,Default,,0000,0000,0000,,Tôi xin lỗi.
Dialogue: 0,0:04:00.47,0:04:02.30,Default,,0000,0000,0000,,Rồi sáng hôm sau tôi tỉnh dậy,
Dialogue: 0,0:04:02.38,0:04:05.14,Default,,0000,0000,0000,,đầu óc phê phê, cảm thấy nhục nhã
Dialogue: 0,0:04:05.22,0:04:06.93,Default,,0000,0000,0000,,và không hề nhận ra rằng đó là ngày
Dialogue: 0,0:04:07.01,0:04:08.56,Default,,0000,0000,0000,,sẽ thay đổi cuộc đời tôi mãi mãi.
Dialogue: 0,0:04:10.22,0:04:11.89,Default,,0000,0000,0000,,Dậy đi lão.
Dialogue: 0,0:04:14.52,0:04:16.02,Default,,0000,0000,0000,,Bố gọi anh kìa.
Dialogue: 0,0:04:16.15,0:04:18.73,Default,,0000,0000,0000,,A, chào bé pajama dễ thương.
Dialogue: 0,0:04:24.03,0:04:25.91,Default,,0000,0000,0000,,Tim, lại đây con.
Dialogue: 0,0:04:26.03,0:04:27.32,Default,,0000,0000,0000,,Hãy...
Dialogue: 0,0:04:28.33,0:04:29.66,Default,,0000,0000,0000,,ngồi xuống.
Dialogue: 0,0:04:31.70,0:04:33.71,Default,,0000,0000,0000,,Trang trọng quá đấy ạ.
Dialogue: 0,0:04:34.21,0:04:36.17,Default,,0000,0000,0000,,Nói thật là...
Dialogue: 0,0:04:36.29,0:04:38.04,Default,,0000,0000,0000,,đây là khoảnh khắc quái dị nhất với bố
Dialogue: 0,0:04:38.21,0:04:40.25,Default,,0000,0000,0000,,vì trước đây bố cũng từng gặp phải chuyện này
Dialogue: 0,0:04:40.34,0:04:42.84,Default,,0000,0000,0000,,với ông nội con hồi bố 21 tuổi.\NSau đó thì cuộc đời bố...
Dialogue: 0,0:04:43.72,0:04:48.64,Default,,0000,0000,0000,,chẳng bao giờ còn như cũ được nữa\Nmà nó quái hết sức cần thiết.
Dialogue: 0,0:04:48.72,0:04:49.72,Default,,0000,0000,0000,,Dạ.
Dialogue: 0,0:04:50.52,0:04:52.27,Default,,0000,0000,0000,,Vậy bố nói đi.\NNghe có vẻ hay ho quá.
Dialogue: 0,0:04:52.35,0:04:54.06,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:04:56.15,0:04:59.48,Default,,0000,0000,0000,,Tim, con trai ta...
Dialogue: 0,0:05:01.19,0:05:03.65,Default,,0000,0000,0000,,Có một sự thật đơn giản rằng\Nmọi đàn ông trong gia đình ta...
Dialogue: 0,0:05:03.78,0:05:06.24,Default,,0000,0000,0000,,luôn có một khả năng...
Dialogue: 0,0:05:07.24,0:05:09.20,Default,,0000,0000,0000,,Bắt đầu quái rồi đấy.
Dialogue: 0,0:05:09.74,0:05:13.33,Default,,0000,0000,0000,,Con hãy chuẩn bị tinh thần nghe mấy điều vô lý, dị dị...
Dialogue: 0,0:05:13.41,0:05:16.37,Default,,0000,0000,0000,,nhưng lại chính là bí mật gia đình đi.
Dialogue: 0,0:05:16.71,0:05:21.04,Default,,0000,0000,0000,,Và bí mật này chính là,\Ntất cả đàn ông trong nhà ta đều có thể
Dialogue: 0,0:05:23.76,0:05:25.67,Default,,0000,0000,0000,,du hành thời gian.
Dialogue: 0,0:05:27.93,0:05:29.89,Default,,0000,0000,0000,,Mà chính xác thì là quay ngược về quá khứ.
Dialogue: 0,0:05:30.01,0:05:32.01,Default,,0000,0000,0000,,Chúng ta không thể tới tương lai được.
Dialogue: 0,0:05:32.10,0:05:33.89,Default,,0000,0000,0000,,Nghe có vẻ giống một trò đùa quái dị.
Dialogue: 0,0:05:34.02,0:05:36.27,Default,,0000,0000,0000,,Nhưng nó lại thật một cách quái đản.
Dialogue: 0,0:05:38.02,0:05:42.77,Default,,0000,0000,0000,,Bố đang nói với con rằng,\Nbố, ông nội, và mấy ông cậu....
Dialogue: 0,0:05:42.94,0:05:45.24,Default,,0000,0000,0000,,- đều có thể quay về quá khứ ư?\N- Chính xác.
Dialogue: 0,0:05:45.36,0:05:47.28,Default,,0000,0000,0000,,- Giờ bố vẫn làm được?\N- Chính xác.
Dialogue: 0,0:05:47.45,0:05:50.53,Default,,0000,0000,0000,,Nhưng mà nói thực thì nó cũng chả ly kỳ được như ta tưởng.\NNó chỉ ảnh hưởng tới mình ta thôi.
Dialogue: 0,0:05:50.62,0:05:53.62,Default,,0000,0000,0000,,Bố chỉ có thể quay về lại chính xác nơi bố từng tới và nhớ tới.
Dialogue: 0,0:05:53.75,0:05:57.46,Default,,0000,0000,0000,,Chứ rất tiếc là ta chẳng thể giết được Hitle\Ncũng như ngủ với nàng Helen thành Troy được.
Dialogue: 0,0:05:57.58,0:05:58.79,Default,,0000,0000,0000,,Bố dừng lại đã.
Dialogue: 0,0:06:01.46,0:06:03.96,Default,,0000,0000,0000,,- Nếu như chuyện này là thật, dù không phải...\N- Thực ra là phải.
Dialogue: 0,0:06:04.13,0:06:07.38,Default,,0000,0000,0000,,- Rõ ràng là nó không thật. Nhưng nếu nó thật, dù không phải...\N- Thực ra là thật.
Dialogue: 0,0:06:07.47,0:06:09.47,Default,,0000,0000,0000,,Nó không có thực, nhưng nếu có là thực\Nthì làm thế nào mà...
Dialogue: 0,0:06:09.59,0:06:11.72,Default,,0000,0000,0000,,Làm thế nào lại là trò dễ nhất.
Dialogue: 0,0:06:11.80,0:06:14.14,Default,,0000,0000,0000,,Con chỉ cần tới chỗ nào tối,\Nchui vào tủ,
Dialogue: 0,0:06:14.27,0:06:16.60,Default,,0000,0000,0000,,được áp dụng nhiều nhất.\NKhông thì vô WC cũng được.
Dialogue: 0,0:06:16.73,0:06:19.06,Default,,0000,0000,0000,,Rồi con nắm hai tay lại thế này.
Dialogue: 0,0:06:19.15,0:06:20.65,Default,,0000,0000,0000,,Nghĩ về khoảnh khắc con muốn tới
Dialogue: 0,0:06:20.81,0:06:22.27,Default,,0000,0000,0000,,rồi con tới đó liền thôi.
Dialogue: 0,0:06:22.65,0:06:25.65,Default,,0000,0000,0000,,Đương nhiên là sau một hồi vấp váp lẻng xẻng.
Dialogue: 0,0:06:26.15,0:06:27.15,Default,,0000,0000,0000,,Chà.
Dialogue: 0,0:06:27.32,0:06:29.32,Default,,0000,0000,0000,,Con phản ứng lại tốt đấy.
Dialogue: 0,0:06:29.45,0:06:33.62,Default,,0000,0000,0000,,Hình như hồi đó bố nói "Mẹ nó~"\Ncơ mà cũng lâu lắc rồi.
Dialogue: 0,0:06:33.74,0:06:35.29,Default,,0000,0000,0000,,Không, đây rõ ràng là trò đùa mà.
Dialogue: 0,0:06:35.41,0:06:36.91,Default,,0000,0000,0000,,Không đùa đâu cưng ạ.
Dialogue: 0,0:06:37.29,0:06:39.79,Default,,0000,0000,0000,,Sao bố phải lừa
Dialogue: 0,0:06:40.46,0:06:41.54,Default,,0000,0000,0000,,con trai bố chứ?
Dialogue: 0,0:06:41.67,0:06:42.75,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:06:42.96,0:06:44.59,Default,,0000,0000,0000,,Nhưng tới lúc con quay lại đây
Dialogue: 0,0:06:44.67,0:06:47.34,Default,,0000,0000,0000,,sau khi đứng trong tủ quần áo với hai tay nắm chặt
Dialogue: 0,0:06:47.51,0:06:49.67,Default,,0000,0000,0000,,thì bố sẽ biết tay con.
Dialogue: 0,0:06:49.80,0:06:51.43,Default,,0000,0000,0000,,Được. Chơi liền.
Dialogue: 0,0:06:53.81,0:06:56.68,Default,,0000,0000,0000,,Tim nè, kiếm trò gì hay ho mà làm nha con.
Dialogue: 0,0:06:56.81,0:06:58.52,Default,,0000,0000,0000,,Biết tay con đấy.
Dialogue: 0,0:06:58.81,0:07:00.60,Default,,0000,0000,0000,,Con nói thật đó.\NThật đó.
Dialogue: 0,0:07:09.70,0:07:10.95,Default,,0000,0000,0000,,Coi nào...
Dialogue: 0,0:07:45.27,0:07:46.27,Default,,0000,0000,0000,,Wow!
Dialogue: 0,0:08:02.42,0:08:03.54,Default,,0000,0000,0000,,Cậu không sao chứ Tim?
Dialogue: 0,0:08:03.62,0:08:05.88,Default,,0000,0000,0000,,Được. Ngon.
Dialogue: 0,0:08:05.96,0:08:08.80,Default,,0000,0000,0000,,Lại đây nào. Nửa đêm tới nơi rồi,\Ntôi phải tìm cho cậu một...
Dialogue: 0,0:08:08.88,0:08:10.09,Default,,0000,0000,0000,,Whoa, whoa, whoa!
Dialogue: 0,0:08:14.43,0:08:15.55,Default,,0000,0000,0000,,Whoo! 12h!
Dialogue: 0,0:08:15.64,0:08:18.76,Default,,0000,0000,0000,,10, 9, 8, 7,
Dialogue: 0,0:08:19.27,0:08:24.64,Default,,0000,0000,0000,,6, 5, 4, 3, 2, 1.
Dialogue: 0,0:08:24.77,0:08:26.98,Default,,0000,0000,0000,,Chúc mừng năm mới!
Dialogue: 0,0:08:34.82,0:08:36.24,Default,,0000,0000,0000,,Cảm ơn anh, Tim.
Dialogue: 0,0:08:36.37,0:08:37.78,Default,,0000,0000,0000,,Không có chi đâu Polly.
Dialogue: 0,0:09:01.47,0:09:02.56,Default,,0000,0000,0000,,Mẹ có biết không ạ?
Dialogue: 0,0:09:02.60,0:09:03.68,Default,,0000,0000,0000,,Không xí nào luôn.
Dialogue: 0,0:09:03.81,0:09:06.82,Default,,0000,0000,0000,,- Lạ ghê. Nhưng mà mấy chuyện liên quan...\N- Ý con muốn nói tới hậu quả hở? Nói sao nhỉ?
Dialogue: 0,0:09:06.86,0:09:09.11,Default,,0000,0000,0000,,Sẽ chẳng có gì ảnh hưởng đến hòa bình thế giới hết.
Dialogue: 0,0:09:09.14,0:09:10.52,Default,,0000,0000,0000,,Sẽ là một năm phức tạp lắm cho coi.
Dialogue: 0,0:09:10.52,0:09:12.03,Default,,0000,0000,0000,,Một đời phức tạp thì có.
Dialogue: 0,0:09:12.82,0:09:15.45,Default,,0000,0000,0000,,Bố đã xài "nó" làm gì?
Dialogue: 0,0:09:15.53,0:09:17.66,Default,,0000,0000,0000,,Bố thì chỉ có sách, sách và sách thôi.
Dialogue: 0,0:09:17.82,0:09:19.95,Default,,0000,0000,0000,,Bố đã đọc những cuốn mà nhiều người cả đời ao ước.
Dialogue: 0,0:09:20.03,0:09:24.70,Default,,0000,0000,0000,,Đã vậy còn tới 2 lần. Sách của Dicken thì 3.\NCòn con tính sao?
Dialogue: 0,0:09:25.46,0:09:28.79,Default,,0000,0000,0000,,Con tính quay lại hôm con cắt tóc, cho đẹp hơn chút.
Dialogue: 0,0:09:28.88,0:09:30.34,Default,,0000,0000,0000,,Rồi thứ tiếp theo hiển nhiên là tiền.
Dialogue: 0,0:09:30.38,0:09:31.71,Default,,0000,0000,0000,,Cái thứ xa xỉ đó
Dialogue: 0,0:09:31.80,0:09:33.48,Default,,0000,0000,0000,,đã phá đời ông nội con hoàn toàn.
Dialogue: 0,0:09:33.59,0:09:35.22,Default,,0000,0000,0000,,Khiến ông con không có bạn bè cũng chẳng có tình yêu.
Dialogue: 0,0:09:35.34,0:09:37.76,Default,,0000,0000,0000,,Bố sẽ không bao giờ nghĩ tới việc trở thành người giàu có.
Dialogue: 0,0:09:37.93,0:09:39.93,Default,,0000,0000,0000,,Nhưng không mất công đi làm thì sướng chứ sao?
Dialogue: 0,0:09:40.01,0:09:41.76,Default,,0000,0000,0000,,Không hề. Đó hoàn toàn là một thảm họa.
Dialogue: 0,0:09:41.85,0:09:44.33,Default,,0000,0000,0000,,- Nhìn coi việc đã xảy ra với ông trẻ Fred kìa.\N- Chuyện gì vậy bố?
Dialogue: 0,0:09:44.42,0:09:46.79,Default,,0000,0000,0000,,Chết trong tiền.
Dialogue: 0,0:09:46.98,0:09:48.09,Default,,0000,0000,0000,,Phí một đời vì nó.
Dialogue: 0,0:09:48.17,0:09:50.17,Default,,0000,0000,0000,,Con phải dùng khả năng này vào việc
Dialogue: 0,0:09:50.26,0:09:52.09,Default,,0000,0000,0000,,khiến cuộc đời con xoay theo hướng con mong muốn.
Dialogue: 0,0:09:52.16,0:09:54.36,Default,,0000,0000,0000,,Nào, nghĩ kỹ vào.
Dialogue: 0,0:09:54.44,0:09:55.44,Default,,0000,0000,0000,,Thực tình...
Dialogue: 0,0:09:56.74,0:09:59.20,Default,,0000,0000,0000,,lúc này con nghĩ...
Dialogue: 0,0:09:59.87,0:10:03.24,Default,,0000,0000,0000,,sẽ tuyệt biết bao nếu nó giúp con có người yêu.
Dialogue: 0,0:10:03.33,0:10:04.74,Default,,0000,0000,0000,,Wow.
Dialogue: 0,0:10:06.21,0:10:08.21,Default,,0000,0000,0000,,- Mơ lớn ghê.\N- Vâng.
Dialogue: 0,0:10:09.29,0:10:10.96,Default,,0000,0000,0000,,Thật khó khăn nhường nào.
Dialogue: 0,0:10:12.92,0:10:16.05,Default,,0000,0000,0000,,Đối với tôi, mọi chuyện đều xoay quanh tình yêu.
Dialogue: 0,0:10:16.22,0:10:18.97,Default,,0000,0000,0000,,Mùa hè đó, tôi đã chính thức dấn thân vào chiến trận.
Dialogue: 0,0:10:20.80,0:10:23.31,Default,,0000,0000,0000,,Cô ấy là Charlotte.\NEm họ của gã bạn trai
Dialogue: 0,0:10:23.43,0:10:25.89,Default,,0000,0000,0000,,vừa đẹp trai vừa dơ dáy của Katie.
Dialogue: 0,0:10:27.94,0:10:30.73,Default,,0000,0000,0000,,Và cô ấy đã ở lại tới 2 tháng.
Dialogue: 0,0:10:34.57,0:10:36.57,Default,,0000,0000,0000,,Chọn 1 thôi. Không được cả 2 đâu.
Dialogue: 0,0:10:38.82,0:10:39.82,Default,,0000,0000,0000,,Tim,
Dialogue: 0,0:10:40.66,0:10:42.57,Default,,0000,0000,0000,,anh giúp em được không?
Dialogue: 0,0:10:42.74,0:10:44.03,Default,,0000,0000,0000,,Sẵn lòng!
Dialogue: 0,0:10:48.08,0:10:49.91,Default,,0000,0000,0000,,Nhanh nhẹn ghê.
Dialogue: 0,0:10:51.92,0:10:54.96,Default,,0000,0000,0000,,Ôi, không, không.
Dialogue: 0,0:10:55.34,0:10:57.92,Default,,0000,0000,0000,,Không. Không, không, không, không.
Dialogue: 0,0:10:59.09,0:11:00.59,Default,,0000,0000,0000,,- Nó có dính vào tóc tớ không?\N- Có đấy.
Dialogue: 0,0:11:08.48,0:11:12.06,Default,,0000,0000,0000,,Tim. Anh giúp em được không?
Dialogue: 0,0:11:12.27,0:11:14.65,Default,,0000,0000,0000,,Được chứ. Đợi anh chút.
Dialogue: 0,0:11:16.98,0:11:17.98,Default,,0000,0000,0000,,Được thôi.
Dialogue: 0,0:11:30.50,0:11:31.96,Default,,0000,0000,0000,,Cám ơn anh.
Dialogue: 0,0:11:34.42,0:11:35.42,Default,,0000,0000,0000,,Coi nào...
Dialogue: 0,0:11:42.97,0:11:44.30,Default,,0000,0000,0000,,Dễ chịu lắm.
Dialogue: 0,0:11:44.80,0:11:46.30,Default,,0000,0000,0000,,Nghề của anh mà.
Dialogue: 0,0:11:49.18,0:11:52.19,Default,,0000,0000,0000,,Đó là mùa hè của phơi nắng và tra tấn.
Dialogue: 0,0:11:53.27,0:11:55.06,Default,,0000,0000,0000,,Tôi đã mời Jay, cậu bạn ngốc nghếch tới chơi tenis cùng
Dialogue: 0,0:11:55.15,0:11:57.40,Default,,0000,0000,0000,,với mục đích muốn cậu ta làm nền cho mình.
Dialogue: 0,0:12:03.16,0:12:04.28,Default,,0000,0000,0000,,Nhưng rốt cuộc là lầm rồi.
Dialogue: 0,0:12:04.95,0:12:06.62,Default,,0000,0000,0000,,- Cậu đang làm cái gì đấy hả?\N- Ôi không!
Dialogue: 0,0:12:10.29,0:12:12.25,Default,,0000,0000,0000,,Charlotte đã thẳng tay khiến cả 2 thằng bọn tôi\N không khác gì thằng ngốc.
Dialogue: 0,0:12:12.33,0:12:13.83,Default,,0000,0000,0000,,Đen quá con ơi.
Dialogue: 0,0:12:18.46,0:12:21.01,Default,,0000,0000,0000,,Làm thế quái nào mà ta có thể tập trung vào chơi bóng được?
Dialogue: 0,0:12:21.67,0:12:23.76,Default,,0000,0000,0000,,Cũng như ta phải sống làm sao được
Dialogue: 0,0:12:23.88,0:12:26.01,Default,,0000,0000,0000,,với cái áo ngắn cũn cỡn như thế kia hả giời?
Dialogue: 0,0:12:27.60,0:12:30.35,Default,,0000,0000,0000,,Mọi chuyện không hề suôn sẻ cho tới khi
Dialogue: 0,0:12:30.85,0:12:32.93,Default,,0000,0000,0000,,mọi thứ quá muộn.
Dialogue: 0,0:12:33.48,0:12:35.81,Default,,0000,0000,0000,,Chà, Charlotte, đã là bữa ăn cuối cùng của cháu ở đây rồi.
Dialogue: 0,0:12:35.94,0:12:37.19,Default,,0000,0000,0000,,Khônggggggggg!
Dialogue: 0,0:12:37.48,0:12:40.82,Default,,0000,0000,0000,,Chúng ta rất vui khi có cháu ở đây mùa hè này.
Dialogue: 0,0:12:40.94,0:12:41.99,Default,,0000,0000,0000,,Thực sự vậy.
Dialogue: 0,0:12:42.11,0:12:43.15,Default,,0000,0000,0000,,Con cảm ơn hai bác.
Dialogue: 0,0:12:43.28,0:12:44.53,Default,,0000,0000,0000,,Cả nhà rất rất vui.
Dialogue: 0,0:12:44.70,0:12:45.95,Default,,0000,0000,0000,,Đúng không, Desmond?
Dialogue: 0,0:12:46.20,0:12:47.24,Default,,0000,0000,0000,,Đúng cái gì cơ?
Dialogue: 0,0:12:47.32,0:12:49.49,Default,,0000,0000,0000,,Chúng ta rất vui khi có Charlotte ở đây hè này.
Dialogue: 0,0:12:49.87,0:12:51.33,Default,,0000,0000,0000,,Charlotte? Charlotte là ai?
Dialogue: 0,0:12:51.45,0:12:53.71,Default,,0000,0000,0000,,Ôi em tôi. Charlotte đang ngồi bên cạnh cậu đấy.
Dialogue: 0,0:12:55.00,0:12:58.33,Default,,0000,0000,0000,,- Ồ, ồ, đúng rồi, Charlotte.\N- Con chào chú.
Dialogue: 0,0:12:59.13,0:13:00.55,Default,,0000,0000,0000,,Rất vui khi được gặp con.
Dialogue: 0,0:13:05.01,0:13:08.34,Default,,0000,0000,0000,,Con có vui vì có Charlotte ở đây không Tim?
Dialogue: 0,0:13:09.97,0:13:10.97,Default,,0000,0000,0000,,Có chứ ạ.
Dialogue: 0,0:13:12.06,0:13:13.39,Default,,0000,0000,0000,,Tháng 8 sắp tới rồi.
Dialogue: 0,0:13:13.56,0:13:15.52,Default,,0000,0000,0000,,Ban nãy em cũng giới thiệu đủ rồi đúng không?
Dialogue: 0,0:13:15.56,0:13:18.06,Default,,0000,0000,0000,,Rồi rồi. Em tinh ý lắm.
Dialogue: 0,0:13:18.23,0:13:20.90,Default,,0000,0000,0000,,- Cũng vừa vừa thôi.\N- Anh thích vậy nha. 
Dialogue: 0,0:13:34.75,0:13:36.08,Default,,0000,0000,0000,,Mời vào.
Dialogue: 0,0:13:38.42,0:13:39.67,Default,,0000,0000,0000,,- Charlotte.\N- Dạ?
Dialogue: 0,0:13:43.59,0:13:47.22,Default,,0000,0000,0000,,Đêm cuối cùng ở đây rồi nhỉ,\Nanh hỏi em một câu được chứ?
Dialogue: 0,0:13:48.09,0:13:49.84,Default,,0000,0000,0000,,Vâng, anh cứ tự nhiên.
Dialogue: 0,0:13:50.10,0:13:51.51,Default,,0000,0000,0000,,À, đợi đã.
Dialogue: 0,0:13:52.85,0:13:55.93,Default,,0000,0000,0000,,Không liên quan gì tới yêu đương đúng không?
Dialogue: 0,0:13:56.10,0:13:57.60,Default,,0000,0000,0000,,Yêu á? Sao cơ?
Dialogue: 0,0:13:57.73,0:14:01.27,Default,,0000,0000,0000,,Vì Kit Kat dặn em trước rằng,\Nnếu anh có đả động về vấn đề đó
Dialogue: 0,0:14:01.40,0:14:03.57,Default,,0000,0000,0000,,thì em phải thẳng thắn và rõ ràng với anh
Dialogue: 0,0:14:03.69,0:14:05.86,Default,,0000,0000,0000,,rằng anh chỉ nên coi em như em gái mình thôi
Dialogue: 0,0:14:05.95,0:14:07.40,Default,,0000,0000,0000,,và tránh tỏ ra ngớ ngẩn.
Dialogue: 0,0:14:08.28,0:14:11.28,Default,,0000,0000,0000,,Mà cũng có thể là giờ em rất giống con ngốc
Dialogue: 0,0:14:11.41,0:14:13.01,Default,,0000,0000,0000,,khi mà thực chất là muộn thế này rồi
Dialogue: 0,0:14:13.12,0:14:14.70,Default,,0000,0000,0000,,anh chỉ hỏi em về bí quyết tenis thôi?
Dialogue: 0,0:14:15.54,0:14:17.37,Default,,0000,0000,0000,,Không. Là về yêu đương thật đấy.
Dialogue: 0,0:14:20.29,0:14:22.59,Default,,0000,0000,0000,,Anh thực sự rất dễ thương.
Dialogue: 0,0:14:23.42,0:14:26.71,Default,,0000,0000,0000,,Nhưng vấn đề là anh để mọi chuyện tới tận đêm cuối cùng.
Dialogue: 0,0:14:26.80,0:14:31.64,Default,,0000,0000,0000,,Anh cũng có thể tán em từ lúc tụi mình còn nhiều thời gian mà.
Dialogue: 0,0:14:32.56,0:14:34.81,Default,,0000,0000,0000,,Vậy "đêm cuối" là ý tồi đúng không?
Dialogue: 0,0:14:34.97,0:14:39.81,Default,,0000,0000,0000,,Tệ lắm. Kiểu như thôi thì để tới bến\Nta tặc lưỡi làm vậy.
Dialogue: 0,0:14:40.27,0:14:42.48,Default,,0000,0000,0000,,"Đêm cuối" không bao giờ có tác dụng đâu.
Dialogue: 0,0:14:43.15,0:14:46.15,Default,,0000,0000,0000,,Được rồi.\NAnh hiểu rồi.
Dialogue: 0,0:15:06.59,0:15:07.92,Default,,0000,0000,0000,,Mời vào.
Dialogue: 0,0:15:09.34,0:15:09.99,Default,,0000,0000,0000,,Tim. 
Dialogue: 0,0:15:10.14,0:15:11.28,Default,,0000,0000,0000,,- Charlotte.\N - Chào anh.
Dialogue: 0,0:15:12.64,0:15:14.35,Default,,0000,0000,0000,,- Chào em.\N- Anh ngồi đi.
Dialogue: 0,0:15:16.81,0:15:19.68,Default,,0000,0000,0000,,Anh biết em có lẽ sẽ nghi ngờ điều này...
Dialogue: 0,0:15:19.85,0:15:23.44,Default,,0000,0000,0000,,nhưng anh đã phải lòng em cả tháng nay rồi.
Dialogue: 0,0:15:25.19,0:15:27.86,Default,,0000,0000,0000,,Hẳn chuyện này sẽ phải xảy ra.
Dialogue: 0,0:15:28.11,0:15:32.11,Default,,0000,0000,0000,,Em rất xinh đẹp...
Dialogue: 0,0:15:32.20,0:15:33.99,Default,,0000,0000,0000,,cả mái tóc em cũng vậy.
Dialogue: 0,0:15:34.28,0:15:37.29,Default,,0000,0000,0000,,Nhưng kể cả em có không xinh đẹp đi chăng nữa
Dialogue: 0,0:15:38.29,0:15:40.96,Default,,0000,0000,0000,,hay nếu như em có không có tóc
Dialogue: 0,0:15:41.21,0:15:43.79,Default,,0000,0000,0000,,bởi vì mấy liệu pháp hóa trị chẳng hạn
Dialogue: 0,0:15:45.21,0:15:47.17,Default,,0000,0000,0000,,thì anh vẫn thích em...
Dialogue: 0,0:15:47.71,0:15:48.71,Default,,0000,0000,0000,,và anh...
Dialogue: 0,0:15:49.21,0:15:53.89,Default,,0000,0000,0000,,anh tự hỏi rằng...\Nkhông biết em có cùng chung cảm xúc với anh không.
Dialogue: 0,0:15:55.22,0:15:56.22,Default,,0000,0000,0000,,Wow.
Dialogue: 0,0:15:57.56,0:15:59.43,Default,,0000,0000,0000,,Để em nói với anh điều này.
Dialogue: 0,0:15:59.98,0:16:02.06,Default,,0000,0000,0000,,Sao chúng ta không cùng nhau trải qua mùa hè này
Dialogue: 0,0:16:02.14,0:16:05.98,Default,,0000,0000,0000,,và anh tới hỏi em câu đó và đêm cuối nhỉ?
Dialogue: 0,0:16:07.86,0:16:09.65,Default,,0000,0000,0000,,- Đêm cuối ư?\N- Đúng vậy.
Dialogue: 0,0:16:10.03,0:16:14.03,Default,,0000,0000,0000,,Hỏi em vào ngày cuối cùng em ở đây.\NĐể xem chuyện gì sẽ xảy ra.
Dialogue: 0,0:16:14.99,0:16:16.24,Default,,0000,0000,0000,,Thú vị lắm cho coi.
Dialogue: 0,0:16:16.66,0:16:17.66,Default,,0000,0000,0000,,Phải rồi.
Dialogue: 0,0:16:18.24,0:16:22.46,Default,,0000,0000,0000,,Ý kiến rất hay. Một kế hoạch rất hoàn hảo.\N"Đêm cuối cùng".
Dialogue: 0,0:16:22.58,0:16:24.00,Default,,0000,0000,0000,,Đêm cuối cùng.
Dialogue: 0,0:16:26.88,0:16:28.46,Default,,0000,0000,0000,,Cám ơn em rất nhiều.
Dialogue: 0,0:16:29.63,0:16:31.13,Default,,0000,0000,0000,,Ngủ ngon nha Timmy.
Dialogue: 0,0:16:38.51,0:16:40.43,Default,,0000,0000,0000,,Bài học số 1,
Dialogue: 0,0:16:40.56,0:16:43.73,Default,,0000,0000,0000,,dù bạn có bao nhiêu thời gian đi chăng nữa\Ncũng không thể khiến một người yêu bạn.
Dialogue: 0,0:16:43.85,0:16:44.85,Default,,0000,0000,0000,,Tạm biệt!
Dialogue: 0,0:16:46.06,0:16:48.27,Default,,0000,0000,0000,,Rồi tình yêu của đời tôi cứ thế rời đi.
Dialogue: 0,0:16:49.78,0:16:53.53,Default,,0000,0000,0000,,Và một thời gian sau, tới lượt tôi lên đường.
Dialogue: 0,0:16:56.28,0:16:59.28,Default,,0000,0000,0000,,Cậu cho con.\NĐừng tiêu hết trong một lần nha.
Dialogue: 0,0:17:00.99,0:17:01.99,Default,,0000,0000,0000,,Con cám ơn cậu.
Dialogue: 0,0:17:03.50,0:17:07.42,Default,,0000,0000,0000,,Đừng gọi về quá nhiều nhé,\Nmẹ con không thích bị làm phiền đâu.
Dialogue: 0,0:17:07.54,0:17:09.71,Default,,0000,0000,0000,,Vâng, con cảm ơn bố.
Dialogue: 0,0:17:28.11,0:17:32.48,Default,,0000,0000,0000,,Tôi đã bắt một chuyến tàu tới London,\Nđể tìm kiếm tương lai cũng như nửa còn lại của đời mình.
Dialogue: 0,0:17:35.15,0:17:37.41,Default,,0000,0000,0000,,Tôi sống tại St John's Wood, gần đường Abbey,
Dialogue: 0,0:17:37.49,0:17:40.66,Default,,0000,0000,0000,,với một nhà soạn kịch bạn bố tôi, tên là Harry.
Dialogue: 0,0:17:40.95,0:17:44.70,Default,,0000,0000,0000,,Chân ướt chân ráo tới đây, có một mối quan hệ gia đình kiểu vậy thật may mắn.
Dialogue: 0,0:17:57.63,0:18:01.39,Default,,0000,0000,0000,,Chú mày muốn cái mẹ gì vậy?
Dialogue: 0,0:18:03.60,0:18:04.72,Default,,0000,0000,0000,,Cháu là con trai bố James.
Dialogue: 0,0:18:04.85,0:18:06.02,Default,,0000,0000,0000,,Ai cơ?
Dialogue: 0,0:18:07.23,0:18:09.35,Default,,0000,0000,0000,,- James Lake.\N- Lão ấy có chuyện gì vậy?
Dialogue: 0,0:18:12.02,0:18:13.78,Default,,0000,0000,0000,,Bố nói là chú có phòng cho thuê.
Dialogue: 0,0:18:15.19,0:18:17.61,Default,,0000,0000,0000,,Vào nhà, đợi ở đây.
Dialogue: 0,0:18:18.61,0:18:21.95,Default,,0000,0000,0000,,Phải im lặng. Không được gây tiếng động.
Dialogue: 0,0:18:22.87,0:18:24.45,Default,,0000,0000,0000,,Không ta sẽ giết chú bay.
Dialogue: 0,0:18:35.05,0:18:37.59,Default,,0000,0000,0000,,Huỵch toẹt ra thì ta đang có một ý tưởng\Nhay ho nhất đời
Dialogue: 0,0:18:37.67,0:18:39.22,Default,,0000,0000,0000,,thì chú mày bấm chuông.
Dialogue: 0,0:18:39.89,0:18:41.64,Default,,0000,0000,0000,,Giờ thì ta quên bà nó rồi.
Dialogue: 0,0:18:42.43,0:18:44.39,Default,,0000,0000,0000,,Bay giỏi lắm nhóc.
Dialogue: 0,0:18:44.52,0:18:46.10,Default,,0000,0000,0000,,Bố nhóc giờ ra sao rồi?
Dialogue: 0,0:18:46.39,0:18:50.48,Default,,0000,0000,0000,,Quái dị. Ta luôn nghĩ bố bay là gã quái dị.
Dialogue: 0,0:18:50.60,0:18:51.40,Default,,0000,0000,0000,,Thật ạ?
Dialogue: 0,0:18:51.48,0:18:53.98,Default,,0000,0000,0000,,Thật. Mà ta cũng chưa bao giờ ưa lão.
Dialogue: 0,0:18:55.03,0:18:57.53,Default,,0000,0000,0000,,Mẹ bay vẫn trông giống Andy Warhol chứ hả?
Dialogue: 0,0:18:57.65,0:18:58.65,Default,,0000,0000,0000,,Dạ?
Dialogue: 0,0:19:00.03,0:19:02.62,Default,,0000,0000,0000,,Ờ, nhân tiện, đó là vợ ta.
Dialogue: 0,0:19:02.78,0:19:04.24,Default,,0000,0000,0000,,Đẹp ghê.
Dialogue: 0,0:19:04.37,0:19:05.81,Default,,0000,0000,0000,,Chú mày đừng để ấn tượng đầu đánh lừa.
Dialogue: 0,0:19:07.08,0:19:09.00,Default,,0000,0000,0000,,Một con bò cái chua ngoa.
Dialogue: 0,0:19:10.12,0:19:12.29,Default,,0000,0000,0000,,Nhưng rồi cuối cùng bay sẽ nhận ra
Dialogue: 0,0:19:12.79,0:19:15.46,Default,,0000,0000,0000,,bà ấy là người tốt nhất thế giới.
Dialogue: 0,0:19:16.21,0:19:18.46,Default,,0000,0000,0000,,Đó cũng chính là lý do bà ấy bỏ ta.
Dialogue: 0,0:19:21.01,0:19:22.59,Default,,0000,0000,0000,,Phòng cậu đây.
Dialogue: 0,0:19:23.22,0:19:26.97,Default,,0000,0000,0000,,Đừng có gây ồn ào nhiều,\Nnhất là lúc phang nhau nhé.
Dialogue: 0,0:19:27.60,0:19:28.64,Default,,0000,0000,0000,,Cơ hội còn chẳng có đâu ạ.
Dialogue: 0,0:19:28.73,0:19:31.44,Default,,0000,0000,0000,,Ngon, hai thằng thua cuộc trong một căn nhà.
Dialogue: 0,0:19:31.98,0:19:33.52,Default,,0000,0000,0000,,Còn đó là con gái ta.
Dialogue: 0,0:19:35.15,0:19:38.82,Default,,0000,0000,0000,,Thích thì cứ phang nó.\NMà rõ ràng là thằng nào cũng làm rồi.
Dialogue: 0,0:19:41.11,0:19:43.57,Default,,0000,0000,0000,,Thật là không có xí hy vọng nào cho sự lãng mạn hết.
Dialogue: 0,0:19:44.32,0:19:46.99,Default,,0000,0000,0000,,Và công việc cũng chẳng hi vọng gì luôn.
Dialogue: 0,0:19:47.41,0:19:50.12,Default,,0000,0000,0000,,Cái ngành Luật này\Nhình như chỉ toàn đàn ông.
Dialogue: 0,0:19:52.33,0:19:56.67,Default,,0000,0000,0000,,- Xin chào.\N- Tôi là Rory. Rất vui được gặp cậu\Nbằng xương bằng thịt.
Dialogue: 0,0:19:57.13,0:20:00.76,Default,,0000,0000,0000,,Ai mà biết được chứ,\Nkhéo sau này chúng ta là đồng nghiệp thân cũng nên.
Dialogue: 0,0:20:02.13,0:20:03.84,Default,,0000,0000,0000,,- Cậu là thằng khỉ nào vậy?\N- Tim Lake.
Dialogue: 0,0:20:04.26,0:20:06.10,Default,,0000,0000,0000,,Tôi hy vọng cậu khá hơn thằng hề kìa.
Dialogue: 0,0:20:06.76,0:20:08.26,Default,,0000,0000,0000,,Lại đây, Roger.
Dialogue: 0,0:20:08.39,0:20:09.89,Default,,0000,0000,0000,,Là Rory chứ.
Dialogue: 0,0:20:10.02,0:20:11.56,Default,,0000,0000,0000,,Tôi đã ở đây 1 năm rưỡi rồi.
Dialogue: 0,0:20:11.64,0:20:14.23,Default,,0000,0000,0000,,Thực ra nói vậy cho đỡ tủi thôi,\Nchớ cũng 2 năm rồi đấy.
Dialogue: 0,0:20:16.32,0:20:20.90,Default,,0000,0000,0000,,Vậy là 6 tháng cô đơn đã qua đi\Nvà vẫn chỉ có mình tôi và Harry nơi này.
Dialogue: 0,0:20:21.03,0:20:23.53,Default,,0000,0000,0000,,Tôi thì ăn Luật, uống Luật, ngủ Luật.
Dialogue: 0,0:20:23.66,0:20:26.91,Default,,0000,0000,0000,,Còn Harry thì vẫn tận tụy cho vở kịch mới.
Dialogue: 0,0:20:28.91,0:20:31.54,Default,,0000,0000,0000,,Dù có quá trời phụ nữ trên đời này.
Dialogue: 0,0:20:31.66,0:20:34.79,Default,,0000,0000,0000,,Tôi mãi mãi vẫn cứ phải cặp với Rory.
Dialogue: 0,0:20:34.92,0:20:35.92,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:20:36.29,0:20:38.09,Default,,0000,0000,0000,,Tới một ngày nỗi buồn chấm dứt.
Dialogue: 0,0:20:38.55,0:20:43.47,Default,,0000,0000,0000,,Vào một đêm kỳ lạ cùng với Jay kỳ dị,\Nphép màu đã xảy ra.
Dialogue: 0,0:20:44.13,0:20:45.97,Default,,0000,0000,0000,,Mấy người phục vụ ở đó,
Dialogue: 0,0:20:46.35,0:20:48.05,Default,,0000,0000,0000,,tôi nói cho nghe, họ bị mù đấy.
Dialogue: 0,0:20:48.14,0:20:49.26,Default,,0000,0000,0000,,Cậu đùa tôi đấy à.
Dialogue: 0,0:20:49.39,0:20:52.89,Default,,0000,0000,0000,,Tôi không đùa đâu nha.\NHọ giống dơi. Dơi đấy nhé.
Dialogue: 0,0:20:53.35,0:20:54.98,Default,,0000,0000,0000,,Rất hân hạnh được tiếp đón các anh.
Dialogue: 0,0:20:55.06,0:20:56.98,Default,,0000,0000,0000,,Hy vọng các anh tận hưởng nhiều niềm vui.
Dialogue: 0,0:20:57.06,0:20:59.19,Default,,0000,0000,0000,,Carlo sẽ đưa các anh tới bàn của mình.
Dialogue: 0,0:20:59.32,0:21:01.57,Default,,0000,0000,0000,,- Rất tuyệt.\N- Đi theo tôi nào.
Dialogue: 0,0:21:01.69,0:21:04.28,Default,,0000,0000,0000,,Cậu hãy đặt tay phải lên vai tôi.
Dialogue: 0,0:21:04.36,0:21:06.78,Default,,0000,0000,0000,,Và bạn cậu đặt tay lên vai cậu.
Dialogue: 0,0:21:10.41,0:21:13.91,Default,,0000,0000,0000,,Để ý bậc thang nha\Nở trong đó...
Dialogue: 0,0:21:14.16,0:21:16.42,Default,,0000,0000,0000,,tối lắm đấy.
Dialogue: 0,0:21:18.38,0:21:20.09,Default,,0000,0000,0000,,Hy vọng các cậu không phiền...
Dialogue: 0,0:21:20.17,0:21:22.55,Default,,0000,0000,0000,,tôi sẽ để các cậu ngồi bên cạnh hai cô gái trẻ trung này.
Dialogue: 0,0:21:22.63,0:21:24.72,Default,,0000,0000,0000,,Không hề!\NTuyệt ấy chứ!
Dialogue: 0,0:21:24.84,0:21:27.01,Default,,0000,0000,0000,,Ái chà, anh cũng bá đạo quá ha.
Dialogue: 0,0:21:27.09,0:21:28.47,Default,,0000,0000,0000,,Đương nhiên.\NLại còn đẹp trai nữa chứ!
Dialogue: 0,0:21:29.64,0:21:31.22,Default,,0000,0000,0000,,Ô, có người ngồi đây à.
Dialogue: 0,0:21:31.35,0:21:33.52,Default,,0000,0000,0000,,- Chào.\N- Xin chào. Tôi là Mary.
Dialogue: 0,0:21:33.64,0:21:36.31,Default,,0000,0000,0000,,Tôi là Tim. Mẹ tôi cũng tên Mary đấy.
Dialogue: 0,0:21:36.44,0:21:39.02,Default,,0000,0000,0000,,- Tên ấy có hợp với bà không?\N- Cũng tương đối.
Dialogue: 0,0:21:39.15,0:21:42.61,Default,,0000,0000,0000,,Dù vậy bà rất rắn rỏi, nên tôi nghĩ tên Bernard\Nchắc sẽ hợp hơn.
Dialogue: 0,0:21:45.40,0:21:48.11,Default,,0000,0000,0000,,Có gì đó chạm vào khuỷu tay tôi!
Dialogue: 0,0:21:48.24,0:21:49.57,Default,,0000,0000,0000,,Không phải tôi đâu nha.
Dialogue: 0,0:21:49.66,0:21:53.08,Default,,0000,0000,0000,,Vậy còn tệ nữa.\NKhông phải anh thì là ai được nhỉ?
Dialogue: 0,0:21:53.20,0:21:56.41,Default,,0000,0000,0000,,Cũng không phải tôi, vì tôi đang chạm vào chỗ khác rồi.
Dialogue: 0,0:21:56.54,0:21:59.17,Default,,0000,0000,0000,,Vâng, và giờ anh bỏ ra ngay được không? Cảm ơn.
Dialogue: 0,0:21:59.54,0:22:04.13,Default,,0000,0000,0000,,Trong hai cô, nói thật đi, ai xinh hơn?
Dialogue: 0,0:22:04.21,0:22:05.76,Default,,0000,0000,0000,,- Tôi.\N- Đúng, cô ấy.
Dialogue: 0,0:22:05.88,0:22:07.01,Default,,0000,0000,0000,,Toẹt vời!
Dialogue: 0,0:22:07.13,0:22:08.68,Default,,0000,0000,0000,,Thực ra tôi trông giống Kate Moss.
Dialogue: 0,0:22:08.80,0:22:10.34,Default,,0000,0000,0000,,Thật á?
Dialogue: 0,0:22:10.47,0:22:13.31,Default,,0000,0000,0000,,Không, tôi trông giống con sóc hơn.
Dialogue: 0,0:22:14.68,0:22:16.02,Default,,0000,0000,0000,,Cô có thích Kate Moss không?
Dialogue: 0,0:22:16.14,0:22:17.52,Default,,0000,0000,0000,,Tôi phát cuồng vì cô ấy.
Dialogue: 0,0:22:17.64,0:22:20.81,Default,,0000,0000,0000,,Hôm nay tôi đã mặc đồ giống cô ấy đấy.\NCòn anh thì sao?
Dialogue: 0,0:22:20.94,0:22:23.11,Default,,0000,0000,0000,,Không, không. Tôi mà mặc đồ của cổ sẽ rất tởm.
Dialogue: 0,0:22:25.65,0:22:28.03,Default,,0000,0000,0000,,Không thể tin được. Tuần sau là sinh nhật cô sao?
Dialogue: 0,0:22:28.11,0:22:32.16,Default,,0000,0000,0000,,Jay bạn anh có vẻ nhiệt tình ghê.
Dialogue: 0,0:22:32.45,0:22:34.58,Default,,0000,0000,0000,,Tôi ghét cậu ta lắm.
Dialogue: 0,0:22:34.70,0:22:35.62,Default,,0000,0000,0000,,Joanna thích kiểu thế nào?
Dialogue: 0,0:22:35.75,0:22:38.50,Default,,0000,0000,0000,,Cơ bản thì cậu ấy cũng lẳng lơ lắm.
Dialogue: 0,0:22:39.25,0:22:41.17,Default,,0000,0000,0000,,Tôi đoán đây là bánh kem dâu.
Dialogue: 0,0:22:41.25,0:22:42.38,Default,,0000,0000,0000,,Cô muốn ăn chút không?
Dialogue: 0,0:22:42.46,0:22:43.79,Default,,0000,0000,0000,,Được, tôi sẽ thử.
Dialogue: 0,0:22:43.88,0:22:45.09,Default,,0000,0000,0000,,Miệng cô đâu nhỉ?
Dialogue: 0,0:22:45.17,0:22:46.80,Default,,0000,0000,0000,,Nó...
Dialogue: 0,0:22:47.67,0:22:49.05,Default,,0000,0000,0000,,đây này.
Dialogue: 0,0:22:49.18,0:22:50.51,Default,,0000,0000,0000,,Đây hả?
Dialogue: 0,0:22:50.68,0:22:52.47,Default,,0000,0000,0000,,Chết, đó là chỗ nào vậy?
Dialogue: 0,0:22:52.60,0:22:54.39,Default,,0000,0000,0000,,Là mắt tôi đấy.
Dialogue: 0,0:22:54.51,0:22:57.39,Default,,0000,0000,0000,,Tôi nghĩ là có khá nhiều...\Nrất nhiều...
Dialogue: 0,0:22:57.48,0:22:59.52,Default,,0000,0000,0000,,kem dâu trên mắt tôi mất rồi.
Dialogue: 0,0:22:59.64,0:23:00.94,Default,,0000,0000,0000,,Tôi rất xin lỗi.
Dialogue: 0,0:23:01.02,0:23:04.27,Default,,0000,0000,0000,,Không. Cảm ơn anh.\NĐó là một trải nghiệm mới đối với tôi.
Dialogue: 0,0:23:06.82,0:23:10.40,Default,,0000,0000,0000,,Hay là, chúng ta gặp nhau bên ngoài nhé...
Dialogue: 0,0:23:10.74,0:23:12.41,Default,,0000,0000,0000,,Được được, rất tuyệt.
Dialogue: 0,0:23:12.53,0:23:14.33,Default,,0000,0000,0000,,Tuyệt vời.\NSợ ghê ha.
Dialogue: 0,0:23:14.45,0:23:16.70,Default,,0000,0000,0000,,Đúng vậy, có chút sợ hãi.
Dialogue: 0,0:23:17.00,0:23:20.16,Default,,0000,0000,0000,,Lạy Chúa tôi, tôi mê luôn mất rồi.\NCậu thế nào?
Dialogue: 0,0:23:20.29,0:23:23.00,Default,,0000,0000,0000,,Tôi cũng không biết nữa\Nnhưng cô ấy có vẻ rất tuyệt.
Dialogue: 0,0:23:23.09,0:23:24.29,Default,,0000,0000,0000,,Shh!
Dialogue: 0,0:23:25.50,0:23:27.21,Default,,0000,0000,0000,,Joanna? | Jay.
Dialogue: 0,0:23:27.34,0:23:29.42,Default,,0000,0000,0000,,Chúa ơi, cô xinh thật đấy.
Dialogue: 0,0:23:29.55,0:23:31.18,Default,,0000,0000,0000,,Sao cô muốn ra sớm vậy nhỉ?
Dialogue: 0,0:23:31.30,0:23:32.89,Default,,0000,0000,0000,,Tôi vẫn có thể ngồi lâu thêm chút nữa.
Dialogue: 0,0:23:33.01,0:23:35.93,Default,,0000,0000,0000,,Bọn tôi có việc phải đi.\NNhưng nếu anh giúp tôi gọi xe thì chắc tôi sẽ cho anh số đấy.
Dialogue: 0,0:23:36.01,0:23:37.01,Default,,0000,0000,0000,,Rất sẵn lòng.
Dialogue: 0,0:23:37.10,0:23:38.81,Default,,0000,0000,0000,,Hoặc có thể không cho.\NVẫn chưa biết được.
Dialogue: 0,0:23:38.85,0:23:40.35,Default,,0000,0000,0000,,Tôi sẽ không cho hắn đâu!
Dialogue: 0,0:24:07.88,0:24:09.63,Default,,0000,0000,0000,,- Xin chào.\N- Chào anh.
Dialogue: 0,0:24:10.92,0:24:13.30,Default,,0000,0000,0000,,- Cậu ấy...\N- Cô ấy đi cùng Jay...
Dialogue: 0,0:24:13.43,0:24:16.05,Default,,0000,0000,0000,,Cô ấy đưa cậu ấy đi...\NTôi cũng không biết nữa.
Dialogue: 0,0:24:16.18,0:24:17.18,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:24:17.35,0:24:19.52,Default,,0000,0000,0000,,Tôi đoán là...
Dialogue: 0,0:24:19.64,0:24:23.31,Default,,0000,0000,0000,,Tôi hỏi xin cô số điện thoại có sao không?
Dialogue: 0,0:24:25.31,0:24:26.31,Default,,0000,0000,0000,,Không sao!
Dialogue: 0,0:24:26.65,0:24:29.69,Default,,0000,0000,0000,,Phòng trường hợp cần gọi về...
Dialogue: 0,0:24:30.32,0:24:31.86,Default,,0000,0000,0000,,Một số chuyện.
Dialogue: 0,0:24:32.61,0:24:33.61,Default,,0000,0000,0000,,Được mà.
Dialogue: 0,0:24:37.83,0:24:39.16,Default,,0000,0000,0000,,Cô có thể...
Dialogue: 0,0:24:39.87,0:24:41.08,Default,,0000,0000,0000,,Là Mary nha.
Dialogue: 0,0:24:41.25,0:24:42.45,Default,,0000,0000,0000,,Mary.
Dialogue: 0,0:24:44.62,0:24:45.88,Default,,0000,0000,0000,,Xong rồi.
Dialogue: 0,0:24:46.50,0:24:48.67,Default,,0000,0000,0000,,Tôi đã nghĩ điện thoại này vừa cũ vừa cùi
Dialogue: 0,0:24:49.38,0:24:51.59,Default,,0000,0000,0000,,nhưng giờ nó đã thành thứ đáng giá nhất của tôi rồi.
Dialogue: 0,0:24:52.63,0:24:54.43,Default,,0000,0000,0000,,Anh thực sự thích tôi sao?
Dialogue: 0,0:24:56.09,0:24:58.68,Default,,0000,0000,0000,,Kể cả bộ váy này hả?
Dialogue: 0,0:24:58.81,0:25:00.93,Default,,0000,0000,0000,,Tôi thích nó lắm.
Dialogue: 0,0:25:01.56,0:25:05.14,Default,,0000,0000,0000,,Còn tóc tôi nữa? Có bị nâu quá không nhỉ?
Dialogue: 0,0:25:05.48,0:25:07.02,Default,,0000,0000,0000,,Tôi thích màu nâu lắm.
Dialogue: 0,0:25:08.73,0:25:10.02,Default,,0000,0000,0000,,Tôi cũng mới cắt mái đấy.
Dialogue: 0,0:25:10.11,0:25:12.32,Default,,0000,0000,0000,,Tóc mái ấy là đẹp nhất.\NRất hợp với cô.
Dialogue: 0,0:25:12.40,0:25:13.53,Default,,0000,0000,0000,,Mary!
Dialogue: 0,0:25:13.65,0:25:16.99,Default,,0000,0000,0000,,Ta phải đi thôi! Tớ bắt được xe rồi!\NGã quái thai bạn anh ta sắp tấn công tớ mất!
Dialogue: 0,0:25:17.12,0:25:19.45,Default,,0000,0000,0000,,Tớ đến ngay đây.
Dialogue: 0,0:25:19.58,0:25:21.16,Default,,0000,0000,0000,,2 giây thôi.
Dialogue: 0,0:25:22.12,0:25:23.95,Default,,0000,0000,0000,,Hy vọng tôi sẽ được gặp lại anh.
Dialogue: 0,0:25:24.58,0:25:25.71,Default,,0000,0000,0000,,Chắc chắn là vậy.
Dialogue: 0,0:25:26.25,0:25:28.58,Default,,0000,0000,0000,,Tốt rồi.
Dialogue: 0,0:25:30.17,0:25:33.55,Default,,0000,0000,0000,,Ngủ ngon nha.
Dialogue: 0,0:25:33.55,0:25:52.19,Default,,0000,0000,0000,,<FONT COLOR="#CCCCFF">~ Biên dịch: <FONT COLOR="#99CCFF">Cờ Rá, Dương Nguyễn Hoàng Khánh<FONT COLOR="#CCCCFF"> ~
Dialogue: 0,0:25:52.19,0:26:04.29,Default,,0000,0000,0000,,<FONT COLOR="#CCCCFF">~ Hiệu chỉnh: <FONT COLOR="#99CCFF">Mèo mập mưu mô<FONT COLOR="#CCCCFF"> ~
Dialogue: 0,0:26:10.96,0:26:12.54,Default,,0000,0000,0000,,Sao vậy?
Dialogue: 0,0:26:12.80,0:26:14.88,Default,,0000,0000,0000,,Chú làm sao mà hết loạn lên thế?
Dialogue: 0,0:26:15.17,0:26:18.09,Default,,0000,0000,0000,,Không có gì. Ta bị thương nhẹ thôi.
Dialogue: 0,0:26:18.22,0:26:19.51,Default,,0000,0000,0000,,- Đây chú này.\N- Cảm ơn.
Dialogue: 0,0:26:23.14,0:26:25.31,Default,,0000,0000,0000,,Chắc cậu vẫn nhớ, hôm nay vở kịch của ta công diễn.
Dialogue: 0,0:26:25.89,0:26:27.48,Default,,0000,0000,0000,,Ôi đúng rồi. Thế nào rồi ạ?
Dialogue: 0,0:26:27.60,0:26:29.14,Default,,0000,0000,0000,,Ổn. Ổn ghê lắm.
Dialogue: 0,0:26:29.52,0:26:33.07,Default,,0000,0000,0000,,Cậu có thể tới và giới thiệu với mọi người rằng\N vở kịch đã sẵn sàng.
Dialogue: 0,0:26:33.19,0:26:35.19,Default,,0000,0000,0000,,- Thật ư?\N- Thật.
Dialogue: 0,0:26:35.32,0:26:38.86,Default,,0000,0000,0000,,Cho tới khi, điều hay ho nhất đã xảy ra
Dialogue: 0,0:26:38.99,0:26:43.74,Default,,0000,0000,0000,,rằng diễn viên chính đã làm nên cú quên thoại ngoạn mục nhất lịch sử.
Dialogue: 0,0:26:43.87,0:26:45.41,Default,,0000,0000,0000,,- Không thể nào.\N- Có, có đấy.
Dialogue: 0,0:26:46.87,0:26:48.46,Default,,0000,0000,0000,,Hắn ta không những quên thoại
Dialogue: 0,0:26:48.58,0:26:50.12,Default,,0000,0000,0000,,mà còn quên khúc quan trọng nhất
Dialogue: 0,0:26:50.21,0:26:52.63,Default,,0000,0000,0000,,trong khi không một diễn viên nào quên thoại
Dialogue: 0,0:26:52.75,0:26:55.13,Default,,0000,0000,0000,,trong biên niên sử kịch nghệ này hết.
Dialogue: 0,0:26:55.67,0:26:59.05,Default,,0000,0000,0000,,Sẽ chẳng có ai nói "Một kiệt tác đã được công diễn"
Dialogue: 0,0:26:59.13,0:27:02.80,Default,,0000,0000,0000,,mà giờ họ sẽ lải nhải\N"Một kiệt tác đã ăn hành".
Dialogue: 0,0:27:03.47,0:27:04.97,Default,,0000,0000,0000,,Thật kinh khủng.
Dialogue: 0,0:27:05.89,0:27:07.60,Default,,0000,0000,0000,,Nói vậy vẫn còn nhẹ đấy.
Dialogue: 0,0:27:08.44,0:27:13.06,Default,,0000,0000,0000,,Phải ví nó như mở màn của vở Titanic\Nmà không có một ai sống sót.
Dialogue: 0,0:27:13.73,0:27:16.07,Default,,0000,0000,0000,,Không phụ nữ, không trẻ em,
Dialogue: 0,0:27:16.48,0:27:18.74,Default,,0000,0000,0000,,và không có cả Kate Winslet.
Dialogue: 0,0:27:19.20,0:27:20.86,Default,,0000,0000,0000,,Ngỏm hết.
Dialogue: 0,0:27:22.53,0:27:24.16,Default,,0000,0000,0000,,Được rồi, để xem cháu làm được gì.
Dialogue: 0,0:27:24.24,0:27:25.62,Default,,0000,0000,0000,,Ý cậu là sao?
Dialogue: 0,0:27:26.41,0:27:28.37,Default,,0000,0000,0000,,Cậu tính làm gì?\NCậu định gọi cho mọi nhà phê bình
Dialogue: 0,0:27:28.50,0:27:30.41,Default,,0000,0000,0000,,ở đất London này,\Nnói sẽ sẵn sàng phục vụ họ tân tình
Dialogue: 0,0:27:30.54,0:27:35.25,Default,,0000,0000,0000,,nếu họ lờ đi sự thật rằng họ phải ngồi trong im lặng\Ntới nửa tiếng đồng hồ
Dialogue: 0,0:27:35.38,0:27:40.47,Default,,0000,0000,0000,,chỉ để chờ tay diễn viên nhớ lời thoại sao?
Dialogue: 0,0:27:40.59,0:27:42.34,Default,,0000,0000,0000,,Cũng không tới mức đó đâu.
Dialogue: 0,0:27:58.99,0:27:59.99,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:28:03.62,0:28:08.79,Default,,0000,0000,0000,,Chào ngài Tom. Tôi là bạn của Harry.\NLời thoại của ngài tới đâu rồi?
Dialogue: 0,0:28:10.12,0:28:12.37,Default,,0000,0000,0000,,Hả? Ý cậu "lời thoại" là sao?
Dialogue: 0,0:28:13.12,0:28:14.79,Default,,0000,0000,0000,,Thì là, cảnh trong phiên tòa ấy,
Dialogue: 0,0:28:14.88,0:28:17.59,Default,,0000,0000,0000,,có mấy câu thoại cũng hơi phức tạp chút.
Dialogue: 0,0:28:17.71,0:28:20.09,Default,,0000,0000,0000,,Tôi nghĩ nếu như ngài bỏ chút thời gian
Dialogue: 0,0:28:20.72,0:28:22.17,Default,,0000,0000,0000,,để xem lại lần cuối chỗ đó
Dialogue: 0,0:28:22.26,0:28:25.64,Default,,0000,0000,0000,,trước bắt đầu thì tốt.\NXem qua lại thôi vậy.
Dialogue: 0,0:28:26.89,0:28:29.14,Default,,0000,0000,0000,,Biến khỏi đây ngay.
Dialogue: 0,0:28:29.27,0:28:34.02,Default,,0000,0000,0000,,Cậu mất trí à? Cút ngay. Đồ điên.
Dialogue: 0,0:28:34.15,0:28:35.90,Default,,0000,0000,0000,,Đồ ra vẻ...
Dialogue: 0,0:28:47.99,0:28:50.41,Default,,0000,0000,0000,,Tới lượt Luật sư bào chữa.
Dialogue: 0,0:29:00.80,0:29:05.47,Default,,0000,0000,0000,,Tôi đã phải sống quá nhiều năm khổ cực...
Dialogue: 0,0:29:05.76,0:29:07.80,Default,,0000,0000,0000,,- Tuyệt quá.\N- Nhưng không bao giờ...
Dialogue: 0,0:29:07.93,0:29:11.97,Default,,0000,0000,0000,,tôi mất nhiều thời gian
Dialogue: 0,0:29:12.64,0:29:17.10,Default,,0000,0000,0000,,để nhận ra một sai lầm của công lý.
Dialogue: 0,0:29:22.32,0:29:26.66,Default,,0000,0000,0000,,Bên nguyên có muốn nói thêm điều gì không?
Dialogue: 0,0:30:11.08,0:30:13.33,Default,,0000,0000,0000,,Xin lỗi. Cho tôi đi qua với.
Dialogue: 0,0:30:20.67,0:30:25.26,Default,,0000,0000,0000,,Bên nguyên có muốn nói thêm điều gì không?
Dialogue: 0,0:30:32.35,0:30:33.43,Default,,0000,0000,0000,,Psst!
Dialogue: 0,0:30:40.86,0:30:41.90,Default,,0000,0000,0000,,Thưa các vị...
Dialogue: 0,0:30:44.28,0:30:45.28,Default,,0000,0000,0000,,Thưa các vị...
Dialogue: 0,0:30:45.82,0:30:50.32,Default,,0000,0000,0000,,Tôi nhận thấy, vụ kiện ngày hôm nay vô cùng quan trọng.
Dialogue: 0,0:30:50.45,0:30:52.20,Default,,0000,0000,0000,,Tuy nhiên,
Dialogue: 0,0:30:52.78,0:30:55.66,Default,,0000,0000,0000,,chính nó đã cho chúng ta thấy rõ
Dialogue: 0,0:30:57.54,0:31:00.37,Default,,0000,0000,0000,,được những điều đơn giản mà lại rõ ràng.
Dialogue: 0,0:31:03.38,0:31:05.13,Default,,0000,0000,0000,,Đó chính là cuộc đời
Dialogue: 0,0:31:05.71,0:31:07.67,Default,,0000,0000,0000,,của một kẻ có tội!
Dialogue: 0,0:31:18.98,0:31:22.56,Default,,0000,0000,0000,,Lúc ấy một diễn viên có vẻ như hơi buồn ngủ...
Dialogue: 0,0:31:22.65,0:31:26.11,Default,,0000,0000,0000,,Cái đồ bỏ đi giữa chừng đây rồi.
Dialogue: 0,0:31:26.19,0:31:28.11,Default,,0000,0000,0000,,Bay đã lỡ khúc hay nhất của vở rồi đấy.
Dialogue: 0,0:31:28.24,0:31:29.24,Default,,0000,0000,0000,,Cháu xin lỗi.
Dialogue: 0,0:31:29.65,0:31:31.82,Default,,0000,0000,0000,,Cô thấy bộ này thế nào?
Dialogue: 0,0:31:32.16,0:31:33.37,Default,,0000,0000,0000,,Cũng được đấy chứ.
Dialogue: 0,0:31:33.45,0:31:36.58,Default,,0000,0000,0000,,Thật sao? Tôi thì không.\NQuá nâu.
Dialogue: 0,0:31:39.91,0:31:41.08,Default,,0000,0000,0000,,Mary!
Dialogue: 0,0:31:43.13,0:31:44.79,Default,,0000,0000,0000,,Không.
Dialogue: 0,0:31:45.63,0:31:47.17,Default,,0000,0000,0000,,Cô ấy biến mất rồi!
Dialogue: 0,0:32:02.35,0:32:06.36,Default,,0000,0000,0000,,Có 2 cô gái đã tới vào tối nay.\NMột trong hai người là người đẹp nhất hành tinh này.
Dialogue: 0,0:32:06.48,0:32:08.38,Default,,0000,0000,0000,,Cô còn lại thì trông khá lẳng lơ.
Dialogue: 0,0:32:08.42,0:32:10.36,Default,,0000,0000,0000,,Ngài có thấy tên họ không?
Dialogue: 0,0:32:10.49,0:32:14.28,Default,,0000,0000,0000,,Có. Và họ cũng rời đi lâu rồi.\NĐể xem nào...
Dialogue: 0,0:32:15.33,0:32:17.78,Default,,0000,0000,0000,,Không, tôi nghĩ là họ vào rồi ra luôn
Dialogue: 0,0:32:17.91,0:32:20.37,Default,,0000,0000,0000,,và họ cũng trả bằng tiền mặt nữa.
Dialogue: 0,0:32:20.79,0:32:22.50,Default,,0000,0000,0000,,Rất xin lỗi.
Dialogue: 0,0:32:22.62,0:32:24.38,Default,,0000,0000,0000,,Không sao. Được rồi.
Dialogue: 0,0:32:24.71,0:32:27.84,Default,,0000,0000,0000,,Đời tôi chấm hết rồi.\NCảm ơn.
Dialogue: 0,0:32:49.07,0:32:51.07,Default,,0000,0000,0000,,Vui lên đi nhóc.
Dialogue: 0,0:32:51.40,0:32:55.24,Default,,0000,0000,0000,,Cậu đang sống cùng với nhà soạn kịch\Nvĩ đại nhất nước Anh đấy.
Dialogue: 0,0:32:55.57,0:32:57.07,Default,,0000,0000,0000,,Ta chẳng mấy khi đọc những thứ này
Dialogue: 0,0:32:57.24,0:32:58.74,Default,,0000,0000,0000,,nhưng cái này kháng lại không nổi.
Dialogue: 0,0:32:58.91,0:33:03.91,Default,,0000,0000,0000,,"Harry Chapman đã tìm ra Tội Lỗi - của thiên tài"
Dialogue: 0,0:33:10.84,0:33:12.13,Default,,0000,0000,0000,,Cháu phải đi ngay đây.
Dialogue: 0,0:33:12.26,0:33:13.59,Default,,0000,0000,0000,,Sao thế?
Dialogue: 0,0:33:13.72,0:33:15.51,Default,,0000,0000,0000,,Cô ấy thích Kate Moss.
Dialogue: 0,0:33:59.14,0:34:00.97,Default,,0000,0000,0000,,Cảm ơn mày đã đi cùng với anh, Kittle.
Dialogue: 0,0:34:01.14,0:34:02.76,Default,,0000,0000,0000,,Thì còn việc khỉ gì để làm đâu.
Dialogue: 0,0:34:02.89,0:34:03.97,Default,,0000,0000,0000,,Jimmy thế nào?
Dialogue: 0,0:34:04.14,0:34:05.14,Default,,0000,0000,0000,,Hắn đá tôi rồi.
Dialogue: 0,0:34:05.27,0:34:06.27,Default,,0000,0000,0000,,Lại nữa sao.
Dialogue: 0,0:34:06.39,0:34:08.10,Default,,0000,0000,0000,,- Còn công việc?\N- Họ đuổi tôi rồi.
Dialogue: 0,0:34:08.23,0:34:09.23,Default,,0000,0000,0000,,Lũ ngu đấy.
Dialogue: 0,0:34:09.77,0:34:11.48,Default,,0000,0000,0000,,- Cafe không?\N- Toẹt vời.
Dialogue: 0,0:34:12.15,0:34:15.44,Default,,0000,0000,0000,,Ế, tôi mới để ý có con mèo ở đây nha.\NÔng thấy không?
Dialogue: 0,0:34:15.57,0:34:18.45,Default,,0000,0000,0000,,Có. Cũng được đấy chứ.
Dialogue: 0,0:34:19.49,0:34:20.99,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,0:34:21.95,0:34:23.08,Default,,0000,0000,0000,,Chúa ơi!
Dialogue: 0,0:34:23.20,0:34:24.33,Default,,0000,0000,0000,,Sao?
Dialogue: 0,0:34:24.95,0:34:26.33,Default,,0000,0000,0000,,Là cô ấy.
Dialogue: 0,0:34:28.08,0:34:29.67,Default,,0000,0000,0000,,Cô ấy!
Dialogue: 0,0:34:30.75,0:34:32.25,Default,,0000,0000,0000,,Chính là cô ấy!
Dialogue: 0,0:34:33.34,0:34:34.76,Default,,0000,0000,0000,,Shh!
Dialogue: 0,0:34:38.01,0:34:39.59,Default,,0000,0000,0000,,Đi mau đi giai.
Dialogue: 0,0:34:51.36,0:34:52.36,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:34:53.52,0:34:55.32,Default,,0000,0000,0000,,- Chào anh.\N- Chào cô.
Dialogue: 0,0:34:57.49,0:34:58.86,Default,,0000,0000,0000,,Cô có khỏe không?
Dialogue: 0,0:34:59.61,0:35:01.70,Default,,0000,0000,0000,,Có... tôi vẫn khỏe.
Dialogue: 0,0:35:02.03,0:35:04.20,Default,,0000,0000,0000,,Rất vui khi được gặp lại cô.
Dialogue: 0,0:35:04.37,0:35:06.54,Default,,0000,0000,0000,,Chúng ta đã gặp nhau bao giờ đâu.
Dialogue: 0,0:35:07.87,0:35:09.83,Default,,0000,0000,0000,,Ôi đệt.
Dialogue: 0,0:35:10.46,0:35:12.50,Default,,0000,0000,0000,,Đương nhiên là chưa gặp rồi.
Dialogue: 0,0:35:12.63,0:35:15.67,Default,,0000,0000,0000,,Xin lỗi nha, chắc là anh nhầm tôi\Nvới ai đó rồi.
Dialogue: 0,0:35:15.80,0:35:17.46,Default,,0000,0000,0000,,Không, không, không.
Dialogue: 0,0:35:18.13,0:35:19.80,Default,,0000,0000,0000,,Tên cô là Mary.
Dialogue: 0,0:35:21.05,0:35:23.85,Default,,0000,0000,0000,,Lạ ghê à nha.
Dialogue: 0,0:35:23.97,0:35:25.85,Default,,0000,0000,0000,,Sao anh biết vậy?
Dialogue: 0,0:35:26.85,0:35:28.73,Default,,0000,0000,0000,,Tôi thấy cô hợp với tên đó.
Dialogue: 0,0:35:29.23,0:35:30.52,Default,,0000,0000,0000,,Hợp thế nào?
Dialogue: 0,0:35:30.65,0:35:31.90,Default,,0000,0000,0000,,Mẹ tôi cũng tên Mary.
Dialogue: 0,0:35:32.06,0:35:33.52,Default,,0000,0000,0000,,Ra là tôi giống mẹ anh sao?
Dialogue: 0,0:35:34.07,0:35:36.19,Default,,0000,0000,0000,,Không. Cô đẹp hơn nhiều.
Dialogue: 0,0:35:39.40,0:35:40.82,Default,,0000,0000,0000,,Tóc mái của cô cũng đẹp nữa.
Dialogue: 0,0:35:40.95,0:35:42.36,Default,,0000,0000,0000,,Tôi mới cắt đấy.
Dialogue: 0,0:35:42.49,0:35:44.41,Default,,0000,0000,0000,,Có hơi ngắn một chút.
Dialogue: 0,0:35:44.58,0:35:47.41,Default,,0000,0000,0000,,Ừm... Cảm ơn anh...
Dialogue: 0,0:35:47.58,0:35:49.91,Default,,0000,0000,0000,,Rất vui được gặp anh.
Dialogue: 0,0:35:50.08,0:35:53.67,Default,,0000,0000,0000,,Nhưng tôi phải đi đây, bạn tôi đang đợi...
Dialogue: 0,0:35:53.75,0:35:56.17,Default,,0000,0000,0000,,Và anh thì là... một người hoàn toàn xa lạ.
Dialogue: 0,0:35:56.42,0:35:57.84,Default,,0000,0000,0000,,Hoàn toàn xa lạ.
Dialogue: 0,0:35:57.96,0:35:59.34,Default,,0000,0000,0000,,Đúng vậy, thật điên rồ mà.
Dialogue: 0,0:35:59.42,0:36:01.26,Default,,0000,0000,0000,,Đúng, cũng khá điên.
Dialogue: 0,0:36:01.38,0:36:02.76,Default,,0000,0000,0000,,- Chào Mary.\N- Chào.
Dialogue: 0,0:36:06.06,0:36:07.01,Default,,0000,0000,0000,,Ôi không.
Dialogue: 0,0:36:07.10,0:36:08.27,Default,,0000,0000,0000,,Sao rồi? Sao rồi?
Dialogue: 0,0:36:08.39,0:36:09.52,Default,,0000,0000,0000,,Tệ lắm.
Dialogue: 0,0:36:09.60,0:36:10.93,Default,,0000,0000,0000,,Tệ vậy đó hở?
Dialogue: 0,0:36:11.10,0:36:12.44,Default,,0000,0000,0000,,Ông ra đó lần nữa đi.
Dialogue: 0,0:36:13.35,0:36:15.27,Default,,0000,0000,0000,,Ông làm được mà.\NMàn 2 đi!
Dialogue: 0,0:36:18.69,0:36:22.03,Default,,0000,0000,0000,,Cô ấy luôn luôn...\NCô ấy luôn thay đổi.
Dialogue: 0,0:36:23.78,0:36:26.12,Default,,0000,0000,0000,,Xin lỗi. Lại là tôi đây.
Dialogue: 0,0:36:26.62,0:36:28.24,Default,,0000,0000,0000,,- Chào.\N- Xin lỗi.
Dialogue: 0,0:36:28.95,0:36:30.75,Default,,0000,0000,0000,,Joanna, đây là...
Dialogue: 0,0:36:31.21,0:36:32.41,Default,,0000,0000,0000,,Tim.
Dialogue: 0,0:36:32.54,0:36:33.71,Default,,0000,0000,0000,,Xin chào. Rất vui được gặp anh.
Dialogue: 0,0:36:36.29,0:36:39.96,Default,,0000,0000,0000,,Anh ta là một người hoàn toàn xa lạ\Ncó bà mẹ cũng tên là Mary.
Dialogue: 0,0:36:40.09,0:36:42.80,Default,,0000,0000,0000,,Tôi với Mary nãy có đôi chút kỳ quặc
Dialogue: 0,0:36:42.88,0:36:45.43,Default,,0000,0000,0000,,tôi đã nhầm cô ấy thành người khác, nhưng không phải.
Dialogue: 0,0:36:45.55,0:36:49.76,Default,,0000,0000,0000,,Tôi không biết có thể đi cùng với các cô được không
Dialogue: 0,0:36:50.73,0:36:54.64,Default,,0000,0000,0000,,vì em gái tôi Kit Kat giờ phải đi có việc.
Dialogue: 0,0:36:54.77,0:36:55.77,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:36:58.40,0:37:00.07,Default,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:37:00.40,0:37:01.82,Default,,0000,0000,0000,,Và...
Dialogue: 0,0:37:02.74,0:37:04.99,Default,,0000,0000,0000,,tôi thấy rất cô đơn.
Dialogue: 0,0:37:05.66,0:37:09.95,Default,,0000,0000,0000,,Chắc là không được đâu.
Dialogue: 0,0:37:10.08,0:37:13.16,Default,,0000,0000,0000,,Cũng được mà. Tớ thấy anh ta có nụ cười khá dễ thương,
Dialogue: 0,0:37:13.29,0:37:15.33,Default,,0000,0000,0000,,với lại tóc cũng ngộ nữa.
Dialogue: 0,0:37:17.08,0:37:18.08,Default,,0000,0000,0000,,Đồng ý đi.
Dialogue: 0,0:37:19.13,0:37:20.50,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:37:21.01,0:37:25.01,Default,,0000,0000,0000,,Nhưng anh phải đảm bảo rằng mình không phải là những loại người sau.
Dialogue: 0,0:37:25.18,0:37:26.80,Default,,0000,0000,0000,,1. Điên.
Dialogue: 0,0:37:26.89,0:37:28.01,Default,,0000,0000,0000,,Không hề.
Dialogue: 0,0:37:28.18,0:37:30.97,Default,,0000,0000,0000,,2. Mộ đạo.
Dialogue: 0,0:37:31.31,0:37:34.31,Default,,0000,0000,0000,,Tôi chỉ là fan nam số 1 của Kate Moss thôi.
Dialogue: 0,0:37:36.10,0:37:37.65,Default,,0000,0000,0000,,Thật á?
Dialogue: 0,0:37:37.77,0:37:39.11,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:37:39.19,0:37:42.53,Default,,0000,0000,0000,,Anh có nghĩ rằng điều cuốn hút nhất ở cô ấy\Nchính là ở quá khứ của cổ không?
Dialogue: 0,0:37:43.11,0:37:45.32,Default,,0000,0000,0000,,Từ những shot hình chụp khi mới vào nghề
Dialogue: 0,0:37:45.40,0:37:48.45,Default,,0000,0000,0000,,so với những shot bây giờ
Dialogue: 0,0:37:48.53,0:37:50.91,Default,,0000,0000,0000,,mặc dù thời trang đã lên một đẳng cấp khác
Dialogue: 0,0:37:50.99,0:37:54.62,Default,,0000,0000,0000,,nhưng ta vẫn thấy đó là một cô gái táo tợn khỏa thân trên bờ biển!
Dialogue: 0,0:37:55.71,0:37:57.25,Default,,0000,0000,0000,,Không thể phủ nhận điều đó.
Dialogue: 0,0:37:57.33,0:38:01.04,Default,,0000,0000,0000,,Hoàn toàn chính xác. Tôi cũng thấy y như vậy.
Dialogue: 0,0:38:02.38,0:38:03.42,Default,,0000,0000,0000,,Sữa nhé?
Dialogue: 0,0:38:03.55,0:38:04.55,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:38:04.72,0:38:06.63,Default,,0000,0000,0000,,- Đường?\N- Không.
Dialogue: 0,0:38:06.72,0:38:07.76,Default,,0000,0000,0000,,Bạn trai?
Dialogue: 0,0:38:07.89,0:38:08.97,Default,,0000,0000,0000,,Có rồi!
Dialogue: 0,0:38:09.14,0:38:11.30,Default,,0000,0000,0000,,Không. Cô không có bạn trai!
Dialogue: 0,0:38:12.56,0:38:14.89,Default,,0000,0000,0000,,Bộ tôi giống không có lắm hả?
Dialogue: 0,0:38:15.02,0:38:16.91,Default,,0000,0000,0000,,Trông tớ có giống đứa không bao giờ có bồ không?
Dialogue: 0,0:38:16.95,0:38:18.60,Default,,0000,0000,0000,,Đây là điều tệ nhất mà tôi từng nghe đấy.
Dialogue: 0,0:38:18.65,0:38:21.48,Default,,0000,0000,0000,,Tôi không có ý đó. Chỉ là tôi không ngờ được...
Dialogue: 0,0:38:22.65,0:38:24.73,Default,,0000,0000,0000,,Bạn trai mới sao?
Dialogue: 0,0:38:24.90,0:38:25.90,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:38:26.40,0:38:28.41,Default,,0000,0000,0000,,Anh ấy kia rồi. Rupert.
Dialogue: 0,0:38:29.37,0:38:31.24,Default,,0000,0000,0000,,- Anh ấy thật dễ thương.\N- Rupert?
Dialogue: 0,0:38:31.37,0:38:32.70,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:38:33.08,0:38:34.91,Default,,0000,0000,0000,,Xin lỗi anh đến muộn. Tại ba anh.
Dialogue: 0,0:38:36.25,0:38:37.25,Default,,0000,0000,0000,,Xin chào Rupee.
Dialogue: 0,0:38:38.54,0:38:39.54,Default,,0000,0000,0000,,Rupee?
Dialogue: 0,0:38:41.09,0:38:43.25,Default,,0000,0000,0000,,Đây là Tim.
Dialogue: 0,0:38:43.38,0:38:45.26,Default,,0000,0000,0000,,Bọn em không biết anh ấy.
Dialogue: 0,0:38:45.92,0:38:48.55,Default,,0000,0000,0000,,Này, anh nghĩ lát nữa tụi mình nên đi xem phim.
Dialogue: 0,0:38:48.68,0:38:50.30,Default,,0000,0000,0000,,Cùng ăn bắp rang, uống Coca,
Dialogue: 0,0:38:50.43,0:38:51.55,Default,,0000,0000,0000,,- và ở bên nhau.\N- Vâng.
Dialogue: 0,0:38:51.93,0:38:52.93,Default,,0000,0000,0000,,Được mà.
Dialogue: 0,0:38:54.27,0:38:56.73,Default,,0000,0000,0000,,Chính xác thì hai người gặp nhau khi nào vậy?
Dialogue: 0,0:38:57.27,0:38:59.27,Default,,0000,0000,0000,,Khoảng 1 tuần trước.
Dialogue: 0,0:39:00.06,0:39:02.90,Default,,0000,0000,0000,,Là một ngọn gió vô tình đưa tới.\NĐúng không mặt cún?
Dialogue: 0,0:39:03.27,0:39:06.28,Default,,0000,0000,0000,,Em phải dạy lại anh không được nói câu đó\Ntrước mặtt mọi người mới được.
Dialogue: 0,0:39:06.44,0:39:07.86,Default,,0000,0000,0000,,- Không được nói mặt cún sao?\N- Không.
Dialogue: 0,0:39:07.95,0:39:09.95,Default,,0000,0000,0000,,Tuyệt đối không.
Dialogue: 0,0:39:10.11,0:39:14.12,Default,,0000,0000,0000,,Kể thêm tôi nghe về cuộc gặp gỡ đầu tiên ấn tượng ấy nào?
Dialogue: 0,0:39:14.24,0:39:15.29,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:39:15.45,0:39:17.58,Default,,0000,0000,0000,,Hôm đó là... bao nhiêu nhỉ Joanna?
Dialogue: 0,0:39:18.12,0:39:19.62,Default,,0000,0000,0000,,17 tháng Sáu.
Dialogue: 0,0:39:19.79,0:39:21.29,Default,,0000,0000,0000,,Jo có tổ chức một buổi tiệc nhỏ.
Dialogue: 0,0:39:22.13,0:39:25.30,Default,,0000,0000,0000,,Nhờ có Rupert mà tôi mới được giải cứu khỏi bữa tiệc ấy.
Dialogue: 0,0:39:25.42,0:39:27.59,Default,,0000,0000,0000,,Bữa tiệc kinh khủng ấy tổ chức ở đâu vậy?
Dialogue: 0,0:39:27.72,0:39:29.80,Default,,0000,0000,0000,,Căn hộ của anh tôi.
Dialogue: 0,0:39:29.93,0:39:32.11,Default,,0000,0000,0000,,Vấn đề là ở đâu? Tôi muốn hỏi rõ kìa.
Dialogue: 0,0:39:32.14,0:39:33.27,Default,,0000,0000,0000,,Anh là ai thế? Thám tử à?
Dialogue: 0,0:39:33.75,0:39:35.79,Default,,0000,0000,0000,,Không không. Chỉ là tôi là kẻ rất hay tưởng tượng.
Dialogue: 0,0:39:35.97,0:39:37.89,Default,,0000,0000,0000,,Tôi luôn muốn hình dung mọi thứ thật rõ ràng.
Dialogue: 0,0:39:39.06,0:39:43.23,Default,,0000,0000,0000,,Số 26 khu nhà Gardens,\NSW5. Tầm 8:30 tối.
Dialogue: 0,0:39:43.90,0:39:45.98,Default,,0000,0000,0000,,Còn phải mặc đồ đúng yêu cầu nữa.
Dialogue: 0,0:39:46.15,0:39:47.90,Default,,0000,0000,0000,,Đương nhiên là vậy rồi. Nhưng tôi thắc mắc chút
Dialogue: 0,0:39:47.99,0:39:51.07,Default,,0000,0000,0000,,anh tới đó lúc nào vậy Rupert?\NSớm hay trễ?
Dialogue: 0,0:39:51.49,0:39:54.66,Default,,0000,0000,0000,,Tôi nghĩ là đúng giờ.\NTình yêu vẫy gọi mà.
Dialogue: 0,0:39:54.78,0:39:56.45,Default,,0000,0000,0000,,Ồ...
Dialogue: 0,0:39:56.74,0:39:59.00,Default,,0000,0000,0000,,Tôi thấy có hơi nôn nao.
Dialogue: 0,0:39:59.16,0:40:01.41,Default,,0000,0000,0000,,Chắc do đống bánh.\NTôi không tin tưởng mấy trái dâu nào tí nào.
Dialogue: 0,0:40:02.83,0:40:04.42,Default,,0000,0000,0000,,Tôi sẽ quay lại ngay.
Dialogue: 0,0:40:05.84,0:40:07.80,Default,,0000,0000,0000,,Hai người thực sự rất đẹp đôi.
Dialogue: 0,0:40:12.18,0:40:13.34,Default,,0000,0000,0000,,Gã này kỳ ha?
Dialogue: 0,0:40:13.47,0:40:14.64,Default,,0000,0000,0000,,Cũng dễ thương ấy chứ.
Dialogue: 0,0:40:14.76,0:40:15.76,Default,,0000,0000,0000,,Anh khoái hắn.
Dialogue: 0,0:40:15.89,0:40:16.93,Default,,0000,0000,0000,,Em cũng vậy.
Dialogue: 0,0:40:48.17,0:40:50.21,Default,,0000,0000,0000,,Xin chào. Tôi có quen anh không?
Dialogue: 0,0:40:50.38,0:40:53.84,Default,,0000,0000,0000,,Không, không, không.\NTôi là bạn của Mary.
Dialogue: 0,0:40:54.39,0:40:57.97,Default,,0000,0000,0000,,Cô ấy có bạn ư? Ngạc nhiên ghê!\NThôi thì, xin chào!
Dialogue: 0,0:40:58.06,0:40:59.81,Default,,0000,0000,0000,,Xúc xích nhé?
Dialogue: 0,0:41:00.22,0:41:01.60,Default,,0000,0000,0000,,Mất mấy tiếng mới làm được đấy.
Dialogue: 0,0:41:01.73,0:41:03.06,Default,,0000,0000,0000,,Cám ơn.
Dialogue: 0,0:41:04.69,0:41:07.23,Default,,0000,0000,0000,,Tởm lắm. Vẫn chưa chín đâu.
Dialogue: 0,0:41:07.36,0:41:08.69,Default,,0000,0000,0000,,Gặp sau nha!
Dialogue: 0,0:41:15.87,0:41:18.24,Default,,0000,0000,0000,,Sao ta không lên lầu nhỉ, yên tĩnh hơn nhiều.
Dialogue: 0,0:41:33.05,0:41:34.92,Default,,0000,0000,0000,,- Xin chào.\N- Chào anh.
Dialogue: 0,0:41:35.09,0:41:36.09,Default,,0000,0000,0000,,Tôi là Tim.
Dialogue: 0,0:41:36.89,0:41:37.93,Default,,0000,0000,0000,,Mary.
Dialogue: 0,0:41:38.05,0:41:40.68,Default,,0000,0000,0000,,Mẹ tôi cũng tên như vậy.\NKhông nói chuyện này nữa.
Dialogue: 0,0:41:40.76,0:41:44.27,Default,,0000,0000,0000,,Ừm... tôi biết có hơi bất thường...
Dialogue: 0,0:41:44.39,0:41:48.44,Default,,0000,0000,0000,,nhưng khuôn mặt cô đang nói cho tôi biết\Nrằng cô không muốn ở lại bữa tiệc chút nào.
Dialogue: 0,0:41:50.52,0:41:51.98,Default,,0000,0000,0000,,Vậy nên tôi tự hỏi, cô có phiền...
Dialogue: 0,0:41:52.07,0:41:55.40,Default,,0000,0000,0000,,ra ngoài dùng bữa với tôi không?
Dialogue: 0,0:41:56.11,0:41:57.36,Default,,0000,0000,0000,,Ngay lúc này ấy.
Dialogue: 0,0:41:57.70,0:41:58.82,Default,,0000,0000,0000,,Sao cơ?
Dialogue: 0,0:41:58.91,0:42:01.45,Default,,0000,0000,0000,,Lẽ ra tôi phải suy nghĩ kỹ hơn.
Dialogue: 0,0:42:01.79,0:42:03.12,Default,,0000,0000,0000,,Chúng ta sẽ cùng nói về Kate Moss.
Dialogue: 0,0:42:05.96,0:42:08.12,Default,,0000,0000,0000,,Tôi thích Kate Moss.
Dialogue: 0,0:42:08.29,0:42:10.96,Default,,0000,0000,0000,,Tôi luôn nghĩ điều quan trọng nhất của cô ấy chính là quá khứ
Dialogue: 0,0:42:11.38,0:42:15.59,Default,,0000,0000,0000,,cô biết không, khi so sánh những shot hình chụp trước kia với hiện tại
Dialogue: 0,0:42:15.72,0:42:18.89,Default,,0000,0000,0000,,ta vẫn luôn biết được rằng ẩn sâu trong cô ấy vẫn luôn là
Dialogue: 0,0:42:19.30,0:42:22.47,Default,,0000,0000,0000,,một cô gái táo tợn khỏa thân trên bờ biển.
Dialogue: 0,0:42:22.60,0:42:23.60,Default,,0000,0000,0000,,Bờ biển.
Dialogue: 0,0:42:24.14,0:42:26.81,Default,,0000,0000,0000,,Tôi hoàn toàn đồng ý với anh.
Dialogue: 0,0:42:27.10,0:42:30.15,Default,,0000,0000,0000,,Nếu giờ ta đi luôn thì có thể tâm sự hơn một chủ đề đấy.
Dialogue: 0,0:42:35.40,0:42:37.07,Default,,0000,0000,0000,,Tôi rất thích đôi mắt cô.
Dialogue: 0,0:42:38.95,0:42:41.95,Default,,0000,0000,0000,,Và cả gương mặt của cô nữa.
Dialogue: 0,0:42:52.17,0:42:53.92,Default,,0000,0000,0000,,Hơn một chủ đề ư?
Dialogue: 0,0:42:54.05,0:42:55.76,Default,,0000,0000,0000,,10 chủ đề thú vị.
Dialogue: 0,0:42:56.84,0:42:58.76,Default,,0000,0000,0000,,- Xin mời.\N- Cảm ơn.
Dialogue: 0,0:42:58.93,0:43:01.09,Default,,0000,0000,0000,,Tôi nghĩ 10 phút là quá đủ cho mọi bữa tiệc rồi.
Dialogue: 0,0:43:01.18,0:43:03.10,Default,,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:43:03.18,0:43:04.51,Default,,0000,0000,0000,,Nhất là lần này.
Dialogue: 0,0:43:04.68,0:43:06.18,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:43:06.35,0:43:08.69,Default,,0000,0000,0000,,Trông có vẻ bựa nha.
Dialogue: 0,0:43:09.81,0:43:10.77,Default,,0000,0000,0000,,Đúng vậy.
Dialogue: 0,0:43:13.82,0:43:16.32,Default,,0000,0000,0000,,Cô làm nghề gì?
Dialogue: 0,0:43:17.70,0:43:19.95,Default,,0000,0000,0000,,Tôi là người đọc sách ở tòa soạn.
Dialogue: 0,0:43:20.03,0:43:22.70,Default,,0000,0000,0000,,Không thể nào! Cô đọc sách kiếm tiền sao?
Dialogue: 0,0:43:23.37,0:43:26.16,Default,,0000,0000,0000,,Đúng vậy đấy.\NTôi đọc.
Dialogue: 0,0:43:26.29,0:43:27.83,Default,,0000,0000,0000,,Thật là tuyệt.
Dialogue: 0,0:43:28.16,0:43:30.04,Default,,0000,0000,0000,,Giống như thể có ai đó hỏi
Dialogue: 0,0:43:30.17,0:43:32.00,Default,,0000,0000,0000,,"Bạn làm gì vậy?"\N"Tôi hít thờ"
Dialogue: 0,0:43:32.13,0:43:35.21,Default,,0000,0000,0000,,"Tôi là người hô hấp, tôi được trả tiền đó nha."
Dialogue: 0,0:43:35.71,0:43:39.34,Default,,0000,0000,0000,,- Sao cô kiếm được công việc đó vậy?\N- Được rồi đó anh giai. Còn anh thì sao?
Dialogue: 0,0:43:40.38,0:43:42.22,Default,,0000,0000,0000,,Tôi là luật sư.
Dialogue: 0,0:43:42.55,0:43:43.80,Default,,0000,0000,0000,,Đại loại vậy.
Dialogue: 0,0:43:43.89,0:43:45.56,Default,,0000,0000,0000,,Quyến rũ ghê.
Dialogue: 0,0:43:46.06,0:43:47.39,Default,,0000,0000,0000,,Thật sao?
Dialogue: 0,0:43:47.52,0:43:48.89,Default,,0000,0000,0000,,Tôi nghĩ thế.
Dialogue: 0,0:43:49.81,0:43:54.06,Default,,0000,0000,0000,,Mặc comple, ở quan tòa, cứu người khác.\NCũng quyến rũ mà.
Dialogue: 0,0:43:54.40,0:43:56.44,Default,,0000,0000,0000,,Tôi đoán vậy. Nhưng cũng không quyến rũ bằng đọc sách đâu.
Dialogue: 0,0:43:56.53,0:43:59.90,Default,,0000,0000,0000,,Ngồi trong phòng làm việc, trên chiếc ghế đọc sách nho nhỏ...
Dialogue: 0,0:44:00.07,0:44:01.49,Default,,0000,0000,0000,,Dừng lại!
Dialogue: 0,0:44:01.57,0:44:03.24,Default,,0000,0000,0000,,Dừng ở đó đã thưa ngài.
Dialogue: 0,0:44:03.32,0:44:05.91,Default,,0000,0000,0000,,Có nhiều sách được gửi tới tòa soạn lắm.
Dialogue: 0,0:44:06.08,0:44:07.74,Default,,0000,0000,0000,,Nên đó là một công việc rất lớn lao.
Dialogue: 0,0:44:07.87,0:44:09.50,Default,,0000,0000,0000,,Chắc chắn là vậy rồi.
Dialogue: 0,0:44:09.58,0:44:11.58,Default,,0000,0000,0000,,Vậy lúc cô đọc mấy thứ thông thường thì sao?
Dialogue: 0,0:44:12.42,0:44:15.38,Default,,0000,0000,0000,,Chắc vì công việc nên nó chán lắm.
Dialogue: 0,0:44:15.50,0:44:17.63,Default,,0000,0000,0000,,Tôi luôn lo tới việc khi không còn nghề mại dâm nữa
Dialogue: 0,0:44:17.71,0:44:19.09,Default,,0000,0000,0000,,thì người ta sẽ chẳng còn được tận hưởng sex và những thứ khác.
Dialogue: 0,0:44:19.21,0:44:20.59,Default,,0000,0000,0000,,Anh luôn lo tới chuyện đó sao?
Dialogue: 0,0:44:20.67,0:44:22.80,Default,,0000,0000,0000,,- Không, thỉnh thoảng thôi.\N- Vậy tốt.
Dialogue: 0,0:44:22.89,0:44:25.80,Default,,0000,0000,0000,,Vì nếu như có ai luôn lo lắng về chuyện đó thì\Nđúng là đáng lo đấy.
Dialogue: 0,0:44:25.88,0:44:28.55,Default,,0000,0000,0000,,Lúc cô đọc báo, cô có nghĩ,\N"Quên thứ này đi, nó có tác dụng đấy"?
Dialogue: 0,0:44:28.73,0:44:30.65,Default,,0000,0000,0000,,Anh có tìm hiểu kỹ về mại dâm không?
Dialogue: 0,0:44:30.83,0:44:32.75,Default,,0000,0000,0000,,Lúc cô xem menu, cô có nói rằng...
Dialogue: 0,0:44:32.94,0:44:35.70,Default,,0000,0000,0000,,"Anh không trả tiền là tôi không đọc đâu" không?
Dialogue: 0,0:44:35.73,0:44:39.04,Default,,0000,0000,0000,,Anh sẽ cần phải phỏng vấn bao nhiêu gái làng chơi để tìm hiểu vấn đề này?
Dialogue: 0,0:44:39.11,0:44:43.03,Default,,0000,0000,0000,,Anh có định tới Tây Âu hay Thái Lan để phỏng vấn không?
Dialogue: 0,0:44:57.21,0:45:00.96,Default,,0000,0000,0000,,Anh đưa tôi ra xe được chứ?
Dialogue: 0,0:45:01.09,0:45:03.59,Default,,0000,0000,0000,,Rất sẵn lòng.
Dialogue: 0,0:45:03.80,0:45:05.76,Default,,0000,0000,0000,,Thật là một ý hay.
Dialogue: 0,0:45:06.47,0:45:07.72,Default,,0000,0000,0000,,Cô thì sao?
Dialogue: 0,0:45:07.81,0:45:10.89,Default,,0000,0000,0000,,Tôi có 3 anh trai.
Dialogue: 0,0:45:11.10,0:45:12.56,Default,,0000,0000,0000,,Ôi trời.
Dialogue: 0,0:45:12.64,0:45:14.23,Default,,0000,0000,0000,,Giờ họ ở đâu?
Dialogue: 0,0:45:15.81,0:45:17.40,Default,,0000,0000,0000,,Đằng sau anh đấy.
Dialogue: 0,0:45:26.78,0:45:28.83,Default,,0000,0000,0000,,Cô có vấn đề với việc đỗ xe sao?
Dialogue: 0,0:45:30.74,0:45:32.33,Default,,0000,0000,0000,,Ý anh là sao?
Dialogue: 0,0:45:32.45,0:45:34.00,Default,,0000,0000,0000,,Sao cô đỗ xe xa quá vậy?
Dialogue: 0,0:45:34.16,0:45:36.58,Default,,0000,0000,0000,,Thực ra thì xe tôi để ở ngoài nhà tôi cơ.
Dialogue: 0,0:45:36.71,0:45:39.17,Default,,0000,0000,0000,,Tôi đi ké xe tới bữa tiệc đấy chứ.
Dialogue: 0,0:45:41.51,0:45:42.51,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:45:44.43,0:45:46.43,Default,,0000,0000,0000,,Hay đấy. Rất tuyệt.
Dialogue: 0,0:45:52.60,0:45:54.64,Default,,0000,0000,0000,,Tới nơi rồi.
Dialogue: 0,0:45:54.77,0:45:56.69,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,0:45:56.81,0:46:00.15,Default,,0000,0000,0000,,Xe, nhà.\NNhà, xe.
Dialogue: 0,0:46:02.48,0:46:04.65,Default,,0000,0000,0000,,Trông hợp ghê.
Dialogue: 0,0:46:04.95,0:46:06.61,Default,,0000,0000,0000,,Rất logic.
Dialogue: 0,0:46:27.97,0:46:28.97,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,0:46:35.39,0:46:36.56,Default,,0000,0000,0000,,Chìa đâu rồi ta?
Dialogue: 0,0:46:50.99,0:46:54.99,Default,,0000,0000,0000,,Tôi vào thay đồ đã nhé.\NTôi sẽ mặc bộ đồ ngủ mới.
Dialogue: 0,0:46:55.37,0:46:56.37,Default,,0000,0000,0000,,Ừ.
Dialogue: 0,0:46:57.41,0:47:00.71,Default,,0000,0000,0000,,Rồi 1 phút nữa anh vào và cởi nó ra cũng được.
Dialogue: 0,0:47:01.67,0:47:03.42,Default,,0000,0000,0000,,Nếu anh muốn.
Dialogue: 0,0:47:13.60,0:47:15.10,Default,,0000,0000,0000,,Một phút.
Dialogue: 0,0:47:20.02,0:47:21.02,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:47:24.61,0:47:28.44,Default,,0000,0000,0000,,Ôi... anh... anh không sao chứ?
Dialogue: 0,0:47:30.78,0:47:31.86,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,0:47:31.99,0:47:33.07,Default,,0000,0000,0000,,Không sao đâu.
Dialogue: 0,0:47:56.97,0:47:59.64,Default,,0000,0000,0000,,Là áo mở khuy trước.
Dialogue: 0,0:47:59.77,0:48:01.35,Default,,0000,0000,0000,,Là gì cơ?
Dialogue: 0,0:48:01.48,0:48:03.15,Default,,0000,0000,0000,,Là anh phải mở ở phía trước.
Dialogue: 0,0:48:04.31,0:48:06.44,Default,,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:48:06.61,0:48:08.15,Default,,0000,0000,0000,,- Cảm ơn.\N- Không có gì.
Dialogue: 0,0:48:10.74,0:48:12.32,Default,,0000,0000,0000,,Tốt lắm.
Dialogue: 0,0:48:20.66,0:48:23.00,Default,,0000,0000,0000,,Anh chắc chắn là lần sau sẽ tốt hơn.
Dialogue: 0,0:48:24.50,0:48:27.00,Default,,0000,0000,0000,,Em thấy cũng được mà.
Dialogue: 0,0:48:27.75,0:48:30.17,Default,,0000,0000,0000,,Đúng, không, cũng được.
Dialogue: 0,0:48:32.51,0:48:35.18,Default,,0000,0000,0000,,Chờ anh 1 phút được không?
Dialogue: 0,0:48:36.64,0:48:37.64,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:48:43.77,0:48:44.77,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,0:48:47.44,0:48:48.69,Default,,0000,0000,0000,,Nguy hiểm đấy!
Dialogue: 0,0:48:52.20,0:48:55.11,Default,,0000,0000,0000,,Anh cũng biết rõ ghê ha.
Dialogue: 0,0:48:56.03,0:48:57.07,Default,,0000,0000,0000,,Anh cũng thích nghĩ vậy.
Dialogue: 0,0:49:02.54,0:49:06.71,Default,,0000,0000,0000,,Thật tuyệt. Một số người phá bung bét lần đầu luôn.
Dialogue: 0,0:49:06.84,0:49:08.29,Default,,0000,0000,0000,,Gà mờ mà.
Dialogue: 0,0:49:10.55,0:49:12.72,Default,,0000,0000,0000,,Chờ anh một giây nhé.
Dialogue: 0,0:49:13.80,0:49:14.80,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:49:15.97,0:49:17.22,Default,,0000,0000,0000,,Anh không đợi được.
Dialogue: 0,0:49:19.31,0:49:21.47,Default,,0000,0000,0000,,Ôi chúa ơi.
Dialogue: 0,0:49:26.40,0:49:31.73,Default,,0000,0000,0000,,Đây là đêm tuyệt nhất đời anh.\NGiờ có lẽ anh nên...
Dialogue: 0,0:49:31.82,0:49:34.65,Default,,0000,0000,0000,,làm một giấc tuyệt nhất cuộc đời rồi.
Dialogue: 0,0:49:36.32,0:49:39.49,Default,,0000,0000,0000,,1 lần là đủ sao anh?
Dialogue: 0,0:49:40.33,0:49:43.00,Default,,0000,0000,0000,,Anh không chắc vậy có công bằng không nữa?
Dialogue: 0,0:49:49.42,0:49:51.00,Default,,0000,0000,0000,,- Mình muộn mất rồi.\N- Vẫn chưa đâu.
Dialogue: 0,0:49:52.51,0:49:55.05,Default,,0000,0000,0000,,Sẽ không sao đâu... Mới có... Ôi chúa ơi...
Dialogue: 0,0:49:59.46,0:50:01.70,Default,,0000,0000,0000,,How long will I love you?
Dialogue: 0,0:50:03.18,0:50:07.22,Default,,0000,0000,0000,,As long as stars are above you
Dialogue: 0,0:50:09.02,0:50:11.34,Default,,0000,0000,0000,,And longer if I can
Dialogue: 0,0:50:14.38,0:50:16.22,Default,,0000,0000,0000,,How long will I need you?
Dialogue: 0,0:50:18.54,0:50:22.06,Default,,0000,0000,0000,,As long as the seasons need to
Dialogue: 0,0:50:24.54,0:50:26.54,Default,,0000,0000,0000,,Follow their plan
Dialogue: 0,0:50:28.78,0:50:32.26,Default,,0000,0000,0000,,How long will I give to you?
Dialogue: 0,0:50:33.34,0:50:35.74,Default,,0000,0000,0000,,As long as I live through you
Dialogue: 0,0:50:37.70,0:50:41.58,Default,,0000,0000,0000,,However long you say
Dialogue: 0,0:50:43.82,0:50:46.10,Default,,0000,0000,0000,,How long will I love you?
Dialogue: 0,0:50:47.66,0:50:51.34,Default,,0000,0000,0000,,As long as stars are above you
Dialogue: 0,0:50:53.14,0:50:55.78,Default,,0000,0000,0000,,Longer if I may
Dialogue: 0,0:50:06.65,0:50:07.65,Default,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:50:15.86,0:50:17.10,Default,,0000,0000,0000,,Đừng lo, anh sẽ đi cùng em.
Dialogue: 0,0:50:23.79,0:50:25.12,Default,,0000,0000,0000,,Để anh đưa em về!
Dialogue: 0,0:50:30.96,0:50:32.71,Default,,0000,0000,0000,,Bye. Bye. Bye.
Dialogue: 0,0:50:34.55,0:50:35.55,Default,,0000,0000,0000,,Không!
Dialogue: 0,0:51:21.55,0:51:23.85,Default,,0000,0000,0000,,Có tin xấu rồi.
Dialogue: 0,0:51:24.56,0:51:26.64,Default,,0000,0000,0000,,- Em sắp chết à?\N- Không tới mức đó.
Dialogue: 0,0:51:26.73,0:51:28.52,Default,,0000,0000,0000,,- Anh sắp chết?\N- Không.
Dialogue: 0,0:51:28.69,0:51:32.19,Default,,0000,0000,0000,,Bố mẹ đang ở trong thành phố, và giờ tới thăm em.
Dialogue: 0,0:51:32.36,0:51:34.32,Default,,0000,0000,0000,,Bố mẹ? Bố mẹ MỸ á?
Dialogue: 0,0:51:35.57,0:51:37.03,Default,,0000,0000,0000,,- Khi nào?\N- Ngay bây giờ.
Dialogue: 0,0:51:37.36,0:51:39.15,Default,,0000,0000,0000,,Bố mẹ nói với em rồi\Nnhưng em không nói với anh.
Dialogue: 0,0:51:39.49,0:51:42.29,Default,,0000,0000,0000,,Em cứ nghĩ họ sẽ lại hủy lịch hen như mọi lần.
Dialogue: 0,0:51:42.37,0:51:43.92,Default,,0000,0000,0000,,- Bây giờ luôn á?\N- Bây giờ luôn.
Dialogue: 0,0:51:44.01,0:51:45.61,Default,,0000,0000,0000,,Vậy nên tốt nhất anh nên mặc quần vào đi.
Dialogue: 0,0:51:49.00,0:51:51.67,Default,,0000,0000,0000,,Em xin lỗi nha.
Dialogue: 0,0:51:51.79,0:51:53.21,Default,,0000,0000,0000,,Họ có biết tới sự tồn tại của anh không?
Dialogue: 0,0:51:53.38,0:51:57.51,Default,,0000,0000,0000,,Có, em có kể vài điều tương-tự-như-anh,\Nnhưng không cụ thể.
Dialogue: 0,0:51:57.59,0:52:01.38,Default,,0000,0000,0000,,Bố mẹ em bảo thủ lắm\Nlấy quần khác đi anh.
Dialogue: 0,0:52:03.89,0:52:05.55,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:52:10.89,0:52:13.60,Default,,0000,0000,0000,,Cứ kệ họ đi. Kệ họ.
Dialogue: 0,0:52:16.69,0:52:17.69,Default,,0000,0000,0000,,Lên đi ạ.
Dialogue: 0,0:52:18.19,0:52:20.74,Default,,0000,0000,0000,,- Sao cơ?\N- Em xin lỗi, nhưng bố mẹ không thích đợi đâu.
Dialogue: 0,0:52:20.86,0:52:22.57,Default,,0000,0000,0000,,Anh có sống ở đây không?
Dialogue: 0,0:52:22.70,0:52:24.37,Default,,0000,0000,0000,,Tất nhiên là không?
Dialogue: 0,0:52:24.91,0:52:26.49,Default,,0000,0000,0000,,Tụi mình có quan hệ không?
Dialogue: 0,0:52:26.62,0:52:28.24,Default,,0000,0000,0000,,Có nhưng không bằng miệng.
Dialogue: 0,0:52:28.41,0:52:29.75,Default,,0000,0000,0000,,Anh đâu có nói tới nó đâu.
Dialogue: 0,0:52:29.87,0:52:32.62,Default,,0000,0000,0000,,- Ừ, vậy được.\N- Sao em nghĩ anh sẽ nói thế cơ chứ?
Dialogue: 0,0:52:32.75,0:52:34.15,Default,,0000,0000,0000,,Giúp anh kéo lên với.
Dialogue: 0,0:52:34.25,0:52:37.42,Default,,0000,0000,0000,,Em không biết nữa. Nhưng lỡ có nói tới\Nnhớ chối luôn nha.
Dialogue: 0,0:52:37.59,0:52:39.59,Default,,0000,0000,0000,,Ai sẽ khơi chuyện lên được chứ? Bố em ư?
Dialogue: 0,0:52:39.71,0:52:42.42,Default,,0000,0000,0000,,"Tim, cháu có liếm mút gì con gái ta không vậy?"
Dialogue: 0,0:52:42.55,0:52:43.80,Default,,0000,0000,0000,,Ai mà biết được chứ.
Dialogue: 0,0:52:43.93,0:52:45.22,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,0:52:45.76,0:52:47.85,Default,,0000,0000,0000,,- Sẵn sàng chưa?\N- Đã xong.
Dialogue: 0,0:52:49.10,0:52:51.10,Default,,0000,0000,0000,,Họ tới rồi đây.
Dialogue: 0,0:52:51.27,0:52:52.94,Default,,0000,0000,0000,,- Anh ở ngay sau em.\N- Được rồi.
Dialogue: 0,0:52:56.27,0:52:58.11,Default,,0000,0000,0000,,- Bố!\N- Chào con yêu.
Dialogue: 0,0:52:58.32,0:53:00.40,Default,,0000,0000,0000,,- Chào mẹ.\N- Chào cưng!
Dialogue: 0,0:53:00.49,0:53:02.95,Default,,0000,0000,0000,,Đây là Tim.
Dialogue: 0,0:53:03.11,0:53:05.16,Default,,0000,0000,0000,,Cháu chào hai bác.
Dialogue: 0,0:53:05.74,0:53:08.62,Default,,0000,0000,0000,,Bố mẹ có nên quay lại lúc không có ai không?
Dialogue: 0,0:53:09.79,0:53:12.04,Default,,0000,0000,0000,,Có vẻ như hơi khó đấy ạ
Dialogue: 0,0:53:12.16,0:53:14.46,Default,,0000,0000,0000,,vì Tim sống ở đây mà.
Dialogue: 0,0:53:15.96,0:53:18.29,Default,,0000,0000,0000,,Thật ư? Với con sao?
Dialogue: 0,0:53:18.63,0:53:22.30,Default,,0000,0000,0000,,Vâng ạ, nhưng bọn cháu không có quan hệ bằng miệng đâu.
Dialogue: 0,0:53:24.13,0:53:25.63,Default,,0000,0000,0000,,Cậu nói lại tôi xem nào?
Dialogue: 0,0:53:26.60,0:53:28.10,Default,,0000,0000,0000,,Cháu xin phép.
Dialogue: 0,0:53:29.47,0:53:33.14,Default,,0000,0000,0000,,Tim, quê cậu ở đâu? Vùng nào vậy?
Dialogue: 0,0:53:33.77,0:53:36.35,Default,,0000,0000,0000,,Anh ấy đến từ Cornwall.\NChỗ đó đẹp lắm.
Dialogue: 0,0:53:36.48,0:53:40.15,Default,,0000,0000,0000,,Ở tận cùng đất nước ấy.\NTrông giống cái giầy trên bản đồ.
Dialogue: 0,0:53:40.82,0:53:42.28,Default,,0000,0000,0000,,Cháu là luật sư đúng không?
Dialogue: 0,0:53:43.15,0:53:45.28,Default,,0000,0000,0000,,Đúng vậy. Anh ấy chưa bao giờ thua kiện hết.
Dialogue: 0,0:53:45.36,0:53:48.66,Default,,0000,0000,0000,,Mẹ sẽ ngỡ là anh ấy không thắng được,\Nnhưng sau đó ảnh rút từ tập hồ sơ ra
Dialogue: 0,0:53:48.70,0:53:49.95,Default,,0000,0000,0000,,và thế là anh ấy lại thắng.
Dialogue: 0,0:53:50.04,0:53:53.33,Default,,0000,0000,0000,,Cháu có bao giờ tự trả lời câu hỏi không?
Dialogue: 0,0:53:53.50,0:53:55.12,Default,,0000,0000,0000,,Cháu...
Dialogue: 0,0:53:55.21,0:53:57.88,Default,,0000,0000,0000,,Có chứ. Thường là vậy mà
Dialogue: 0,0:53:58.00,0:53:59.24,Default,,0000,0000,0000,,nhưng hôm nay để con trả lời cho
Dialogue: 0,0:53:59.34,0:54:00.98,Default,,0000,0000,0000,,bởi vì lúc này con đang rất căng thẳng
Dialogue: 0,0:54:01.30,0:54:06.01,Default,,0000,0000,0000,,và con rất yêu anh ấy\Ncon mong bố mẹ cũng như vậy.
Dialogue: 0,0:54:06.13,0:54:07.68,Default,,0000,0000,0000,,Con à.
Dialogue: 0,0:54:07.97,0:54:10.47,Default,,0000,0000,0000,,Con xin lỗi.\NTim, tới lượt anh.
Dialogue: 0,0:54:10.97,0:54:11.97,Default,,0000,0000,0000,,Nã đi.
Dialogue: 0,0:54:13.68,0:54:14.81,Default,,0000,0000,0000,,Vâng, cháu nghĩ là bố cháu...
Dialogue: 0,0:54:14.94,0:54:17.19,Default,,0000,0000,0000,,Em nói thêm câu nữa nhé?
Dialogue: 0,0:54:17.73,0:54:19.56,Default,,0000,0000,0000,,Ơn chúa mọi chuyện đã qua rồi.
Dialogue: 0,0:54:19.69,0:54:20.94,Default,,0000,0000,0000,,Anh có 2 vé...
Dialogue: 0,0:54:21.02,0:54:23.28,Default,,0000,0000,0000,,xem kịch ngày mai.\NEm có đi không?
Dialogue: 0,0:54:23.36,0:54:27.36,Default,,0000,0000,0000,,Không. Em sẽ gật gù cả buổi mất.
Dialogue: 0,0:54:27.82,0:54:31.37,Default,,0000,0000,0000,,Anh không hiểu sao ai cũng thế vậy.
Dialogue: 0,0:54:31.49,0:54:34.87,Default,,0000,0000,0000,,Rất nhiều giấc mộng đẹp của anh\Ndiễn ra ở Đoàn kịch Hoàng Gia Shakespeare đấy.
Dialogue: 0,0:54:35.33,0:54:37.54,Default,,0000,0000,0000,,Không, anh rủ ai khác đi đi.
Dialogue: 0,0:54:37.71,0:54:41.54,Default,,0000,0000,0000,,Em yêu giường lắm\Nvà cũng ghét rạp hát vô bờ.
Dialogue: 0,0:54:42.00,0:54:43.38,Default,,0000,0000,0000,,Cũng đúng thôi.
Dialogue: 0,0:54:44.51,0:54:48.18,Default,,0000,0000,0000,,Loại bi kịch nào sẽ được công chiếu vào tối thứ 7
Dialogue: 0,0:54:48.76,0:54:50.80,Default,,0000,0000,0000,,khi không có thông báo nào đây?
Dialogue: 0,0:54:52.06,0:54:53.06,Default,,0000,0000,0000,,Hoan hô.
Dialogue: 0,0:54:55.77,0:54:58.23,Default,,0000,0000,0000,,- Chúa ơi, là Charlotte.\N- Ai cơ?
Dialogue: 0,0:54:58.73,0:55:00.56,Default,,0000,0000,0000,,- Tình đầu của tôi.\N- Đâu cơ.
Dialogue: 0,0:55:00.73,0:55:02.69,Default,,0000,0000,0000,,Đó, gần chỗ lối ra ấy.
Dialogue: 0,0:55:02.77,0:55:04.44,Default,,0000,0000,0000,,- Người già hơn á?\N- Không, không phải người già.
Dialogue: 0,0:55:04.53,0:55:05.78,Default,,0000,0000,0000,,Cô tóc vàng ấy.
Dialogue: 0,0:55:05.86,0:55:07.53,Default,,0000,0000,0000,,- Cô tóc sẫm kia á?\N- Vàng.
Dialogue: 0,0:55:07.61,0:55:09.24,Default,,0000,0000,0000,,Đã nói tóc vàng rõ ràng mà.
Dialogue: 0,0:55:10.41,0:55:11.95,Default,,0000,0000,0000,,Mình đi thôi.
Dialogue: 0,0:55:12.37,0:55:14.62,Default,,0000,0000,0000,,Anh đứng yên đây.\NĐứng yên nhé.
Dialogue: 0,0:55:27.05,0:55:28.05,Default,,0000,0000,0000,,Charlotte.
Dialogue: 0,0:55:29.09,0:55:31.09,Default,,0000,0000,0000,,Ôi, Tim.
Dialogue: 0,0:55:31.64,0:55:34.14,Default,,0000,0000,0000,,Gặp lại anh mới tuyệt làm sao.
Dialogue: 0,0:55:35.14,0:55:38.39,Default,,0000,0000,0000,,Đây là bạn gái em, Tina.
Dialogue: 0,0:55:41.48,0:55:44.06,Default,,0000,0000,0000,,Thật thú vị.\NXin chào, Tina.
Dialogue: 0,0:55:44.15,0:55:45.77,Default,,0000,0000,0000,,Sao lại thú vị cơ chứ.
Dialogue: 0,0:55:45.90,0:55:49.05,Default,,0000,0000,0000,,Cô cũng biết đấy.\NAi cũng có những giây phút khắc cốt ghi tâm trong lòng.
Dialogue: 0,0:55:49.08,0:55:52.08,Default,,0000,0000,0000,,Và lúc Charlotte từ chối tôi là một trong số đó
Dialogue: 0,0:55:52.15,0:55:54.78,Default,,0000,0000,0000,,nhưng giờ thì cô ấy có "bạn gái".
Dialogue: 0,0:55:54.86,0:55:57.34,Default,,0000,0000,0000,,Nên có cảm giác như một gánh nặng\N trong lòng mới được trút bỏ vậy.
Dialogue: 0,0:55:57.43,0:56:00.13,Default,,0000,0000,0000,,Giờ tôi lại có thể tự tin mà gặp gỡ với những người khác giới khác rồi.
Dialogue: 0,0:56:01.96,0:56:04.59,Default,,0000,0000,0000,,Không phải bạn gái kiểu đó đâu.
Dialogue: 0,0:56:06.25,0:56:07.25,Default,,0000,0000,0000,,Sao?
Dialogue: 0,0:56:08.01,0:56:09.63,Default,,0000,0000,0000,,Anh nghĩ em đồng tính à?
Dialogue: 0,0:56:10.76,0:56:11.76,Default,,0000,0000,0000,,Không.
Dialogue: 0,0:56:12.26,0:56:15.93,Default,,0000,0000,0000,,Không, đương nhiên là không rồi.\NLà bạn gái.
Dialogue: 0,0:56:16.01,0:56:17.93,Default,,0000,0000,0000,,Đúng vậy, không.
Dialogue: 0,0:56:18.02,0:56:21.48,Default,,0000,0000,0000,,Bạn là con gái.\NThật rõ ràng.
Dialogue: 0,0:56:21.64,0:56:25.44,Default,,0000,0000,0000,,Tôi ra chỗ bạn trai tôi đã.\NBạn con trai ấy.
Dialogue: 0,0:56:31.61,0:56:33.78,Default,,0000,0000,0000,,Chúa ơi, Tim.
Dialogue: 0,0:56:34.32,0:56:37.12,Default,,0000,0000,0000,,Em rất vui khi gặp lại anh.\NCoi anh này...
Dialogue: 0,0:56:37.20,0:56:38.91,Default,,0000,0000,0000,,Đây là bạn gái em, Tina.
Dialogue: 0,0:56:40.62,0:56:42.33,Default,,0000,0000,0000,,Xin chào Tina.\NMà này,
Dialogue: 0,0:56:42.46,0:56:44.17,Default,,0000,0000,0000,,em nên cẩn thận nha.
Dialogue: 0,0:56:44.29,0:56:47.34,Default,,0000,0000,0000,,Giờ còn nhiều người cổ hủ
Dialogue: 0,0:56:47.46,0:56:49.67,Default,,0000,0000,0000,,vẫn suy ra rằng "có bạn gái" tức là "gay" đấy.
Dialogue: 0,0:56:49.80,0:56:53.06,Default,,0000,0000,0000,,Vậy nên nếu em nói Tina là bạn gái của em\Nmọi người nghĩ là em gay đấy.
Dialogue: 0,0:56:54.01,0:56:55.47,Default,,0000,0000,0000,,Tôi "gay" mà.
Dialogue: 0,0:56:56.47,0:56:57.68,Default,,0000,0000,0000,,Vậy ư?
Dialogue: 0,0:56:57.85,0:56:59.09,Default,,0000,0000,0000,,Anh có vấn đề gì với chuyện đó à?
Dialogue: 0,0:56:59.85,0:57:02.73,Default,,0000,0000,0000,,Không hề. Tôi rất thích là đằng khác.
Dialogue: 0,0:57:03.52,0:57:04.69,Default,,0000,0000,0000,,Tôi chỉ...
Dialogue: 0,0:57:07.19,0:57:08.19,Default,,0000,0000,0000,,Wow.
Dialogue: 0,0:57:08.69,0:57:11.53,Default,,0000,0000,0000,,Tôi mới thấy cô gái đã làm tan nát trái tim tôi hè 3 năm trước.
Dialogue: 0,0:57:11.65,0:57:13.53,Default,,0000,0000,0000,,Vậy tới chào một câu đi.
Dialogue: 0,0:57:13.66,0:57:15.53,Default,,0000,0000,0000,,Không. Cứ để quá khứ ngủ yên đi.\NĐi thôi.
Dialogue: 0,1:20:16.74,1:20:22.31,Default,,0000,0000,0000,,<FONT COLOR="#CCCCFF">~ Biên dịch: <FONT COLOR="#99CCFF">Cờ Rá, Dương Nguyễn Hoàng Khánh<FONT COLOR="#CCCCFF"> ~
Dialogue: 0,1:20:22.31,1:20:26.38,Default,,0000,0000,0000,,<FONT COLOR="#CCCCFF">~ Hiệu chỉnh: <FONT COLOR="#99CCFF">Mèo mập mưu mô<FONT COLOR="#CCCCFF"> ~
Dialogue: 0,1:56:59.82,1:57:18.59,Default,,0000,0000,0000,,<FONT COLOR="#FFFFFF">Đón xem các bộ phim khác tại:\N<FONT COLOR="#0066CC">facebook.com/cavesubbingteam
Dialogue: 0,0:57:15.70,0:57:18.08,Default,,0000,0000,0000,,Đêm tuyệt nhất đời tôi luôn.\NTôi luôn thấy yêu khu này.
Dialogue: 0,0:57:18.16,0:57:20.54,Default,,0000,0000,0000,,Lúc nào nó cũng nhộn nhịp và nhìn mấy bức tranh\Nkìa, sặc sỡ ghê.
Dialogue: 0,0:57:20.70,0:57:23.79,Default,,0000,0000,0000,,- Nó luôn làm tớ thấy vui vẻ khi đi ngang qua đây, màu sắc...\N- Tim.
Dialogue: 0,0:57:23.87,0:57:25.21,Default,,0000,0000,0000,,Charlotte!
Dialogue: 0,0:57:25.33,0:57:26.71,Default,,0000,0000,0000,,Tim, gặp anh mừng quá.
Dialogue: 0,0:57:26.84,0:57:28.34,Default,,0000,0000,0000,,Ngạc nhiên thật.
Dialogue: 0,0:57:28.42,0:57:31.38,Default,,0000,0000,0000,,Wow. Xin lỗi. Đây là bạn gái\Nem, Tina.
Dialogue: 0,0:57:31.55,0:57:33.38,Default,,0000,0000,0000,,Cô ấy đồng tính à. Im đi.
Dialogue: 0,0:57:33.51,0:57:34.72,Default,,0000,0000,0000,,Chào, Tina.
Dialogue: 0,0:57:34.84,0:57:36.05,Default,,0000,0000,0000,,Anh bảnh quá!
Dialogue: 0,0:57:36.18,0:57:38.01,Default,,0000,0000,0000,,Chưa có dịp gặp lại anh
Dialogue: 0,0:57:38.14,0:57:39.93,Default,,0000,0000,0000,,từ sau năm đó ở Cornwall đấy.
Dialogue: 0,0:57:40.72,0:57:42.89,Default,,0000,0000,0000,,Bọn em định đi ăn tối,
Dialogue: 0,0:57:43.02,0:57:45.10,Default,,0000,0000,0000,,nhưng nếu được thi\Nthỉnh thoảng hẹn hò chút nhé.
Dialogue: 0,0:57:45.23,0:57:47.06,Default,,0000,0000,0000,,Yeah, chắc chắn rồi. Anh rất thích.
Dialogue: 0,0:57:47.23,0:57:49.02,Default,,0000,0000,0000,,Chuyển lời hỏi thăm của em đến Kit Kat nhé.\NDạo này nó sao rồi?
Dialogue: 0,0:57:49.57,0:57:53.07,Default,,0000,0000,0000,,Con bé ổn. Thực ra nó thấy\Nở London không thuận lợi cho lắm.
Dialogue: 0,0:57:53.24,0:57:55.40,Default,,0000,0000,0000,,Phải. Jimmy nói ảnh có\Ngặp nó vài lần.
Dialogue: 0,0:57:55.70,0:57:57.11,Default,,0000,0000,0000,,Thật hả? Từ bao giờ?
Dialogue: 0,0:57:57.24,0:57:59.28,Default,,0000,0000,0000,,Chắc là vài lần \Nở đâu đó.
Dialogue: 0,0:57:59.41,0:58:01.08,Default,,0000,0000,0000,,Xin lỗi, anh là?
Dialogue: 0,0:58:01.24,0:58:02.24,Default,,0000,0000,0000,,Rất khỏe, cảm ơn?
Dialogue: 0,0:58:02.41,0:58:03.45,Default,,0000,0000,0000,,Ý cô ấy muốn hỏi tên cậu.
Dialogue: 0,0:58:03.58,0:58:04.91,Default,,0000,0000,0000,,- Roger. \N- Không, không phải.
Dialogue: 0,0:58:05.04,0:58:07.37,Default,,0000,0000,0000,,Không, không phải. Tôi là Rory.
Dialogue: 0,0:58:07.46,0:58:09.38,Default,,0000,0000,0000,,- Rất vui được gặp anh, Rory. \N- Ừa.
Dialogue: 0,0:58:10.09,0:58:11.80,Default,,0000,0000,0000,,Phải. Xin lỗi,\Nbọn em phải đi đây.
Dialogue: 0,0:58:11.92,0:58:13.26,Default,,0000,0000,0000,,Gặp lại anh thật là tuyệt.
Dialogue: 0,0:58:13.34,0:58:14.76,Default,,0000,0000,0000,,Gặp lại anh sau nhé.\NYeah.
Dialogue: 0,0:58:15.26,0:58:16.26,Default,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:58:16.63,0:58:18.47,Default,,0000,0000,0000,,Chúa ơi, cô ấy đẹp quá.
Dialogue: 0,0:58:19.93,0:58:23.60,Default,,0000,0000,0000,,Đẹp mô hồn luôn, nếu cậu lên giường với cô ấy\Ncậu chết chắc luôn quá. Chết nghĩa đen ấy.
Dialogue: 0,0:58:23.73,0:58:27.10,Default,,0000,0000,0000,,Cậu cởi áo cổ ra, thấy ngực cổ\Nvà mắt cậu sẽ nổ tung.
Dialogue: 0,0:58:27.23,0:58:29.51,Default,,0000,0000,0000,,Cậu sẽ làm tình như người mù.\NXong cậu sẽ chết.
Dialogue: 0,0:58:29.61,0:58:32.15,Default,,0000,0000,0000,,Cậu không thấy là\Ncô ấy còn không đưa số...
Dialogue: 0,0:58:32.28,0:58:36.15,Default,,0000,0000,0000,,Em bảo Tina tự đi ăn một mình rồi.\NAnh đói chứ?
Dialogue: 0,0:58:36.28,0:58:38.78,Default,,0000,0000,0000,,Yeah. Tất nhiên. Tuyệt
Dialogue: 0,0:58:39.24,0:58:40.78,Default,,0000,0000,0000,,Tạm biệt, Roger.
Dialogue: 0,0:58:41.08,0:58:42.74,Default,,0000,0000,0000,,Yeah, tuyệt.
Dialogue: 0,0:58:43.12,0:58:45.61,Default,,0000,0000,0000,,Cảm ơn lần nữa về vở kịch. Bá đạo lắm.\NAnh muốn đi đâu?
Dialogue: 0,0:58:45.83,0:58:48.25,Default,,0000,0000,0000,,Ừm, chỗ nào em thực sự thích là được.
Dialogue: 0,0:58:48.33,0:58:50.79,Default,,0000,0000,0000,,Không đấu lại anh rồi.
Dialogue: 0,0:59:02.26,0:59:03.35,Default,,0000,0000,0000,,Anh biết không,
Dialogue: 0,0:59:03.68,0:59:07.64,Default,,0000,0000,0000,,em đang bắt đầu nghĩ\Nlà mình đã hơi lãng phí kì nghỉ hè năm ấy.
Dialogue: 0,0:59:08.48,0:59:11.19,Default,,0000,0000,0000,,Nếu chúng ta có thể\Nđi ngược thời gian
Dialogue: 0,0:59:11.31,0:59:13.86,Default,,0000,0000,0000,,có khi em sẽ không nói KHÔNG đâu.
Dialogue: 0,0:59:15.78,0:59:16.78,Default,,0000,0000,0000,,Em ở...
Dialogue: 0,0:59:17.65,0:59:19.66,Default,,0000,0000,0000,,Em ở ngay cuối góc đường thôi.
Dialogue: 0,0:59:19.78,0:59:21.32,Default,,0000,0000,0000,,Anh đi bộ về cùng em được chứ.
Dialogue: 0,0:59:22.95,0:59:23.95,Default,,0000,0000,0000,,Được
Dialogue: 0,0:59:24.54,0:59:26.37,Default,,0000,0000,0000,,- Được chứ?\N- Ừ, tất nhiên là được.
Dialogue: 0,0:59:36.34,0:59:38.80,Default,,0000,0000,0000,,Đến rồi.
Dialogue: 0,0:59:44.18,0:59:46.01,Default,,0000,0000,0000,,Nó đẹp hơn rất nhiều
Dialogue: 0,0:59:46.43,0:59:47.60,Default,,0000,0000,0000,,ở bên trong.
Dialogue: 0,0:59:48.31,0:59:49.85,Default,,0000,0000,0000,,Chắc chắn rồi.
Dialogue: 0,0:59:57.03,0:59:59.03,Default,,0000,0000,0000,,- Vậy...\N- Vậy...
Dialogue: 0,1:00:00.20,1:00:01.20,Default,,0000,0000,0000,,Thật...
Dialogue: 0,1:00:03.37,1:00:04.37,Default,,0000,0000,0000,,Thật,
Dialogue: 0,1:00:04.78,1:00:06.12,Default,,0000,0000,0000,,tuyệt
Dialogue: 0,1:00:07.45,1:00:09.37,Default,,0000,0000,0000,,khi gặp lại em, Charlotte.
Dialogue: 0,1:00:09.50,1:00:13.21,Default,,0000,0000,0000,,Đêm nay tuyệt lắm.\NAnh rất vui, nhưng anh phải
Dialogue: 0,1:00:14.21,1:00:15.71,Default,,0000,0000,0000,,quay lại
Dialogue: 0,1:00:16.55,1:00:19.88,Default,,0000,0000,0000,,bởi anh có vài việc rất quan trọng\Nphải làm. Ngay bây giờ.
Dialogue: 0,1:00:53.08,1:00:56.38,Default,,0000,0000,0000,,- Em yêu. Dậy đi. \N- Gì thế?
Dialogue: 0,1:00:56.54,1:00:57.54,Default,,0000,0000,0000,,Mary.
Dialogue: 0,1:00:58.92,1:01:00.67,Default,,0000,0000,0000,,Em sẽ cưới anh chứ?
Dialogue: 0,1:01:02.26,1:01:06.26,Default,,0000,0000,0000,,Đừng ích kỉ thế chứ,\Nem đang ngủ, tệ thật.
Dialogue: 0,1:01:08.39,1:01:09.39,Default,,0000,0000,0000,,Phải.
Dialogue: 0,1:01:10.35,1:01:12.18,Default,,0000,0000,0000,,Nói chuyện hay ghê.
Dialogue: 0,1:01:19.69,1:01:20.94,Default,,0000,0000,0000,,Dậy đi.
Dialogue: 0,1:01:21.11,1:01:22.11,Default,,0000,0000,0000,,Gì thế?
Dialogue: 0,1:01:23.70,1:01:25.70,Default,,0000,0000,0000,,Dậy đi em. Mình nói chuyện chút được không?
Dialogue: 0,1:01:25.78,1:01:26.78,Default,,0000,0000,0000,,Sao thế?
Dialogue: 0,1:01:27.95,1:01:30.37,Default,,0000,0000,0000,,Anh có vài điều quan trọng\Nmuốn hỏi em.
Dialogue: 0,1:01:33.21,1:01:35.29,Default,,0000,0000,0000,,Để sáng mai được không anh?
Dialogue: 0,1:01:35.63,1:01:37.25,Default,,0000,0000,0000,,Không được.
Dialogue: 0,1:01:38.21,1:01:41.21,Default,,0000,0000,0000,,Nhưng em đang rất buồn ngủ.
Dialogue: 0,1:01:41.71,1:01:44.38,Default,,0000,0000,0000,,Em vừa có một giấc mơ\Nđẹp nhất trước giờ.
Dialogue: 0,1:01:45.13,1:01:46.76,Default,,0000,0000,0000,,Cái gì đấy?
Dialogue: 0,1:01:47.47,1:01:49.97,Default,,0000,0000,0000,,Sao lại có nhạc vậy?
Dialogue: 0,1:01:50.43,1:01:53.14,Default,,0000,0000,0000,,Anh có vài điều cần làm\Nvới việc anh sắp hỏi em.
Dialogue: 0,1:01:54.81,1:01:56.65,Default,,0000,0000,0000,,Đợi xíu nào.
Dialogue: 0,1:01:57.48,1:01:59.44,Default,,0000,0000,0000,,Nhạc sến.
Dialogue: 0,1:02:00.82,1:02:03.32,Default,,0000,0000,0000,,Câu hỏi quan trọng.
Dialogue: 0,1:02:03.49,1:02:05.11,Default,,0000,0000,0000,,Anh đang quì đúng không?
Dialogue: 0,1:02:05.61,1:02:07.61,Default,,0000,0000,0000,,Đang quì.
Dialogue: 0,1:02:09.49,1:02:12.29,Default,,0000,0000,0000,,Có phải xem kịch chán quá
Dialogue: 0,1:02:12.41,1:02:15.16,Default,,0000,0000,0000,,nên mới phải về cầu hôn em đúng không?
Dialogue: 0,1:02:17.46,1:02:19.13,Default,,0000,0000,0000,,Kiểu thế.
Dialogue: 0,1:02:22.42,1:02:24.42,Default,,0000,0000,0000,,Ừa. Chính xác thế.
Dialogue: 0,1:02:25.80,1:02:27.13,Default,,0000,0000,0000,,Thật sự,
Dialogue: 0,1:02:30.18,1:02:32.01,Default,,0000,0000,0000,,em cưới anh nhé?
Dialogue: 0,1:02:38.52,1:02:40.52,Default,,0000,0000,0000,,Em có gì do dự sao?
Dialogue: 0,1:02:41.15,1:02:45.15,Default,,0000,0000,0000,,'Có', 'Không', 'Cút khỏi đời tao đi,\Nthằng rảnh hơi' Tất cả đều ổn hết.
Dialogue: 0,1:02:48.70,1:02:51.37,Default,,0000,0000,0000,,Em nghĩ là em sẽ chọn...
Dialogue: 0,1:02:53.04,1:02:54.04,Default,,0000,0000,0000,,CÓ.
Dialogue: 0,1:02:59.83,1:03:02.00,Default,,0000,0000,0000,,Cảm ơn vì đã hỏi em.
Dialogue: 0,1:03:02.55,1:03:07.17,Default,,0000,0000,0000,,Và cảm ơn vì đã không cầu hôn\Nem theo kiểu sến sẩm
Dialogue: 0,1:03:07.30,1:03:09.68,Default,,0000,0000,0000,,với một đống người xung quanh.
Dialogue: 0,1:03:10.22,1:03:12.14,Default,,0000,0000,0000,,Em ghét đông nguời.
Dialogue: 0,1:03:12.56,1:03:13.85,Default,,0000,0000,0000,,Anh cũng thế.
Dialogue: 0,1:03:14.56,1:03:15.56,Default,,0000,0000,0000,,Yeah.
Dialogue: 0,1:03:17.19,1:03:19.39,Default,,0000,0000,0000,,Để anh tắt đài đi nhé.
Dialogue: 0,1:03:19.85,1:03:22.06,Default,,0000,0000,0000,,Được đó.
Dialogue: 0,1:03:29.74,1:03:32.91,Default,,0000,0000,0000,,Cảm ơn mọi người.\NXin lỗi, cô ấy hơi mệt.
Dialogue: 0,1:03:33.74,1:03:37.83,Default,,0000,0000,0000,,Nhưng chúng tôi rất cảm kích.\NMọi người có thể đi chứ?
Dialogue: 0,1:03:46.92,1:03:48.26,Default,,0000,0000,0000,,Wow!
Dialogue: 0,1:03:48.59,1:03:50.59,Default,,0000,0000,0000,,Đẹp quá!
Dialogue: 0,1:03:50.72,1:03:53.35,Default,,0000,0000,0000,,Vì một số thứ, nên anh nghĩ\N ta sẽ không nên ngồi chung với họ lâu.
Dialogue: 0,1:03:53.43,1:03:54.68,Default,,0000,0000,0000,,Thế hả?
Dialogue: 0,1:03:54.76,1:03:57.77,Default,,0000,0000,0000,,Nếu họ mời trà,\Nem nhớ từ chối nhé.
Dialogue: 0,1:03:58.56,1:03:59.94,Default,,0000,0000,0000,,Chào.
Dialogue: 0,1:04:00.06,1:04:01.44,Default,,0000,0000,0000,,Mẹ, đây là Mary.
Dialogue: 0,1:04:01.56,1:04:02.90,Default,,0000,0000,0000,,- Mary! \N- Chào bác.
Dialogue: 0,1:04:03.02,1:04:04.61,Default,,0000,0000,0000,,Chúa ơi, cháu xinh quá.
Dialogue: 0,1:04:04.77,1:04:06.36,Default,,0000,0000,0000,,Không, cháu dùng
Dialogue: 0,1:04:06.78,1:04:09.28,Default,,0000,0000,0000,,hơi nhiều mascara và son ý mà.
Dialogue: 0,1:04:09.40,1:04:10.78,Default,,0000,0000,0000,,Xem nào.
Dialogue: 0,1:04:10.91,1:04:13.45,Default,,0000,0000,0000,,Phải. Tốt đấy.
Dialogue: 0,1:04:13.91,1:04:17.37,Default,,0000,0000,0000,,Thật tệ nếu một cô\Ngái quá xinh đẹp.
Dialogue: 0,1:04:17.45,1:04:21.62,Default,,0000,0000,0000,,Nó làm cô ấy không thể phát triển nổi khiếu hài hước.\NHoặc nhân cách.
Dialogue: 0,1:04:22.38,1:04:23.38,Default,,0000,0000,0000,,Trà chứ?
Dialogue: 0,1:04:23.79,1:04:25.34,Default,,0000,0000,0000,,Một cốc thì được ạ.
Dialogue: 0,1:04:25.46,1:04:27.05,Default,,0000,0000,0000,,Chúa ơi, mất nguyên ngày rồi.
Dialogue: 0,1:04:27.76,1:04:30.80,Default,,0000,0000,0000,,- Con bé là khách đặc biệt.\N- Cốc không bị mẻ nhé.
Dialogue: 0,1:04:30.93,1:04:32.18,Default,,0000,0000,0000,,Lia đá.
Dialogue: 0,1:04:32.26,1:04:34.97,Default,,0000,0000,0000,,Bố con nó chơi trò đấy\Ntừ khi nó cao bằng ngần này.
Dialogue: 0,1:04:35.30,1:04:38.77,Default,,0000,0000,0000,,Và những khiếm huyết của cháu là gì?\N Ý ta là ngược điểm ấy.
Dialogue: 0,1:04:41.64,1:04:43.73,Default,,0000,0000,0000,,Cháu...
Dialogue: 0,1:04:45.57,1:04:47.57,Default,,0000,0000,0000,,Chà, cháu rất dễ bị dao động.
Dialogue: 0,1:04:47.82,1:04:49.11,Default,,0000,0000,0000,,Hay đấy.
Dialogue: 0,1:04:50.07,1:04:54.11,Default,,0000,0000,0000,,Và đôi khi, tính khí cháu\N cũng thất thường nữa.
Dialogue: 0,1:04:54.24,1:04:55.91,Default,,0000,0000,0000,,Tất nhiên rồi. Thế cháu còn
Dialogue: 0,1:04:56.03,1:04:57.74,Default,,0000,0000,0000,,thích những cái gì nữa?
Dialogue: 0,1:05:00.16,1:05:02.33,Default,,0000,0000,0000,,Và, tất nhiên, cháu...
Dialogue: 0,1:05:02.75,1:05:04.12,Default,,0000,0000,0000,,Cháu rất yêu con trai bác.
Dialogue: 0,1:05:04.25,1:05:05.63,Default,,0000,0000,0000,,Bác cũng thế.
Dialogue: 0,1:05:06.00,1:05:09.67,Default,,0000,0000,0000,,Nhưng đừng có nói với nó.\NKhông nó sẽ tự kiêu đấy.
Dialogue: 0,1:05:13.68,1:05:14.76,Default,,0000,0000,0000,,Pow!
Dialogue: 0,1:05:14.84,1:05:17.18,Default,,0000,0000,0000,,Không cần bóng bố\Nvẫn chơi ngon. Pow!
Dialogue: 0,1:05:19.02,1:05:20.43,Default,,0000,0000,0000,,Bố nghĩ sao về cô ấy?
Dialogue: 0,1:05:20.52,1:05:22.14,Default,,0000,0000,0000,,Bố thích con bé\Nnhiều hơn con rồi đấy.
Dialogue: 0,1:05:24.48,1:05:28.52,Default,,0000,0000,0000,,Nhìn này, con đã bỏ quên nó.\NJimmy Fontana Il Mondo.
Dialogue: 0,1:05:28.65,1:05:30.61,Default,,0000,0000,0000,,Bản ghi âm tuyệt nhất\Nđược thu bởi một gã người Ý
Dialogue: 0,1:05:30.69,1:05:32.79,Default,,0000,0000,0000,,mà đầu lão giống như\Nđang gắn một con lửng đã chết.
Dialogue: 0,1:05:32.83,1:05:33.86,Default,,0000,0000,0000,,Và bố đã mua nó.
Dialogue: 0,1:05:33.95,1:05:35.16,Default,,0000,0000,0000,,Phải!
Dialogue: 0,1:05:35.28,1:05:36.87,Default,,0000,0000,0000,,Trông cặp kính đó kìa!
Dialogue: 0,1:05:39.37,1:05:42.54,Default,,0000,0000,0000,,Thôi nào, chơi đi!\NĐúng rồi.
Dialogue: 0,1:05:42.87,1:05:44.79,Default,,0000,0000,0000,,Và đây là một trận\Nđấu vô cùng kì lạ.
Dialogue: 0,1:05:44.92,1:05:46.83,Default,,0000,0000,0000,,Lần đầu tiên có hai hai bố con
Dialogue: 0,1:05:46.96,1:05:48.71,Default,,0000,0000,0000,,thi đấu với nhau\Ntại chung kết giải bóng
Dialogue: 0,1:05:48.88,1:05:50.64,Default,,0000,0000,0000,,bàn thế giới và\Ncả hai đều không phải Tàu Khựa.
Dialogue: 0,1:05:50.71,1:05:53.30,Default,,0000,0000,0000,,Trận đấu dữ dội từ cựu\Nvô địch thế giới và con trai ông,
Dialogue: 0,1:05:53.38,1:05:56.05,Default,,0000,0000,0000,,tay bóng bàn Người anh tóc cam\N đầu tiên trong giải mở rộng
Dialogue: 0,1:05:56.22,1:05:58.31,Default,,0000,0000,0000,,nhưng đã xuất hiện vài điểm yếu\N của tay vợt trẻ.
Dialogue: 0,1:05:58.35,1:06:00.76,Default,,0000,0000,0000,,Cậu bé sắp khóc nhè rồi.\NKhông phải!
Dialogue: 0,1:06:00.89,1:06:02.35,Default,,0000,0000,0000,,Sắp rồi!
Dialogue: 0,1:06:06.90,1:06:07.90,Default,,0000,0000,0000,,Này.
Dialogue: 0,1:06:09.32,1:06:11.19,Default,,0000,0000,0000,,Này!\NAnh không biết mày đã về đây.
Dialogue: 0,1:06:11.86,1:06:14.32,Default,,0000,0000,0000,,Ừa. Ghé về nhà chơi được vài hôm rồi.
Dialogue: 0,1:06:14.40,1:06:15.57,Default,,0000,0000,0000,,Okay.
Dialogue: 0,1:06:15.91,1:06:17.16,Default,,0000,0000,0000,,Công việc ổn chứ?
Dialogue: 0,1:06:19.16,1:06:20.49,Default,,0000,0000,0000,,Mày về đây bao lâu rồi?
Dialogue: 0,1:06:20.58,1:06:22.37,Default,,0000,0000,0000,,Vài tuần.
Dialogue: 0,1:06:22.50,1:06:24.75,Default,,0000,0000,0000,,Quỷ thần ơi! Thế cuộc sống ở London,...
Dialogue: 0,1:06:25.58,1:06:26.75,Default,,0000,0000,0000,,Kinh khủng.
Dialogue: 0,1:06:26.92,1:06:27.92,Default,,0000,0000,0000,,Thế sao.
Dialogue: 0,1:06:29.67,1:06:31.17,Default,,0000,0000,0000,,Mary đang ở đây à?
Dialogue: 0,1:06:31.25,1:06:32.42,Default,,0000,0000,0000,,Phải.
Dialogue: 0,1:06:32.59,1:06:34.09,Default,,0000,0000,0000,,- Đâu rồi?\N- Dưới nhà ý.
Dialogue: 0,1:06:35.26,1:06:37.26,Default,,0000,0000,0000,,Lịch sự vào nhé.
Dialogue: 0,1:06:38.26,1:06:39.76,Default,,0000,0000,0000,,Nhớ lịch sự.
Dialogue: 0,1:06:44.06,1:06:45.39,Default,,0000,0000,0000,,Cẩn thận!
Dialogue: 0,1:06:46.27,1:06:50.56,Default,,0000,0000,0000,,Yeah, rất vui được gặp em. Chị đang cố\Ntạo 1 ấn tượng tốt..
Dialogue: 0,1:06:50.69,1:06:52.65,Default,,0000,0000,0000,,Yeah, chị tạo ấn tượng rất tốt đấy.
Dialogue: 0,1:06:53.53,1:06:55.28,Default,,0000,0000,0000,,Xin lỗi.
Dialogue: 0,1:06:55.40,1:06:57.95,Default,,0000,0000,0000,,Con có một thông báo rất quan trọng.
Dialogue: 0,1:06:58.07,1:06:59.78,Default,,0000,0000,0000,,Thú vị đấy.
Dialogue: 0,1:07:00.95,1:07:03.49,Default,,0000,0000,0000,,Bọn con đã quyết định, sau khi suy nghĩ kĩ,\Nbọn con sẽ kết hôn.
Dialogue: 0,1:07:06.75,1:07:09.12,Default,,0000,0000,0000,,Thật tuyệt vời.
Dialogue: 0,1:07:09.29,1:07:10.92,Default,,0000,0000,0000,,Cháu sẽ cưới ai?
Dialogue: 0,1:07:11.96,1:07:13.92,Default,,0000,0000,0000,,Mary. Kia ạ.
Dialogue: 0,1:07:14.05,1:07:16.05,Default,,0000,0000,0000,,Ơn Chúa.
Dialogue: 0,1:07:16.26,1:07:19.26,Default,,0000,0000,0000,,Jolly sẽ thấy xấu hổ nếu là một cô gái khác. Nghĩ mà xem.
Dialogue: 0,1:07:19.76,1:07:21.47,Default,,0000,0000,0000,,Chúng tôi rất vui.
Dialogue: 0,1:07:21.97,1:07:23.60,Default,,0000,0000,0000,,Không, xin lỗi. Suýt quên.
Dialogue: 0,1:07:23.72,1:07:26.81,Default,,0000,0000,0000,,Đám cưới sẽ diễn ra sớm thôi ạ.
Dialogue: 0,1:07:27.81,1:07:29.73,Default,,0000,0000,0000,,Bởi bọn con sắp có em bé.
Dialogue: 0,1:07:37.32,1:07:38.49,Default,,0000,0000,0000,,Cháu mang thai rồi à.
Dialogue: 0,1:07:38.61,1:07:39.78,Default,,0000,0000,0000,,Oh.
Dialogue: 0,1:07:40.07,1:07:41.49,Default,,0000,0000,0000,,Ai là bố của nó?
Dialogue: 0,1:07:42.12,1:07:43.83,Default,,0000,0000,0000,,Ừm, Tim, cháu hi vọng thế.
Dialogue: 0,1:07:44.24,1:07:48.25,Default,,0000,0000,0000,,Ơn chúa. Jolly sẽ rất kinh ngạc nếu\Nđó là người khác.
Dialogue: 0,1:07:52.00,1:07:53.50,Default,,0000,0000,0000,,Chúng ta phải đưa ra quyết định ngay tối nay.
Dialogue: 0,1:07:53.63,1:07:55.34,Default,,0000,0000,0000,,- Về cái gì?\N- Mọi thứ.
Dialogue: 0,1:07:55.59,1:07:58.17,Default,,0000,0000,0000,,Thứ duy nhất mà anh\N lên kế hoạch cho
Dialogue: 0,1:07:58.26,1:08:00.18,Default,,0000,0000,0000,,đám cưới là em bước vào\N lễ đường
Dialogue: 0,1:08:00.26,1:08:02.47,Default,,0000,0000,0000,,trong nền nhạc Ý kì lạ nào đó
Dialogue: 0,1:08:02.60,1:08:04.76,Default,,0000,0000,0000,,tên là Il Mondo.
Dialogue: 0,1:08:04.85,1:08:05.76,Default,,0000,0000,0000,,Bài đó tuyệt lắm.
Dialogue: 0,1:08:05.85,1:08:08.10,Default,,0000,0000,0000,,Mà cái đó em hoàn toàn không chịu đâu.
Dialogue: 0,1:08:08.18,1:08:09.85,Default,,0000,0000,0000,,Như này nhé.
Dialogue: 0,1:08:10.02,1:08:13.52,Default,,0000,0000,0000,,Mỗi lần anh đưa ra một quyết định,\Nem sẽ cởi một món đồ.
Dialogue: 0,1:08:14.69,1:08:17.69,Default,,0000,0000,0000,,Được đấy. Em làm anh phải\Nchú ý rồi đấy, quí cô.
Dialogue: 0,1:08:17.99,1:08:19.32,Default,,0000,0000,0000,,Phải, um,
Dialogue: 0,1:08:20.45,1:08:22.07,Default,,0000,0000,0000,,đám cưới tổ chức ở đâu?
Dialogue: 0,1:08:23.53,1:08:25.99,Default,,0000,0000,0000,,Tại gia. Anh ghét tất cả các chỗ khác.
Dialogue: 0,1:08:26.12,1:08:27.12,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,1:08:27.83,1:08:29.66,Default,,0000,0000,0000,,- Chúa ơi.\N- Tốt.
Dialogue: 0,1:08:29.79,1:08:31.12,Default,,0000,0000,0000,,Ai sẽ là chủ hôn?
Dialogue: 0,1:08:31.21,1:08:32.71,Default,,0000,0000,0000,,Một gã địa phương nào đấy
Dialogue: 0,1:08:32.83,1:08:34.47,Default,,0000,0000,0000,,với răng vàng\Nvà lông mày thật rậm.
Dialogue: 0,1:08:34.71,1:08:35.71,Default,,0000,0000,0000,,Được đấy.
Dialogue: 0,1:08:36.21,1:08:38.84,Default,,0000,0000,0000,,Vậy lả chốt Hagrid nhé.
Dialogue: 0,1:08:40.09,1:08:41.34,Default,,0000,0000,0000,,Um...
Dialogue: 0,1:08:41.72,1:08:42.80,Default,,0000,0000,0000,,Phụ rể?
Dialogue: 0,1:08:42.93,1:08:44.01,Default,,0000,0000,0000,,Chết tiệt.
Dialogue: 0,1:08:44.14,1:08:45.80,Default,,0000,0000,0000,,Phụ rể. Nói ngay nào.
Dialogue: 0,1:08:45.93,1:08:48.58,Default,,0000,0000,0000,,Không, cái này quá khó. Phân vân lắm đó,\Nta bỏ qua vô vàn
Dialogue: 0,1:08:48.62,1:08:51.08,Default,,0000,0000,0000,,lựa chọn tốt, và cuối cùng\Nlà ghét luôn cả người mình chọn
Dialogue: 0,1:08:51.25,1:08:53.29,Default,,0000,0000,0000,,bởi vì hắn có một bài diễn văn tệ\Nvà nó đã hủy hoại cả buổi lễ.
Dialogue: 0,1:08:53.38,1:08:54.92,Default,,0000,0000,0000,,Anh có muốn nhìn thấy hai quả bưởi này không?
Dialogue: 0,1:08:54.95,1:08:56.49,Default,,0000,0000,0000,,Có chứ.
Dialogue: 0,1:08:56.98,1:08:58.70,Default,,0000,0000,0000,,Jay. Lựa chọn của anh hả?
Dialogue: 0,1:08:59.03,1:09:00.51,Default,,0000,0000,0000,,Nó là bạn thân của anh,\Nnhưng nó là một thằng khờ.
Dialogue: 0,1:09:00.57,1:09:01.99,Default,,0000,0000,0000,,Ừa, anh ấy sẽ làm\Nhỏng mọi thứ.
Dialogue: 0,1:09:02.07,1:09:03.40,Default,,0000,0000,0000,,- Vậy thì Rory. \N- Chắc chứ?
Dialogue: 0,1:09:03.53,1:09:04.86,Default,,0000,0000,0000,,Không, Harry đi.
Dialogue: 0,1:09:04.99,1:09:06.32,Default,,0000,0000,0000,,Harry nhé. Cởi đây.
Dialogue: 0,1:09:08.41,1:09:09.87,Default,,0000,0000,0000,,Rory. Xin lỗi.
Dialogue: 0,1:09:10.00,1:09:11.41,Default,,0000,0000,0000,,Gì cơ? Đồ lừa đảo!
Dialogue: 0,1:09:12.92,1:09:14.04,Default,,0000,0000,0000,,Ok, được rồi.
Dialogue: 0,1:09:14.17,1:09:15.54,Default,,0000,0000,0000,,Tuần trăng mật?
Dialogue: 0,1:09:16.00,1:09:17.67,Default,,0000,0000,0000,,Bữa sáng trên giường ở Scotland.
Dialogue: 0,1:09:17.75,1:09:20.21,Default,,0000,0000,0000,,Em sẽ không cởi quần vì Scotland đâu.
Dialogue: 0,1:09:20.34,1:09:22.84,Default,,0000,0000,0000,,Nhưng chúng ta chỉ có thể chi trả đến thế thôi.\NCởi quần ra nào.
Dialogue: 0,1:09:22.93,1:09:24.05,Default,,0000,0000,0000,,Không.
Dialogue: 0,1:09:24.18,1:09:25.26,Default,,0000,0000,0000,,Cởi quần ra!
Dialogue: 0,1:09:25.43,1:09:27.72,Default,,0000,0000,0000,,Em muốn 2 tuần\Nở Bali.
Dialogue: 0,1:09:27.85,1:09:29.18,Default,,0000,0000,0000,,Cởi quần ra!
Dialogue: 0,1:09:36.23,1:09:38.06,Default,,0000,0000,0000,,- Cậu lên kế hoạch giờ giải lao chưa?\N- Chưa.
Dialogue: 0,1:09:47.96,1:09:48.77,Default,,0000,0000,0000,,Ô, không!
Dialogue: 0,1:09:52.54,1:09:55.17,Default,,0000,0000,0000,,- Là con hả?\N- Không phải con.
Dialogue: 0,1:10:11.77,1:10:13.31,Default,,0000,0000,0000,,Dành cho anh đấy.
Dialogue: 0,1:10:47.22,1:10:49.14,Default,,0000,0000,0000,,- Không, Em bị vướng rồi!\N- Để anh. Để anh gỡ!
Dialogue: 0,1:10:49.55,1:10:50.68,Default,,0000,0000,0000,,Giúp em với!
Dialogue: 0,1:10:55.52,1:10:56.81,Default,,0000,0000,0000,,Chuẩn!
Dialogue: 0,1:11:00.40,1:11:01.94,Default,,0000,0000,0000,,Nào, theo tôi!
Dialogue: 0,1:11:04.36,1:11:05.86,Default,,0000,0000,0000,,Chu cha!
Dialogue: 0,1:11:07.82,1:11:09.20,Default,,0000,0000,0000,,Chúa ơi!
Dialogue: 0,1:11:11.99,1:11:12.99,Default,,0000,0000,0000,,Trời đất!
Dialogue: 0,1:11:20.04,1:11:21.25,Default,,0000,0000,0000,,Giỡn mặt hả!
Dialogue: 0,1:11:24.88,1:11:25.88,Default,,0000,0000,0000,,Đây này.
Dialogue: 0,1:11:30.89,1:11:32.51,Default,,0000,0000,0000,,Đúng rồi, đi nào.
Dialogue: 0,1:11:32.85,1:11:34.06,Default,,0000,0000,0000,,Lối này.
Dialogue: 0,1:11:49.20,1:11:50.91,Default,,0000,0000,0000,,Chúa tôi!
Dialogue: 0,1:12:17.27,1:12:18.35,Default,,0000,0000,0000,,Chào mọi người,
Dialogue: 0,1:12:18.68,1:12:20.18,Default,,0000,0000,0000,,tôi là Rory.
Dialogue: 0,1:12:21.23,1:12:25.73,Default,,0000,0000,0000,,Khi Tim nhờ tôi làm phụ rể cho cậu ấy,\N tôi đã rất hoảng.
Dialogue: 0,1:12:25.86,1:12:28.57,Default,,0000,0000,0000,,Nên tôi nghĩ\Ntốt nhất là đi tìm
Dialogue: 0,1:12:28.69,1:12:31.40,Default,,0000,0000,0000,,một cuốn sách về các loại diễn văn.\N Và nó đây.
Dialogue: 0,1:12:32.20,1:12:35.95,Default,,0000,0000,0000,,Và nó bảo hãy nghĩ\N về những giai thoại thật vui nhộn.
Dialogue: 0,1:12:36.87,1:12:41.83,Default,,0000,0000,0000,,Và có một chuyện rất tức cười,\N thật ra là từ công việc.
Dialogue: 0,1:12:42.54,1:12:45.50,Default,,0000,0000,0000,,Chuyện hơi phức tạp một chút\Ndựa vào tình tiết hồ sợ vụ
Dialogue: 0,1:12:45.63,1:12:47.46,Default,,0000,0000,0000,,khấu hao tài sản \N của thân chủ về
Dialogue: 0,1:12:47.55,1:12:49.13,Default,,0000,0000,0000,,vụ bất động sản\N sau khi ly hôn và, ừm...
Dialogue: 0,1:12:51.26,1:12:54.09,Default,,0000,0000,0000,,Để tôi giải thích ngắn gọn lại.\NBị cáo...
Dialogue: 0,1:12:57.89,1:13:00.14,Default,,0000,0000,0000,,Khi Tim nhờ tôi \Nlàm một bài phát biểu,
Dialogue: 0,1:13:00.27,1:13:02.52,Default,,0000,0000,0000,,phản ứng ngay lúc đó của tôi là,
Dialogue: 0,1:13:02.64,1:13:04.56,Default,,0000,0000,0000,,"Mày trả cho tao bao nhiêu hả,\N thằng nhóc con?"
Dialogue: 0,1:13:04.65,1:13:06.94,Default,,0000,0000,0000,,"Chú mày biết là tao không viết miễn phí rồi đó"
Dialogue: 0,1:13:07.02,1:13:10.15,Default,,0000,0000,0000,,Vào thời điểm đó\Ncậu ấy cặp với khá nhiều nàng.
Dialogue: 0,1:13:10.28,1:13:13.53,Default,,0000,0000,0000,,"Hàng ngon đó" và xem cậu ấy\N đi được tới đâu nào.
Dialogue: 0,1:13:13.66,1:13:16.74,Default,,0000,0000,0000,,Để tôi giải thích về mấy con số..\N5, là tới bước thổi kèn.
Dialogue: 0,1:13:19.45,1:13:23.66,Default,,0000,0000,0000,,- 8, đủ các bước...\N- Hãy nâng ly
Dialogue: 0,1:13:23.79,1:13:25.75,Default,,0000,0000,0000,,cho chàng trai có mái tóc xấu nhất
Dialogue: 0,1:13:25.88,1:13:27.84,Default,,0000,0000,0000,,và cô dâu xinh đẹp nhất trong phòng này.
Dialogue: 0,1:13:28.30,1:13:30.05,Default,,0000,0000,0000,,Thưa quí vị,\Nchúc phúc cho Tim và Mary.
Dialogue: 0,1:13:30.17,1:13:32.17,Default,,0000,0000,0000,,Tim và Mary.
Dialogue: 0,1:13:32.97,1:13:34.05,Default,,0000,0000,0000,,Chúng ta đó.
Dialogue: 0,1:13:35.01,1:13:36.97,Default,,0000,0000,0000,,Bố ước mình nên nói là "Bố yêu con"
Dialogue: 0,1:13:37.10,1:13:38.76,Default,,0000,0000,0000,,Bố nói rồi mà.
Dialogue: 0,1:13:39.18,1:13:40.43,Default,,0000,0000,0000,,Nó được ẩn dụ rồi.
Dialogue: 0,1:13:40.56,1:13:44.64,Default,,0000,0000,0000,,Bố không chắc "ẩn dụ" là đủ\Ncho lễ cưới, đúng không?
Dialogue: 0,1:13:44.77,1:13:46.94,Default,,0000,0000,0000,,Không, bố không cần làm thế đâu, ổn mà.
Dialogue: 0,1:13:47.06,1:13:50.90,Default,,0000,0000,0000,,Con rất hạnh phúc rồi.\NBố không cần làm lại đâu.
Dialogue: 0,1:13:51.03,1:13:53.32,Default,,0000,0000,0000,,Bố sẽ làm những gì bố muốn, chàng trai trẻ ạ.
Dialogue: 0,1:13:53.45,1:13:55.70,Default,,0000,0000,0000,,Bố chỉ làm một lần này thôi.
Dialogue: 0,1:13:57.62,1:14:00.54,Default,,0000,0000,0000,,Tôi sẽ nói với các vị về\Nnhững sai lầm
Dialogue: 0,1:14:00.66,1:14:05.04,Default,,0000,0000,0000,,sai lầm của Tim với cương vị là\Nmột người đàn ông cũng như một tay chơi bóng bàn.
Dialogue: 0,1:14:05.17,1:14:06.17,Default,,0000,0000,0000,,Nhưng,
Dialogue: 0,1:14:06.46,1:14:08.79,Default,,0000,0000,0000,,tôi phải nói
Dialogue: 0,1:14:10.59,1:14:13.30,Default,,0000,0000,0000,,điều quan trọng này trước, tôi
Dialogue: 0,1:14:13.42,1:14:16.76,Default,,0000,0000,0000,,chỉ yêu 3 người đàn ông trong đời.
Dialogue: 0,1:14:17.22,1:14:19.26,Default,,0000,0000,0000,,Cha tôi ổng là một tay tư bản cứng nhắc.
Dialogue: 0,1:14:19.39,1:14:21.43,Default,,0000,0000,0000,,nên tôi rất quý chú Desmond ạ,
Dialogue: 0,1:14:23.98,1:14:27.73,Default,,0000,0000,0000,,B. B. King, hiển nhiên,\Nvà chàng trai trẻ này đây.
Dialogue: 0,1:14:28.44,1:14:32.78,Default,,0000,0000,0000,,Tôi chỉ có một lời khuyên cho bất cứ ai muốn tiến tới hôn nhân thôi.
Dialogue: 0,1:14:33.49,1:14:36.32,Default,,0000,0000,0000,,Chúng ta hầu hết đều giống nhau\Nở điểm kết thúc.
Dialogue: 0,1:14:36.45,1:14:40.07,Default,,0000,0000,0000,,Chúng ta đều già đi và\Nkể đi kể lại một câu chuyện nhiều lần.
Dialogue: 0,1:14:40.16,1:14:43.49,Default,,0000,0000,0000,,Nhưng hãy thử và cưới ai đó
Dialogue: 0,1:14:44.91,1:14:45.91,Default,,0000,0000,0000,,tốt bụng.
Dialogue: 0,1:14:46.67,1:14:49.00,Default,,0000,0000,0000,,Và đây là một chàng trai tốt
Dialogue: 0,1:14:49.67,1:14:51.42,Default,,0000,0000,0000,,với một trái tim nồng ấm.
Dialogue: 0,1:14:51.80,1:14:54.67,Default,,0000,0000,0000,,Tôi không đặc biệt tự hào
Dialogue: 0,1:14:54.80,1:14:58.43,Default,,0000,0000,0000,,về bất cứ thứ gì trong đời mình,\Nnhưng tôi rất tự hào
Dialogue: 0,1:15:00.10,1:15:02.10,Default,,0000,0000,0000,,được làm bố của con trai tôi.
Dialogue: 0,1:15:05.60,1:15:09.94,Default,,0000,0000,0000,,Xin lỗi vì làm phiền ông, nhưng tôi tự\Nhỏi là tôi có thể xin chữ kí của ông chứ?
Dialogue: 0,1:15:10.02,1:15:12.06,Default,,0000,0000,0000,,Không. Không.
Dialogue: 0,1:15:12.65,1:15:13.93,Default,,0000,0000,0000,,Tôi đang ở đám cưới,\Nvì Chúa,
Dialogue: 0,1:15:13.98,1:15:16.32,Default,,0000,0000,0000,,tôi ở đây để tôn vinh tình yêu đích thực
Dialogue: 0,1:15:16.45,1:15:18.82,Default,,0000,0000,0000,,chứ không phải để nguệch ngoạc\Nchữ kí loằng ngoằng của tôi vào
Dialogue: 0,1:15:18.95,1:15:21.32,Default,,0000,0000,0000,,1 mẩu giấy ngớ ngẩn mà cô có thể bán lại trên eBay
Dialogue: 0,1:15:21.45,1:15:24.62,Default,,0000,0000,0000,,để có tiền mua chiếc mũ bớt tởm hơn và đội vào lễ cưới tiếp theo.
Dialogue: 0,1:15:24.79,1:15:27.12,Default,,0000,0000,0000,,Chú vừa gặp dì May của cháu đấy.
Dialogue: 0,1:15:27.21,1:15:31.00,Default,,0000,0000,0000,,Chúa ơi. Mọi người lẽ ra nên đeo\Nbiển tên.
Dialogue: 0,1:15:32.13,1:15:34.21,Default,,0000,0000,0000,,Sắp tới lượt cháu đấy, Kittle Kattle.
Dialogue: 0,1:15:35.46,1:15:37.47,Default,,0000,0000,0000,,Cháu không biết nữa, cậu D.
Dialogue: 0,1:15:39.30,1:15:41.18,Default,,0000,0000,0000,,Bọn con trai không tốt cho lắm.
Dialogue: 0,1:15:41.72,1:15:43.30,Default,,0000,0000,0000,,Không phải thế chứ cháu yêu?
Dialogue: 0,1:15:43.81,1:15:45.68,Default,,0000,0000,0000,,Theo kinh nghiệm của cháu thì là thế.
Dialogue: 0,1:15:46.81,1:15:48.81,Default,,0000,0000,0000,,Họ lúc nào cũng nhận nhiều
Dialogue: 0,1:15:48.98,1:15:51.02,Default,,0000,0000,0000,,nhưng cho thì không bao nhiêu.
Dialogue: 0,1:15:54.86,1:15:56.40,Default,,0000,0000,0000,,- Ngon quá. \N- Thế hả?
Dialogue: 0,1:15:56.53,1:15:58.65,Default,,0000,0000,0000,,Anh thích cách em nói "ngon quá".
Dialogue: 0,1:16:06.50,1:16:09.66,Default,,0000,0000,0000,,Em có ước là chúng ta nên chọn\N một ngày khác khô ráo hơn không?
Dialogue: 0,1:16:09.75,1:16:10.75,Default,,0000,0000,0000,,Không.
Dialogue: 0,1:16:11.83,1:16:13.71,Default,,0000,0000,0000,,Chúng ta vui là được.
Dialogue: 0,1:16:18.88,1:16:21.22,Default,,0000,0000,0000,,Bắt đầu rồi đấy.
Dialogue: 0,1:16:21.68,1:16:24.60,Default,,0000,0000,0000,,Một chuỗi ngày thú vị sắp tới đây.
Dialogue: 0,1:16:25.51,1:16:26.51,Default,,0000,0000,0000,,Vui mà!
Dialogue: 0,1:16:33.02,1:16:34.02,Default,,0000,0000,0000,,Posy nhé.
Dialogue: 0,1:16:35.65,1:16:37.36,Default,,0000,0000,0000,,Tên con bé là Posy vậy.
Dialogue: 0,1:16:37.99,1:16:40.19,Default,,0000,0000,0000,,Cô bé xinh đẹp nhất trên thế giới.
Dialogue: 0,1:16:43.57,1:16:47.58,Default,,0000,0000,0000,,Con muốn bố à.\NPhải, mẹ biết mà.
Dialogue: 0,1:16:50.87,1:16:51.87,Default,,0000,0000,0000,,Yeah.
Dialogue: 0,1:16:54.92,1:16:56.30,Default,,0000,0000,0000,,Không ai có thể chỉ cho bạn biết
Dialogue: 0,1:16:56.34,1:16:58.55,Default,,0000,0000,0000,,sẽ có những gì xảy ra\Nkhi bạn có con.
Dialogue: 0,1:16:58.71,1:17:00.30,Default,,0000,0000,0000,,Khi bạn ngắm nhìn nó trong vòng tay bạn,
Dialogue: 0,1:17:00.38,1:17:03.01,Default,,0000,0000,0000,,và bạn nhận ra từ giờ nó sẽ là trách nhiệm của bạn.
Dialogue: 0,1:17:03.93,1:17:07.76,Default,,0000,0000,0000,,Không ai có thể dạy bạn về tình yêu và nỗi sợ.
Dialogue: 0,1:17:09.39,1:17:11.35,Default,,0000,0000,0000,,Con bé đáng yêu quá.
Dialogue: 0,1:17:12.39,1:17:14.40,Default,,0000,0000,0000,,Con đúng là một đứa bé xấu xí.
Dialogue: 0,1:17:14.73,1:17:16.40,Default,,0000,0000,0000,,Giống khỉ hơn giống người.
Dialogue: 0,1:17:17.07,1:17:18.57,Default,,0000,0000,0000,,Mẹ nhớ lần đầu trông thấy con,
Dialogue: 0,1:17:18.65,1:17:21.57,Default,,0000,0000,0000,,mẹ đã tạ ơn chúa vì chúng ta đang ở rất xa sở thú London.
Dialogue: 0,1:17:22.78,1:17:24.28,Default,,0000,0000,0000,,Nhanh nào, chuyển\Nbé cưng qua nào,
Dialogue: 0,1:17:24.36,1:17:25.87,Default,,0000,0000,0000,,xem con bé nhún được không.
Dialogue: 0,1:17:25.95,1:17:27.74,Default,,0000,0000,0000,,Được chứ,\Nchắc chắn là bé sẽ nhún được.
Dialogue: 0,1:17:27.91,1:17:29.04,Default,,0000,0000,0000,,Nhìn này.
Dialogue: 0,1:17:29.16,1:17:30.29,Default,,0000,0000,0000,,Con bé có thể làm mọi thứ.
Dialogue: 0,1:17:30.41,1:17:32.37,Default,,0000,0000,0000,,- Nhìn này.\N- Chào.
Dialogue: 0,1:17:34.58,1:17:36.04,Default,,0000,0000,0000,,Cưng à.
Dialogue: 0,1:17:37.09,1:17:38.79,Default,,0000,0000,0000,,Không ai có thể chỉ cho bạn về tình thương
Dialogue: 0,1:17:38.92,1:17:40.71,Default,,0000,0000,0000,,và sự đồng cảm từ người thân của bạn.
Dialogue: 0,1:17:42.92,1:17:44.34,Default,,0000,0000,0000,,Và không có gì cho bạn thấy được
Dialogue: 0,1:17:44.43,1:17:46.39,Default,,0000,0000,0000,,sự thờ ơ từ những người bạn\N mà không có con.
Dialogue: 0,1:17:46.47,1:17:48.26,Default,,0000,0000,0000,,Con muốn chơi cùng chú Jay à?
Dialogue: 0,1:17:48.43,1:17:50.26,Default,,0000,0000,0000,,Không, cảm ơn, ổn mà.\NTuyệt lắm.
Dialogue: 0,1:17:50.60,1:17:52.81,Default,,0000,0000,0000,,Và cực kì sốc vì\Nbạn phải chuyến nhà quá nhanh
Dialogue: 0,1:17:52.89,1:17:55.73,Default,,0000,0000,0000,,một nơi mà bạn hoàn toàn\N không đủ khả năng chi trả.
Dialogue: 0,1:17:56.31,1:17:57.77,Default,,0000,0000,0000,,Xem ta thấy gì này.
Dialogue: 0,1:17:57.90,1:17:59.32,Default,,0000,0000,0000,,Xem ai kìa!
Dialogue: 0,1:17:59.90,1:18:00.98,Default,,0000,0000,0000,,Anh yêu!
Dialogue: 0,1:18:01.11,1:18:02.23,Default,,0000,0000,0000,,Anh xin lỗi.
Dialogue: 0,1:18:04.95,1:18:08.62,Default,,0000,0000,0000,,Bỗng nhiên, việc du hành thời gian\Ntrở nên thừa thãi,
Dialogue: 0,1:18:08.74,1:18:10.79,Default,,0000,0000,0000,,bởi mỗi giây phút trong cuộc sống đều trở nên sống động vô cùng.
Dialogue: 0,1:18:18.29,1:18:19.75,Default,,0000,0000,0000,,Tên nó là gì?
Dialogue: 0,1:18:19.84,1:18:20.96,Default,,0000,0000,0000,,Horace, cháu đoán thế.
Dialogue: 0,1:18:21.13,1:18:22.25,Default,,0000,0000,0000,,Chắc là thế.
Dialogue: 0,1:18:22.34,1:18:24.55,Default,,0000,0000,0000,,Và một chuyện qua trọng\Nmà cháu nghe từ cha xứ
Dialogue: 0,1:18:24.63,1:18:26.97,Default,,0000,0000,0000,,không bao giờ tặng món quà\N nhỏ hơn trẻ.
Dialogue: 0,1:18:27.14,1:18:29.47,Default,,0000,0000,0000,,Im đi, cậu là thằng khốn tồi tệ.
Dialogue: 0,1:18:29.60,1:18:31.47,Default,,0000,0000,0000,,Đừng lo, tôi còn chả mang gì cơ.
Dialogue: 0,1:18:31.64,1:18:33.52,Default,,0000,0000,0000,,Cô ấy sẽ không bao giờ biết đâu.\NCòn chưa biết có não chưa.
Dialogue: 0,1:18:33.64,1:18:35.64,Default,,0000,0000,0000,,Tôi không nghĩ là sẽ gặp cậu ở đây, Hary à.
Dialogue: 0,1:18:35.81,1:18:37.81,Default,,0000,0000,0000,,Tiệc thôi nôi không phù hợp với phong cách của cậu.
Dialogue: 0,1:18:37.98,1:18:41.15,Default,,0000,0000,0000,,Không, Mary, tôi đã bị lừa. Tôi đến vì\Nđược bảo là có rượu miễn phí.
Dialogue: 0,1:18:43.03,1:18:45.15,Default,,0000,0000,0000,,Tôi ghét trẻ con, chị biết mà.
Dialogue: 0,1:18:45.32,1:18:46.95,Default,,0000,0000,0000,,Tiện thể, Kit Kat đâu rồi?
Dialogue: 0,1:18:47.28,1:18:50.28,Default,,0000,0000,0000,,Con không rõ, con bé nói sẽ đến\Nđây tầm 3 giờ.
Dialogue: 0,1:18:50.37,1:18:53.70,Default,,0000,0000,0000,,Và đặc biệt bọn con có làm cupcakes màu tím cho con bé.
Dialogue: 0,1:18:53.79,1:18:55.50,Default,,0000,0000,0000,,Con bé đến rồi!
Dialogue: 0,1:18:55.66,1:18:57.10,Default,,0000,0000,0000,,Nhắc cái Tào Tháo tới ngay,\Nchắc là con bé tới.
Dialogue: 0,1:18:58.83,1:19:01.34,Default,,0000,0000,0000,,Chúng ta sẽ đợi đến khi cô Kit Kat đến nhé.
Dialogue: 0,1:19:02.34,1:19:03.84,Default,,0000,0000,0000,,- Chào.\N- Jimmy.
Dialogue: 0,1:19:04.01,1:19:05.51,Default,,0000,0000,0000,,Em gái tôi đâu?
Dialogue: 0,1:19:06.84,1:19:07.84,Default,,0000,0000,0000,,Em tưởng cô ấy ở đây.
Dialogue: 0,1:19:07.97,1:19:09.01,Default,,0000,0000,0000,,Không, con bé vẫn chưa đến,
Dialogue: 0,1:19:10.89,1:19:12.43,Default,,0000,0000,0000,,Không hay rồi.
Dialogue: 0,1:19:12.93,1:19:14.60,Default,,0000,0000,0000,,Nghĩa là sao?
Dialogue: 0,1:19:14.72,1:19:18.23,Default,,0000,0000,0000,,Um... Bọn em cãi nhau sáng nay.
Dialogue: 0,1:19:18.35,1:19:20.60,Default,,0000,0000,0000,,Chuyện vớ vẩn, nhưng cô ấy hơi say, nên....
Dialogue: 0,1:19:21.52,1:19:25.07,Default,,0000,0000,0000,,Và cô ấy chạy lên xe để đến đây và...
Dialogue: 0,1:19:25.19,1:19:27.57,Default,,0000,0000,0000,,Em bảo cô ấy gặp\Nem ở đây nên...
Dialogue: 0,1:19:27.95,1:19:31.37,Default,,0000,0000,0000,,Có một bài hát của Baz\NLuhrmann tên là Sunscreen.
Dialogue: 0,1:19:31.53,1:19:33.70,Default,,0000,0000,0000,,Ông nói rằng lo lắng\Nvề tương lai
Dialogue: 0,1:19:33.79,1:19:35.12,Default,,0000,0000,0000,,cũng giống như việc cố gắng
Dialogue: 0,1:19:35.20,1:19:38.04,Default,,0000,0000,0000,,giải một phương trình đại số\Nbằng cách nhai kẹo cao su.
Dialogue: 0,1:19:38.71,1:19:40.79,Default,,0000,0000,0000,,Những rắc rối thật sự trong cuộc sống của bạn
Dialogue: 0,1:19:40.92,1:19:44.71,Default,,0000,0000,0000,,luôn là những thứ\Nmà bạn chưa bao giờ ngờ tới.
Dialogue: 0,1:19:58.27,1:19:59.44,Default,,0000,0000,0000,,Làm sao?
Dialogue: 0,1:20:01.23,1:20:02.90,Default,,0000,0000,0000,,Bọn em cãi nhau.
Dialogue: 0,1:20:03.40,1:20:04.40,Default,,0000,0000,0000,,Và,
Dialogue: 0,1:20:05.73,1:20:08.24,Default,,0000,0000,0000,,có lẽ em đã\Nkhông hoàn toàn tỉnh táo.
Dialogue: 0,1:20:10.07,1:20:11.95,Default,,0000,0000,0000,,Cô ấy ổn chứ? Không.
Dialogue: 0,1:20:12.24,1:20:14.41,Default,,0000,0000,0000,,Nó bỏ đi khi nào?\NỞ đâu?
Dialogue: 0,1:20:14.58,1:20:16.63,Default,,0000,0000,0000,,Thật chính xác vào.\NThời điểm cụ thể. Địa chỉ chi tiết.
Dialogue: 0,1:20:26.59,1:20:29.13,Default,,0000,0000,0000,,Về rồi đây. Xin lỗi mọi người.
Dialogue: 0,1:20:29.42,1:20:30.67,Default,,0000,0000,0000,,Vào đi.
Dialogue: 0,1:20:31.68,1:20:33.26,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,1:20:33.60,1:20:35.60,Default,,0000,0000,0000,,- Chào.\N- Con bé đây rồi.
Dialogue: 0,1:20:35.93,1:20:37.93,Default,,0000,0000,0000,,Có một đứa nhỏ sống ở đây đúng không?
Dialogue: 0,1:20:38.10,1:20:42.27,Default,,0000,0000,0000,,Phải, con bé đang rất phấn khích.\NNó đang ở dưới.
Dialogue: 0,1:20:42.85,1:20:44.94,Default,,0000,0000,0000,,Chúc mừng sinh nhật, Posy.
Dialogue: 0,1:20:47.15,1:20:49.69,Default,,0000,0000,0000,,Anh xin lỗi.\NAnh phải đi đón Kit Kat.
Dialogue: 0,1:20:49.82,1:20:51.61,Default,,0000,0000,0000,,Em tưởng con bé sẽ tự lái xe đến chứ.
Dialogue: 0,1:20:51.74,1:20:53.53,Default,,0000,0000,0000,,Thực ra con bé không thể.
Dialogue: 0,1:20:54.78,1:20:56.91,Default,,0000,0000,0000,,Nó ổn chứ? Để sau nhé.
Dialogue: 0,1:20:59.25,1:21:01.21,Default,,0000,0000,0000,,Anh khá lo cho Kit Kat.
Dialogue: 0,1:21:03.21,1:21:05.21,Default,,0000,0000,0000,,Vâng. Em biết.
Dialogue: 0,1:21:05.88,1:21:08.88,Default,,0000,0000,0000,,Con bé uống rượu trong khi chúng ta uống trà.
Dialogue: 0,1:21:09.51,1:21:11.92,Default,,0000,0000,0000,,Và Jimmy thì không đối tốt với con bé.
Dialogue: 0,1:21:12.05,1:21:15.14,Default,,0000,0000,0000,,Và nó đã không\Nthèm động đến bánh cupcakes tím.
Dialogue: 0,1:21:15.93,1:21:18.26,Default,,0000,0000,0000,,Chúng ta phải làm gì đó\Nđể thay đổi tình hình.
Dialogue: 0,1:21:20.43,1:21:21.43,Default,,0000,0000,0000,,Đúng thế.
Dialogue: 0,1:21:22.44,1:21:24.10,Default,,0000,0000,0000,,Nhưng anh biết không,
Dialogue: 0,1:21:24.81,1:21:29.07,Default,,0000,0000,0000,,nếu mọi thứ cần thay đổi, em nghĩ\Ncó lẽ con bé phải tự làm điều đó.
Dialogue: 0,1:21:30.49,1:21:31.49,Default,,0000,0000,0000,,Có thể.
Dialogue: 0,1:21:32.53,1:21:34.03,Default,,0000,0000,0000,,Hoặc không.
Dialogue: 0,1:21:37.99,1:21:40.24,Default,,0000,0000,0000,,Cưng à. Chuyện gì đang diễn ra vậy?
Dialogue: 0,1:21:40.58,1:21:42.91,Default,,0000,0000,0000,,Mày là đứa tốt nhất anh biết
Dialogue: 0,1:21:43.04,1:21:45.33,Default,,0000,0000,0000,,Mày tốt ngang vợ anh. Anh không thể hiểu nổi.
Dialogue: 0,1:21:47.04,1:21:49.00,Default,,0000,0000,0000,,Có lẽ, chỉ có lẽ thôi,
Dialogue: 0,1:21:50.13,1:21:51.88,Default,,0000,0000,0000,,em là đứa sa ngã.
Dialogue: 0,1:21:52.76,1:21:56.51,Default,,0000,0000,0000,,Mọi gia đình đều có một người sa ngã,
Dialogue: 0,1:21:56.85,1:21:59.81,Default,,0000,0000,0000,,người không giống như kì vọng của mọi người,\Nhay lạc lối
Dialogue: 0,1:21:59.93,1:22:01.93,Default,,0000,0000,0000,,và hay phạm sai lầm.
Dialogue: 0,1:22:02.48,1:22:04.56,Default,,0000,0000,0000,,Có lẽ em là đứa sa ngã của nhà mình.
Dialogue: 0,1:22:05.69,1:22:08.90,Default,,0000,0000,0000,,Không.
Dialogue: 0,1:22:15.99,1:22:18.99,Default,,0000,0000,0000,,Được rồi. Anh sẽ nói cho mày một bí mật.
Dialogue: 0,1:22:19.12,1:22:21.37,Default,,0000,0000,0000,,Và mày phải hứa là sẽ không nói cho ai.
Dialogue: 0,1:22:21.66,1:22:23.04,Default,,0000,0000,0000,,Chúng ta vẫn luôn giữ bí mật cho nhau mà.
Dialogue: 0,1:22:23.16,1:22:24.54,Default,,0000,0000,0000,,Thế hả?
Dialogue: 0,1:22:24.96,1:22:27.63,Default,,0000,0000,0000,,Mày hứa là sẽ không
Dialogue: 0,1:22:30.67,1:22:33.34,Default,,0000,0000,0000,,bao giờ nói chứ?
Dialogue: 0,1:22:33.63,1:22:34.63,Default,,0000,0000,0000,,Hứa.
Dialogue: 0,1:22:40.35,1:22:42.77,Default,,0000,0000,0000,,Anh có thể đi xuyên thời gian.
Dialogue: 0,1:22:45.85,1:22:48.15,Default,,0000,0000,0000,,Tại sao chúng ta lại phải\Nđứng trong tủ cầu thang làm gì?
Dialogue: 0,1:22:48.27,1:22:51.78,Default,,0000,0000,0000,,Bởi vì chúng ta sắp đi ngược thời gian\N và mày sẽ làm cho vài việc cho khác đi.
Dialogue: 0,1:22:51.82,1:22:53.69,Default,,0000,0000,0000,,Tôi thích khiếu hài hước của ông đó.
Dialogue: 0,1:22:53.82,1:22:56.07,Default,,0000,0000,0000,,Nắm chặt tay anh. Nhắm mắt vào.
Dialogue: 0,1:23:13.09,1:23:16.51,Default,,0000,0000,0000,,Chúa ơi! Quỉ thần ơi!
Dialogue: 0,1:23:17.22,1:23:21.05,Default,,0000,0000,0000,,Lạy thánh thần thiên địa ơi.
Dialogue: 0,1:23:25.98,1:23:27.02,Default,,0000,0000,0000,,Anh đang đùa đúng không?
Dialogue: 0,1:23:27.10,1:23:30.81,Default,,0000,0000,0000,,Tôi có thể tới bất cứ thời điểm nào\Nvà ông đưa tôi trở lại bữa tiệc tồi tệ nhất cuộc đời.
Dialogue: 0,1:23:30.94,1:23:33.02,Default,,0000,0000,0000,,E là thế. Triển thôi.
Dialogue: 0,1:23:35.94,1:23:36.99,Default,,0000,0000,0000,,Chúng ta có việc phải làm đấy.
Dialogue: 0,1:23:37.11,1:23:38.20,Default,,0000,0000,0000,,Việc gì?
Dialogue: 0,1:23:38.32,1:23:41.32,Default,,0000,0000,0000,,Đảm bảo để cô\Nkhông gặp Jimmy Kincade.
Dialogue: 0,1:23:41.45,1:23:42.87,Default,,0000,0000,0000,,Nhanh, vào đây.
Dialogue: 0,1:23:44.79,1:23:46.37,Default,,0000,0000,0000,,Nhưng anh ý sắp\Nsửa rơi vào lưới tình của em!
Dialogue: 0,1:23:46.50,1:23:48.12,Default,,0000,0000,0000,,Lần này thì miễn.
Dialogue: 0,1:23:57.88,1:24:01.22,Default,,0000,0000,0000,,Cô gái xinh đẹp này là ai thế?\NEm là Jennifer phải không?
Dialogue: 0,1:24:01.34,1:24:02.51,Default,,0000,0000,0000,,Yeah.
Dialogue: 0,1:24:02.64,1:24:03.85,Default,,0000,0000,0000,,Hoang dã đấy.
Dialogue: 0,1:24:03.97,1:24:05.31,Default,,0000,0000,0000,,Anh thích váy của em Jennifer ạ.
Dialogue: 0,1:24:05.43,1:24:06.77,Default,,0000,0000,0000,,Cảm ơn.
Dialogue: 0,1:24:06.89,1:24:09.35,Default,,0000,0000,0000,,Phải, em hiểu rồi.
Dialogue: 0,1:24:09.48,1:24:13.56,Default,,0000,0000,0000,,Nếu nó không gặp em thì nó cũng\Nlàm tình với con khác.
Dialogue: 0,1:24:13.98,1:24:15.90,Default,,0000,0000,0000,,Phòng hơn chữa nhỉ?
Dialogue: 0,1:24:18.90,1:24:20.57,Default,,0000,0000,0000,,Xin lỗi, Jimmy.
Dialogue: 0,1:24:21.66,1:24:23.57,Default,,0000,0000,0000,,Xin lỗi, tôi có quen cô không?
Dialogue: 0,1:24:23.70,1:24:25.53,Default,,0000,0000,0000,,Phải, có đấy.
Dialogue: 0,1:24:26.12,1:24:28.79,Default,,0000,0000,0000,,Khá rõ luôn. Xin lỗi.
Dialogue: 0,1:24:28.91,1:24:31.25,Default,,0000,0000,0000,,Và đây là những gì mà\Nlẽ ra tôi phải làm ngay từ đầu.
Dialogue: 0,1:24:37.34,1:24:40.51,Default,,0000,0000,0000,,Chúc mừng năm mới mọi người.\NNăm mới vui vẻ.
Dialogue: 0,1:24:40.63,1:24:42.55,Default,,0000,0000,0000,,Quay lại tủ thôi.
Dialogue: 0,1:24:45.05,1:24:46.22,Default,,0000,0000,0000,,Tuyệt thật!
Dialogue: 0,1:24:46.51,1:24:47.81,Default,,0000,0000,0000,,Giờ sao?
Dialogue: 0,1:24:47.93,1:24:49.22,Default,,0000,0000,0000,,Trời biết được.
Dialogue: 0,1:24:49.35,1:24:51.73,Default,,0000,0000,0000,,Anh chỉ hi vọng từ\Ngiây phút này trở đi mày sẽ tránh xa
Dialogue: 0,1:24:51.77,1:24:54.06,Default,,0000,0000,0000,,mấy thằng lêu lổng ra\Nbởi vì bọn nó chả có gì tốt đẹp cả.
Dialogue: 0,1:24:54.40,1:24:56.77,Default,,0000,0000,0000,,Ông nghiêm túc như này từ bao giờ đấy?
Dialogue: 0,1:24:56.90,1:24:59.23,Default,,0000,0000,0000,,Từ khi anh nhận ra\Ncó thể anh sẽ mất mày.
Dialogue: 0,1:25:01.99,1:25:04.70,Default,,0000,0000,0000,,Chuẩn bị tinh thần đi,\Ncó lẽ sẽ kì quặc đấy.
Dialogue: 0,1:25:05.24,1:25:07.20,Default,,0000,0000,0000,,Vài thứ sẽ thay đổi.
Dialogue: 0,1:25:13.58,1:25:14.92,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,1:25:15.04,1:25:16.04,Default,,0000,0000,0000,,Gì thế?
Dialogue: 0,1:25:16.21,1:25:17.25,Default,,0000,0000,0000,,Jay.
Dialogue: 0,1:25:17.38,1:25:19.17,Default,,0000,0000,0000,,Jay Jay? Phải.
Dialogue: 0,1:25:19.84,1:25:23.22,Default,,0000,0000,0000,,Và anh ấy rất đáng yêu. Trời ơi.
Dialogue: 0,1:25:24.80,1:25:25.80,Default,,0000,0000,0000,,Phải rồi,
Dialogue: 0,1:25:26.43,1:25:27.93,Default,,0000,0000,0000,,triển thôi.
Dialogue: 0,1:25:33.90,1:25:35.40,Default,,0000,0000,0000,,Hai đứa ra đây,
Dialogue: 0,1:25:36.06,1:25:39.11,Default,,0000,0000,0000,,mẹ vừa mở mấy gói\Nbánh qui đấy.
Dialogue: 0,1:25:44.41,1:25:47.03,Default,,0000,0000,0000,,Bác sẽ nhờ cháu vài việc đây.
Dialogue: 0,1:25:47.12,1:25:48.44,Default,,0000,0000,0000,,Bác biết cháu định nói gì.
Dialogue: 0,1:25:48.58,1:25:49.98,Default,,0000,0000,0000,,Ăn bánh đi xong\Nra đây giúp bác.
Dialogue: 0,1:25:51.45,1:25:53.79,Default,,0000,0000,0000,,Nhưng nhớ để dành cho cậu D.
Dialogue: 0,1:25:56.25,1:25:58.54,Default,,0000,0000,0000,,Chỉ là nhổ cỏ thôi.
Dialogue: 0,1:25:58.92,1:26:00.92,Default,,0000,0000,0000,,- Em khỏe chứ? Anh rất nhớ em\N- Thật ư.
Dialogue: 0,1:26:01.46,1:26:04.09,Default,,0000,0000,0000,,- Mẹ em muốn anh làm vườn. \N- Làm thôi.
Dialogue: 0,1:26:06.30,1:26:09.18,Default,,0000,0000,0000,,Nó là nhổ cỏ, nó hơi\Nkhó chịu một tí.
Dialogue: 0,1:26:11.27,1:26:14.10,Default,,0000,0000,0000,,Đây chính là những gì chúng ta cần.\NTất cả.
Dialogue: 0,1:26:14.27,1:26:15.60,Default,,0000,0000,0000,,Nhặt cái héo rồi ý, thấy chứ.
Dialogue: 0,1:26:18.31,1:26:20.73,Default,,0000,0000,0000,,Chúng thành vụn rồi nhỉ?
Dialogue: 0,1:26:33.66,1:26:35.46,Default,,0000,0000,0000,,Mọi chuyện như nào?
Dialogue: 0,1:26:35.58,1:26:37.33,Default,,0000,0000,0000,,Mỹ mãn.
Dialogue: 0,1:26:37.75,1:26:41.25,Default,,0000,0000,0000,,Em vui quá. Em muốn nghe mọi chuyện.
Dialogue: 0,1:26:41.34,1:26:43.55,Default,,0000,0000,0000,,Anh nấu bữa tối giùm em nhé\Nem có vài việc
Dialogue: 0,1:26:43.59,1:26:45.43,Default,,0000,0000,0000,,cần xong trước 6h\Nnếu không em sẽ bị sa thải.
Dialogue: 0,1:26:45.47,1:26:48.76,Default,,0000,0000,0000,,Được. Anh không thể nghĩ ra việc\Ngì khác khiến anh hứng thú hơn.
Dialogue: 0,1:26:48.89,1:26:51.97,Default,,0000,0000,0000,,Rồi nào, nhân vật lộng lẫy\Nnhất hành tinh đâu rồi.
Dialogue: 0,1:26:52.14,1:26:56.98,Default,,0000,0000,0000,,Đến đây với bố và nhận\Nmột đống hổ lốn vào mồm nào.
Dialogue: 0,1:27:04.11,1:27:05.57,Default,,0000,0000,0000,,Chào cậu nhóc.
Dialogue: 0,1:27:09.49,1:27:10.95,Default,,0000,0000,0000,,Con
Dialogue: 0,1:27:11.08,1:27:13.49,Default,,0000,0000,0000,,đợi bố nhé, bố sẽ quay lại ngay.
Dialogue: 0,1:27:25.84,1:27:27.76,Default,,0000,0000,0000,,Bố, ra gặp con 1 chút được chứ.
Dialogue: 0,1:27:27.84,1:27:29.68,Default,,0000,0000,0000,,Ừa. Được.
Dialogue: 0,1:27:31.68,1:27:33.51,Default,,0000,0000,0000,,Con không thể quay vế quá khứ\N sau khi có con, phải không?
Dialogue: 0,1:27:33.64,1:27:35.43,Default,,0000,0000,0000,,Đúng thế. Lẽ ra\Nbố phải nhắc con trước.
Dialogue: 0,1:27:35.52,1:27:38.06,Default,,0000,0000,0000,,Trước khi có con thì ổn
Dialogue: 0,1:27:38.19,1:27:40.69,Default,,0000,0000,0000,,nhưng chỉ có 1 con tinh trùng\Ntại 1 thời điểm nhất định
Dialogue: 0,1:27:40.86,1:27:42.11,Default,,0000,0000,0000,,mới tạo ra đứa bé này,
Dialogue: 0,1:27:42.19,1:27:43.94,Default,,0000,0000,0000,,nên nếu con làm bất cứ việc\Ngì khác đi chỉ 1 xíu thôi,
Dialogue: 0,1:27:44.07,1:27:45.82,Default,,0000,0000,0000,,con sẽ có 1 đứa con khác.
Dialogue: 0,1:27:47.95,1:27:52.62,Default,,0000,0000,0000,,Vậy, mọi thứ trước ngày hôm qua, đều biến mất ạ?
Dialogue: 0,1:27:53.53,1:27:55.83,Default,,0000,0000,0000,,Như mọi người thôi.
Dialogue: 0,1:27:56.00,1:27:57.87,Default,,0000,0000,0000,,Được rồi. Thú vị đấy.
Dialogue: 0,1:27:58.67,1:28:01.33,Default,,0000,0000,0000,,Khó quá. Con yêu bố\NCon phải đi đây.
Dialogue: 0,1:28:25.73,1:28:27.65,Default,,0000,0000,0000,,- Về nhà đi.\N- Không
Dialogue: 0,1:28:27.74,1:28:29.34,Default,,0000,0000,0000,,Bọn anh sẽ không rời khỏi đây\Ncho đến khi
Dialogue: 0,1:28:29.40,1:28:33.20,Default,,0000,0000,0000,,tìm ra cách để đảm bảo chuyện\Nnày không tái diễn.
Dialogue: 0,1:28:46.05,1:28:47.75,Default,,0000,0000,0000,,Hai người đi được chưa?
Dialogue: 0,1:29:01.06,1:29:03.44,Default,,0000,0000,0000,,Em phải chia tay Jimmy, đúng không?
Dialogue: 0,1:29:04.44,1:29:05.94,Default,,0000,0000,0000,,Để sống tốt hơn.
Dialogue: 0,1:29:06.90,1:29:10.28,Default,,0000,0000,0000,,Và em phải ngừng uống rượu.
Dialogue: 0,1:29:13.20,1:29:15.12,Default,,0000,0000,0000,,Ngừng nhảy việc lung tung.
Dialogue: 0,1:29:17.12,1:29:21.20,Default,,0000,0000,0000,,Và hẹn hò với ai đó
Dialogue: 0,1:29:21.96,1:29:24.62,Default,,0000,0000,0000,,tử tế và nhàm chán.
Dialogue: 0,1:29:27.63,1:29:28.80,Default,,0000,0000,0000,,Phải đó.
Dialogue: 0,1:29:32.13,1:29:35.26,Default,,0000,0000,0000,,Và em biết không, tử tế\Nkhông có nghĩa là nhàm chán đâu.
Dialogue: 0,1:29:35.39,1:29:36.64,Default,,0000,0000,0000,,Ví dụ?
Dialogue: 0,1:29:37.76,1:29:39.26,Default,,0000,0000,0000,,Matt Damon?
Dialogue: 0,1:29:39.64,1:29:40.97,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,1:29:41.98,1:29:43.56,Default,,0000,0000,0000,,Em sẽ hẹn hò với Matt Damon.
Dialogue: 0,1:29:43.64,1:29:46.90,Default,,0000,0000,0000,,Gần đây mày có gặp Jay không?
Dialogue: 0,1:29:46.98,1:29:51.49,Default,,0000,0000,0000,,Jay bạn ông ấy hả? Gì cơ, Jay tóc bết á ?\NNhìn hơi giống con rối Jay?
Dialogue: 0,1:29:51.61,1:29:52.61,Default,,0000,0000,0000,,Chính nó.
Dialogue: 0,1:29:53.45,1:29:56.41,Default,,0000,0000,0000,,Tự nhiên anh nghĩ đến nó.\NNó vẫn luôn thích mày đấy.
Dialogue: 0,1:29:56.78,1:29:58.78,Default,,0000,0000,0000,,- Thật sao?\N- Phải.
Dialogue: 0,1:30:00.45,1:30:01.62,Default,,0000,0000,0000,,Khùng thật!
Dialogue: 0,1:30:01.75,1:30:04.12,Default,,0000,0000,0000,,Cân nhắc về việc mời nó đi ăn tối đi.\NMày rảnh chứ?
Dialogue: 0,1:30:04.25,1:30:08.00,Default,,0000,0000,0000,,Chắc có. Nhưng có lẽ\Nphải mông má lại trước đã.
Dialogue: 0,1:30:08.13,1:30:10.38,Default,,0000,0000,0000,,Phải. Nhìn mày tàn vãi.
Dialogue: 0,1:30:17.05,1:30:18.43,Default,,0000,0000,0000,,Joanna.
Dialogue: 0,1:30:18.55,1:30:19.97,Default,,0000,0000,0000,,Ơn Chúa cậu đã về.
Dialogue: 0,1:30:20.10,1:30:21.68,Default,,0000,0000,0000,,Hẳn là một đêm ác mộng.
Dialogue: 0,1:30:21.85,1:30:23.48,Default,,0000,0000,0000,,Tớ biết. Mọi chuyện ổn rồi.
Dialogue: 0,1:30:23.60,1:30:25.10,Default,,0000,0000,0000,,Con bé đâu rồi?
Dialogue: 0,1:30:25.23,1:30:28.52,Default,,0000,0000,0000,,Đêm kinh khủng nhất trong kiếp độc thân của tớ.\NPosy đâu rồi?
Dialogue: 0,1:30:29.23,1:30:31.69,Default,,0000,0000,0000,,Đây rồi! Chào con!
Dialogue: 0,1:30:31.82,1:30:34.53,Default,,0000,0000,0000,,Chào con! Bé cưng.
Dialogue: 0,1:30:34.65,1:30:36.86,Default,,0000,0000,0000,,Cưng à, con đang làm gì thế?
Dialogue: 0,1:30:40.45,1:30:42.37,Default,,0000,0000,0000,,Sinh thêm đứa nữa nhé.
Dialogue: 0,1:30:44.16,1:30:47.21,Default,,0000,0000,0000,,Điên à, không.
Dialogue: 0,1:30:49.09,1:30:52.09,Default,,0000,0000,0000,,Nó rất đau và em sẽ phì ra.\NNhư phì lũ ấy.
Dialogue: 0,1:30:52.21,1:30:54.51,Default,,0000,0000,0000,,Mẹ hơi béo thôi, con nhỉ.
Dialogue: 0,1:30:54.84,1:30:56.80,Default,,0000,0000,0000,,Bảo mẹ con muốn có em gái đi.
Dialogue: 0,1:30:56.93,1:31:01.01,Default,,0000,0000,0000,,Không. Bảo bố\Nlà con rất hạnh phúc khi làm con một đi.
Dialogue: 0,1:31:02.77,1:31:05.14,Default,,0000,0000,0000,,Thật may là chúng tôi vẫn còn trẻ, vô tư
Dialogue: 0,1:31:05.27,1:31:07.69,Default,,0000,0000,0000,,và không lâu sau đó quân số nhà tôi lên 4 người.
Dialogue: 0,1:31:07.81,1:31:11.19,Default,,0000,0000,0000,,Thật phi thường. Posy\NLake, mới 3 tuổi,
Dialogue: 0,1:31:11.32,1:31:14.28,Default,,0000,0000,0000,,sắp sửa phá kỉ lục chạy\N10 mét nữ của Olympic.
Dialogue: 0,1:31:14.40,1:31:18.53,Default,,0000,0000,0000,,Cô ấy sắp làm được rồi. Xong rồi, cô ấy đã phá kỉ lục.\NTuyệt quá!
Dialogue: 0,1:31:18.66,1:31:21.37,Default,,0000,0000,0000,,Giỏi quá.\NCon siêu thật.
Dialogue: 0,1:31:21.49,1:31:22.91,Default,,0000,0000,0000,,Nó vẫn ngủ ngon này.
Dialogue: 0,1:31:23.04,1:31:25.29,Default,,0000,0000,0000,,Anh giúp em xíu được không?\NEm lo quá.
Dialogue: 0,1:31:25.37,1:31:27.71,Default,,0000,0000,0000,,Em nên mặc gì cho bữa tối\Nvới tác giả có sách bán chạy nhất?
Dialogue: 0,1:31:27.83,1:31:30.38,Default,,0000,0000,0000,,Đợi anh xong xuôi với hai đứa nhỏ\Nrồi anh sẽ lên ngay.
Dialogue: 0,1:31:30.50,1:31:31.71,Default,,0000,0000,0000,,Tuyệt. Cảm ơn anh.
Dialogue: 0,1:31:32.04,1:31:33.46,Default,,0000,0000,0000,,Tiếp nào.
Dialogue: 0,1:31:33.88,1:31:36.51,Default,,0000,0000,0000,,Được rồi. Cái này thì sao?
Dialogue: 0,1:31:36.63,1:31:39.13,Default,,0000,0000,0000,,Lộng lẫy lắm.\NXong rồi. Ngon.
Dialogue: 0,1:31:39.26,1:31:42.43,Default,,0000,0000,0000,,Không. Nghiêm túc vào. Nó...
Dialogue: 0,1:31:43.06,1:31:46.06,Default,,0000,0000,0000,,Em không biết nữa. Em ghét nó.
Dialogue: 0,1:31:46.39,1:31:48.10,Default,,0000,0000,0000,,Nhìn nó hơi đơn điệu và
Dialogue: 0,1:31:48.60,1:31:51.48,Default,,0000,0000,0000,,khiến em trông hơi béo.
Dialogue: 0,1:31:51.61,1:31:54.40,Default,,0000,0000,0000,,Không, chuẩn rồi. Nó hơi đơn điệu và xấu.\NAnh ghét nó.
Dialogue: 0,1:31:56.28,1:31:58.15,Default,,0000,0000,0000,,OK. Thế còn cái này?
Dialogue: 0,1:31:58.53,1:32:00.49,Default,,0000,0000,0000,,Đẹp tuyệt. Xong rồi.
Dialogue: 0,1:32:00.62,1:32:03.20,Default,,0000,0000,0000,,Không, lộ ngực quá!
Dialogue: 0,1:32:03.37,1:32:05.41,Default,,0000,0000,0000,,Thế hả.
Dialogue: 0,1:32:05.54,1:32:06.54,Default,,0000,0000,0000,,Khá kín đáo đấy.
Dialogue: 0,1:32:06.62,1:32:09.75,Default,,0000,0000,0000,,Không, em sẽ không đi đôi guốc này đâu.\NNhìn em như gái đứng đường.
Dialogue: 0,1:32:09.83,1:32:11.46,Default,,0000,0000,0000,,Không đi guốc là xong.
Dialogue: 0,1:32:11.58,1:32:13.17,Default,,0000,0000,0000,,Nhưng chân em bị ngắn.
Dialogue: 0,1:32:13.29,1:32:15.80,Default,,0000,0000,0000,,Ừm, thế em muốn trông giống\Ngái đứng đường hay chú lùn?
Dialogue: 0,1:32:16.92,1:32:19.05,Default,,0000,0000,0000,,Cảnh cáo. Cảnh cáo đấy nhé.
Dialogue: 0,1:32:22.72,1:32:23.76,Default,,0000,0000,0000,,Tuyệt!
Dialogue: 0,1:32:23.89,1:32:24.89,Default,,0000,0000,0000,,Không.
Dialogue: 0,1:32:28.81,1:32:29.81,Default,,0000,0000,0000,,Không!
Dialogue: 0,1:32:30.85,1:32:32.94,Default,,0000,0000,0000,,Anh thích cái này.
Dialogue: 0,1:32:33.23,1:32:35.69,Default,,0000,0000,0000,,Không, em sẽ khoác váy ra ngoài chứ,
Dialogue: 0,1:32:35.82,1:32:38.32,Default,,0000,0000,0000,,đây là đồ lót.\NAnh đổ đốn quá.
Dialogue: 0,1:32:40.74,1:32:41.82,Default,,0000,0000,0000,,Cái này?
Dialogue: 0,1:32:41.99,1:32:43.03,Default,,0000,0000,0000,,Không tồi.
Dialogue: 0,1:32:43.66,1:32:44.99,Default,,0000,0000,0000,,Hay cái này?
Dialogue: 0,1:32:45.12,1:32:47.62,Default,,0000,0000,0000,,-Em lừa anh đúng không? Vẫn cái đấy mà.\N- Không!
Dialogue: 0,1:32:48.16,1:32:49.20,Default,,0000,0000,0000,,Không phải?
Dialogue: 0,1:32:49.62,1:32:51.79,Default,,0000,0000,0000,,Ok. Em không nghĩ cái này quá tồi.
Dialogue: 0,1:32:52.21,1:32:53.88,Default,,0000,0000,0000,,Yeah, nhìn ăn chơi lắm.
Dialogue: 0,1:32:54.34,1:32:55.96,Default,,0000,0000,0000,,- Thật chứ?\N -  Ừa.
Dialogue: 0,1:32:56.09,1:32:58.42,Default,,0000,0000,0000,,Okay. Tuyệt. Tốt.
Dialogue: 0,1:32:58.51,1:32:59.63,Default,,0000,0000,0000,,Um...
Dialogue: 0,1:33:00.09,1:33:01.80,Default,,0000,0000,0000,,Anh thấy cái màu xanh thế nào?
Dialogue: 0,1:33:01.93,1:33:03.59,Default,,0000,0000,0000,,- Cái màu xanh? \N- Phải.
Dialogue: 0,1:33:03.72,1:33:06.89,Default,,0000,0000,0000,,Có phải cái đầu tiên em thử mà hơi đơn điệu\Nvà lôi thôi
Dialogue: 0,1:33:06.97,1:33:09.14,Default,,0000,0000,0000,,nhưng thực ra nó không\Nđơn điệu và lôi thôi đúng không?
Dialogue: 0,1:33:09.23,1:33:11.14,Default,,0000,0000,0000,,Phải, anh thích cái nào hơn?
Dialogue: 0,1:33:11.27,1:33:13.19,Default,,0000,0000,0000,,Anh không biết.\NThực sự anh sắp phát điên rồi.
Dialogue: 0,1:33:13.31,1:33:14.69,Default,,0000,0000,0000,,Em nghĩ em thích cái màu xanh.
Dialogue: 0,1:33:14.86,1:33:16.23,Default,,0000,0000,0000,,- Được rồi.\N - Yeah.
Dialogue: 0,1:33:17.69,1:33:20.28,Default,,0000,0000,0000,,Okay. Okay, vậy chọn cái này nhé?
Dialogue: 0,1:33:20.40,1:33:22.24,Default,,0000,0000,0000,,Nhìn em ấn tượng quá.
Dialogue: 0,1:33:22.36,1:33:23.53,Default,,0000,0000,0000,,- Thật sao?\N-  Phải.
Dialogue: 0,1:33:23.66,1:33:25.24,Default,,0000,0000,0000,,Rồi, cảm ơn anh.
Dialogue: 0,1:33:25.78,1:33:27.45,Default,,0000,0000,0000,,Chúa ơi.
Dialogue: 0,1:33:27.91,1:33:29.66,Default,,0000,0000,0000,,Posy đâu rồi?
Dialogue: 0,1:33:29.95,1:33:31.79,Default,,0000,0000,0000,,Anh để nó dưới nhà.
Dialogue: 0,1:33:32.25,1:33:35.58,Default,,0000,0000,0000,,Anh không để cửa phòng\Nbản thảo mở đấy chứ.
Dialogue: 0,1:33:36.63,1:33:38.30,Default,,0000,0000,0000,,Anh nghĩ là không.
Dialogue: 0,1:33:39.13,1:33:41.55,Default,,0000,0000,0000,,Nhìn em này. Nhìn sâu vào mắt em này.
Dialogue: 0,1:33:41.67,1:33:45.09,Default,,0000,0000,0000,,Và giải thích chuyện này cho em.\NVề cơ bản là đời em tiêu rồi.
Dialogue: 0,1:33:45.22,1:33:47.80,Default,,0000,0000,0000,,Anh thật sự cần ra ngoài 2 phút, có lẽ chỉ cần 1 phút.
Dialogue: 0,1:33:47.93,1:33:49.60,Default,,0000,0000,0000,,Đừng hòng!
Dialogue: 0,1:33:50.68,1:33:53.23,Default,,0000,0000,0000,,Ai cho anh nghe điện thoại!\NEm phải làm gì đây?
Dialogue: 0,1:33:53.27,1:33:55.81,Default,,0000,0000,0000,,Anh nghĩ chúng ta nên\Ntrả lời điện thoại.
Dialogue: 0,1:33:55.86,1:33:57.31,Default,,0000,0000,0000,,Nếu anh trả lời cái điện thoại chết tiệt đó,
Dialogue: 0,1:33:57.44,1:33:58.90,Default,,0000,0000,0000,,em sẽ giết anh cùng nó luôn.
Dialogue: 0,1:33:58.98,1:34:02.11,Default,,0000,0000,0000,,Anh sẽ không trả lời,\Nnhưng anh thực sự cần ra ngoài.
Dialogue: 0,1:34:02.24,1:34:04.24,Default,,0000,0000,0000,,Không, không đi đâu hết,\Nkhông ra ngoài. Không.
Dialogue: 0,1:34:04.36,1:34:05.86,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,1:34:05.99,1:34:07.57,Default,,0000,0000,0000,,Xin lỗi, Ngài McEwan.
Dialogue: 0,1:34:07.70,1:34:11.62,Default,,0000,0000,0000,,Tôi đọc gần hết sách của ngài,\Nvà phần còn lại
Dialogue: 0,1:34:11.75,1:34:14.37,Default,,0000,0000,0000,,thì được tô màu hoặc xé vụn ra.
Dialogue: 0,1:34:15.71,1:34:16.71,Default,,0000,0000,0000,,Yeah.
Dialogue: 0,1:34:17.75,1:34:19.79,Default,,0000,0000,0000,,Anh không biết là Posy có thể sử dụng
Dialogue: 0,1:34:19.92,1:34:22.01,Default,,0000,0000,0000,,chiếc máy này.\NVề mặt nào đấy thì cũng ấn tượng đấy chứ.
Dialogue: 0,1:34:23.55,1:34:26.22,Default,,0000,0000,0000,,Gì thế? Tôi có giúp được gì không?
Dialogue: 0,1:34:28.93,1:34:30.60,Default,,0000,0000,0000,,Mary.
Dialogue: 0,1:34:31.72,1:34:33.89,Default,,0000,0000,0000,,Không, mọi chuyện...Xin lỗi.
Dialogue: 0,1:34:34.77,1:34:36.73,Default,,0000,0000,0000,,Con trai mẹ sẽ giải thích.
Dialogue: 0,1:34:36.85,1:34:38.36,Default,,0000,0000,0000,,Mẹ anh đấy.
Dialogue: 0,1:34:39.02,1:34:40.36,Default,,0000,0000,0000,,Chào mẹ.
Dialogue: 0,1:34:45.86,1:34:47.86,Default,,0000,0000,0000,,Không, không, mọi thứ đều ổn.\NBọn con sẽ...
Dialogue: 0,1:34:48.07,1:34:49.82,Default,,0000,0000,0000,,Bọn con sẽ về đó ngay.
Dialogue: 0,1:34:50.70,1:34:52.04,Default,,0000,0000,0000,,Chào mẹ.
Dialogue: 0,1:35:06.63,1:35:07.97,Default,,0000,0000,0000,,Chào con yêu.
Dialogue: 0,1:35:08.14,1:35:09.47,Default,,0000,0000,0000,,Mẹ. Mẹ ổn chứ?
Dialogue: 0,1:35:10.55,1:35:11.64,Default,,0000,0000,0000,,Thành thật hả?
Dialogue: 0,1:35:11.76,1:35:12.81,Default,,0000,0000,0000,,Sao không?
Dialogue: 0,1:35:13.22,1:35:15.89,Default,,0000,0000,0000,,Mẹ đang điên tiết vãi lồng.
Dialogue: 0,1:35:16.52,1:35:21.19,Default,,0000,0000,0000,,Mọi thứ đều chả có ý nghĩa gì\Nkhi không còn ông ấy nữa.
Dialogue: 0,1:35:22.40,1:35:24.65,Default,,0000,0000,0000,,Mary. Vào đây,\Nuống tí trà nhé.
Dialogue: 0,1:35:25.53,1:35:26.65,Default,,0000,0000,0000,,Con khỏe chứ.
Dialogue: 0,1:35:26.82,1:35:27.90,Default,,0000,0000,0000,,Yeah, con ổn.
Dialogue: 0,1:35:28.03,1:35:29.16,Default,,0000,0000,0000,,Mẹ ăn chưa?
Dialogue: 0,1:35:29.28,1:35:30.41,Default,,0000,0000,0000,,Tất nhiên là rồi.
Dialogue: 0,1:35:36.46,1:35:37.50,Default,,0000,0000,0000,,Cậu Desmond.
Dialogue: 0,1:35:38.92,1:35:39.75,Default,,0000,0000,0000,,Cậu ổn chứ?
Dialogue: 0,1:35:39.83,1:35:41.58,Default,,0000,0000,0000,,Rất ổn, cảm ơn cháu.
Dialogue: 0,1:35:42.00,1:35:43.67,Default,,0000,0000,0000,,Hơi nóng một tí.
Dialogue: 0,1:35:47.84,1:35:50.51,Default,,0000,0000,0000,,Bố cháu,\Nta nghĩ ông ấy không khỏe lắm.
Dialogue: 0,1:35:51.51,1:35:52.60,Default,,0000,0000,0000,,Ung thư.
Dialogue: 0,1:35:53.85,1:35:54.85,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,1:35:55.31,1:35:57.81,Default,,0000,0000,0000,,Cậu rất buồn Tim ạ.
Dialogue: 0,1:35:59.81,1:36:01.81,Default,,0000,0000,0000,,Ở đám cưới của cháu,\Nông ấy nói rằng ông ấy yêu ta.
Dialogue: 0,1:36:02.31,1:36:04.32,Default,,0000,0000,0000,,- Ông ấy thật lòng đó.\N- Ta biết.
Dialogue: 0,1:36:06.28,1:36:08.61,Default,,0000,0000,0000,,Đó là ngày tuyệt vời nhất trong đời ta.
Dialogue: 0,1:36:11.20,1:36:13.53,Default,,0000,0000,0000,,Nên việc này có lẽ ra việc tệ nhất.
Dialogue: 0,1:36:19.79,1:36:20.79,Default,,0000,0000,0000,,Bố.
Dialogue: 0,1:36:23.04,1:36:24.96,Default,,0000,0000,0000,,Vì Chúa.
Dialogue: 0,1:36:25.50,1:36:27.34,Default,,0000,0000,0000,,Không phải cả con nữa chứ?
Dialogue: 0,1:36:27.47,1:36:28.51,Default,,0000,0000,0000,,Sao ạ?
Dialogue: 0,1:36:28.59,1:36:32.39,Default,,0000,0000,0000,,Kit Kat's vừa ôm bố khóc tức tưởi\Nxong giờ đến con à?
Dialogue: 0,1:36:32.47,1:36:33.93,Default,,0000,0000,0000,,Mẹ con nói gì rồi?
Dialogue: 0,1:36:34.14,1:36:35.18,Default,,0000,0000,0000,,Sự thật.
Dialogue: 0,1:36:35.31,1:36:36.35,Default,,0000,0000,0000,,Uh, phải
Dialogue: 0,1:36:37.52,1:36:39.18,Default,,0000,0000,0000,,trừ phần này.
Dialogue: 0,1:36:40.10,1:36:42.81,Default,,0000,0000,0000,,Bố đã từng hút thuốc và bố\Nkhông thể ngừng lại
Dialogue: 0,1:36:42.94,1:36:45.69,Default,,0000,0000,0000,,cho đến khi sinh các con.
Dialogue: 0,1:36:46.40,1:36:49.02,Default,,0000,0000,0000,,Và mẹ con chắc chắn sẽ không\Nhẹn hò với bố
Dialogue: 0,1:36:49.10,1:36:51.35,Default,,0000,0000,0000,,nếu bố không phải là\Nmột tay chơi phì phèo hấp dẫn.
Dialogue: 0,1:36:54.45,1:36:58.58,Default,,0000,0000,0000,,Bố đã đi khám sớm nhất có thể,\Nnhưng mọi thứ đã quá muộn.
Dialogue: 0,1:37:00.46,1:37:01.75,Default,,0000,0000,0000,,Chúng ta còn bao lâu?
Dialogue: 0,1:37:01.92,1:37:07.09,Default,,0000,0000,0000,,Con biết đấy, nó có thể là vài năm.
Dialogue: 0,1:37:09.88,1:37:11.55,Default,,0000,0000,0000,,Thực sự thì bao lâu?
Dialogue: 0,1:37:14.26,1:37:15.89,Default,,0000,0000,0000,,Vài tuần, bố lo vậy.
Dialogue: 0,1:37:23.40,1:37:25.90,Default,,0000,0000,0000,,Chúng ta đã nói chuyện này\Ntrước đây chưa?
Dialogue: 0,1:37:28.78,1:37:29.78,Default,,0000,0000,0000,,Rồi.
Dialogue: 0,1:37:31.53,1:37:33.24,Default,,0000,0000,0000,,Chuyện gì đã xảy ra?
Dialogue: 0,1:37:33.36,1:37:35.91,Default,,0000,0000,0000,,Bố gần như suy sụp.
Dialogue: 0,1:37:36.33,1:37:37.99,Default,,0000,0000,0000,,Bố đã ôm con.
Dialogue: 0,1:37:57.30,1:37:58.22,Default,,0000,0000,0000,,Bố xin lỗi.
Dialogue: 0,1:37:58.31,1:38:01.06,Default,,0000,0000,0000,,Con đang nghĩ về\Ncái vụ thời gian ấy....
Dialogue: 0,1:38:01.68,1:38:03.81,Default,,0000,0000,0000,,Không, bố chưa bao giờ\Nnói ta có thể sửa chữa mọi thứ.
Dialogue: 0,1:38:03.98,1:38:06.06,Default,,0000,0000,0000,,Bố hoàn toàn chưa nói như vậy bao giờ.
Dialogue: 0,1:38:06.19,1:38:08.69,Default,,0000,0000,0000,,Cuộc sống vốn hỗn loạn,\Ndù con là ai đi chăng nữa.
Dialogue: 0,1:38:08.82,1:38:10.73,Default,,0000,0000,0000,,Nhìn Jesus đi.\NÔng ta là con của Chúa,
Dialogue: 0,1:38:10.86,1:38:12.82,Default,,0000,0000,0000,,và xem chuyện gì đã xảy ra với ông ta, vì Chúa?
Dialogue: 0,1:38:12.95,1:38:14.20,Default,,0000,0000,0000,,Con biết, nhưng
Dialogue: 0,1:38:15.16,1:38:17.62,Default,,0000,0000,0000,,bố phải biết\Nlà con cảm thấy bị lừa nhẹ.
Dialogue: 0,1:38:17.74,1:38:20.16,Default,,0000,0000,0000,,Không. Thực tế,\Nhãy nhìn vào mặt tốt của nó.
Dialogue: 0,1:38:20.33,1:38:22.79,Default,,0000,0000,0000,,Người đàn ông duy nhất nghỉ việc ở tuổi 50
Dialogue: 0,1:38:22.91,1:38:25.16,Default,,0000,0000,0000,,là một người du hành thời gian\Nmuốn dành thời gian
Dialogue: 0,1:38:25.33,1:38:27.58,Default,,0000,0000,0000,,để chơi bóng bàn với con trai mình nhiều hơn.
Dialogue: 0,1:38:29.71,1:38:30.71,Default,,0000,0000,0000,,Phải.
Dialogue: 0,1:38:32.51,1:38:34.51,Default,,0000,0000,0000,,Vậy vấn đề là vậy hả?
Dialogue: 0,1:38:36.84,1:38:40.51,Default,,0000,0000,0000,,Bố rất tiếc nhưng chúng ta buộc phải gọi.\NĐột nhiên bệnh tình diễn biến rất xấu.
Dialogue: 0,1:38:46.31,1:38:48.80,Default,,0000,0000,0000,,Và bố có một điều quan trọng muốn\Nnói với con.
Dialogue: 0,1:38:48.84,1:38:51.36,Default,,0000,0000,0000,,À, để ta nói lại,
Dialogue: 0,1:38:51.69,1:38:54.32,Default,,0000,0000,0000,,con muốn nghe\Nmột bí mật lớn
Dialogue: 0,1:38:54.40,1:38:56.70,Default,,0000,0000,0000,,hay con muốn tự tìm ra nó\Nnhư một đứa trẻ?
Dialogue: 0,1:38:56.82,1:38:58.87,Default,,0000,0000,0000,,Chúa ơi,\Ncòn một bí mật khác nữa sao.
Dialogue: 0,1:38:59.70,1:39:02.87,Default,,0000,0000,0000,,Ít buồn hơn.\NNhưng quan trọng bội phần.
Dialogue: 0,1:39:03.62,1:39:06.29,Default,,0000,0000,0000,,Quan trọng nhất luôn.
Dialogue: 0,1:39:08.88,1:39:11.38,Default,,0000,0000,0000,,Tiếp tục đi. Nói cho con nghe đi.
Dialogue: 0,1:39:11.71,1:39:13.67,Default,,0000,0000,0000,,Ta nên tiết kiệm thời gian.
Dialogue: 0,1:39:18.89,1:39:22.56,Default,,0000,0000,0000,,Và ông đã nói với tôi\Ncông thức bí mật của hạnh phúc.
Dialogue: 0,1:39:24.56,1:39:26.64,Default,,0000,0000,0000,,Phần một của kế hoạch 2 phần
Dialogue: 0,1:39:26.77,1:39:28.81,Default,,0000,0000,0000,,là tôi nên tự xoay sở với cuộc sống bình thường,
Dialogue: 0,1:39:28.90,1:39:31.90,Default,,0000,0000,0000,,ngày qua ngày,\Nnhư những người khác.
Dialogue: 0,1:39:37.40,1:39:42.24,Default,,0000,0000,0000,,Đây là báo cáo mới nhất\Ncủa chúng tôi, với vài đoạn đã chỉnh sửa được tô đậm.
Dialogue: 0,1:39:45.58,1:39:47.91,Default,,0000,0000,0000,,Rupert. Rupert, khả năng của anh chỉ đến thế thôi à?
Dialogue: 0,1:39:49.04,1:39:52.25,Default,,0000,0000,0000,,Không. Chắc chắn không rồi.\NChúng tôi có thể thay đổi nó.
Dialogue: 0,1:39:52.38,1:39:53.88,Default,,0000,0000,0000,,Mục số hai ý.
Dialogue: 0,1:40:01.39,1:40:04.10,Default,,0000,0000,0000,,Chào ông. Ông sẽ ăn\Ntại đây hay mang đi?
Dialogue: 0,1:40:04.26,1:40:05.60,Default,,0000,0000,0000,,Mang đi.
Dialogue: 0,1:40:05.72,1:40:07.06,Default,,0000,0000,0000,,Vâng? Không sao chứ ạ.
Dialogue: 0,1:40:07.18,1:40:11.19,Default,,0000,0000,0000,,Hết 4.24 bảng thưa ông.\NCảm ơn quí khách.
Dialogue: 0,1:40:11.69,1:40:14.27,Default,,0000,0000,0000,,Đây là tiền lẻ của ngài.\N76 xu.
Dialogue: 0,1:40:14.40,1:40:16.11,Default,,0000,0000,0000,,- Cảm ơn. \N- Cảm ơn ông. Xin chào.
Dialogue: 0,1:40:16.53,1:40:17.81,Default,,0000,0000,0000,,Anh ăn tại đây hay mang đi?
Dialogue: 0,1:40:23.37,1:40:27.08,Default,,0000,0000,0000,,Theo cố biết thì bị cáo, John\NWelbeck, có hay không phạm tội gian lận?
Dialogue: 0,1:40:27.16,1:40:28.20,Default,,0000,0000,0000,,Vô tội.
Dialogue: 0,1:40:28.29,1:40:30.02,Default,,0000,0000,0000,,Và cô chắc chắn về điều đó chứ? 
Dialogue: 0,1:40:30.07,1:40:31.75,Default,,0000,0000,0000,,- Vâng.\N- Cảm ơn, cô có thể ngồi.
Dialogue: 0,1:40:32.08,1:40:33.13,Default,,0000,0000,0000,,Ơn Chúa.
Dialogue: 0,1:40:33.25,1:40:35.63,Default,,0000,0000,0000,,Hãy để cho bị cáo được tha bổng.
Dialogue: 0,1:40:36.30,1:40:38.30,Default,,0000,0000,0000,,Tất cả đứng lên.
Dialogue: 0,1:40:51.65,1:40:53.48,Default,,0000,0000,0000,,- Tắt đèn nhé? \N - Ừa.
Dialogue: 0,1:40:54.31,1:40:55.65,Default,,0000,0000,0000,,Hôm nay mệt mỏi quá.
Dialogue: 0,1:40:56.98,1:40:59.49,Default,,0000,0000,0000,,Và đây là phần hai\Ntrong kế hoạch của bố.
Dialogue: 0,1:41:01.32,1:41:05.66,Default,,0000,0000,0000,,Ông bảo tôi hãy sống lại mỗi ngày\N2 lần.
Dialogue: 0,1:41:06.45,1:41:08.91,Default,,0000,0000,0000,,Lần đầu tiên với toàn bộ\Nlo lắng và áp lực
Dialogue: 0,1:41:09.00,1:41:11.79,Default,,0000,0000,0000,,khiến chúng ta không thể\Ncảm nhận được sự tươi đẹp của thế giới này,
Dialogue: 0,1:41:12.08,1:41:14.67,Default,,0000,0000,0000,,và lần thứ 2 để cảm nhận nó.
Dialogue: 0,1:41:14.79,1:41:16.29,Default,,0000,0000,0000,,Được rồi bố.
Dialogue: 0,1:41:17.00,1:41:18.50,Default,,0000,0000,0000,,Thử xem nào.
Dialogue: 0,1:41:23.93,1:41:25.89,Default,,0000,0000,0000,,Báo cáo hiện tại\Ncủa chúng tôi à?
Dialogue: 0,1:41:26.22,1:41:28.89,Default,,0000,0000,0000,,Bản chỉnh sửa đây...
Dialogue: 0,1:41:34.86,1:41:38.69,Default,,0000,0000,0000,,Robert, cái này không đạt.\NKhả năng của anh chỉ đến thế thôi à?
Dialogue: 0,1:41:40.53,1:41:42.24,Default,,0000,0000,0000,,Tôi sẽ để 2 cậu\Nthảo luận lại.
Dialogue: 0,1:41:42.24,1:41:43.70,Default,,0000,0000,0000,,[Thằng cha khốn nạn]
Dialogue: 0,1:41:45.03,1:41:46.28,Default,,0000,0000,0000,,Ooh.
Dialogue: 0,1:41:48.87,1:41:50.87,Default,,0000,0000,0000,,Xin chào ông.\NChào cô.
Dialogue: 0,1:41:51.00,1:41:53.50,Default,,0000,0000,0000,,- Hôm nay ông sẽ ăn tại đây hay mang đi?\N- Mang đi.
Dialogue: 0,1:41:53.58,1:41:54.79,Default,,0000,0000,0000,,Ông muốn 1 cái túi chứ?
Dialogue: 0,1:41:54.92,1:41:56.17,Default,,0000,0000,0000,,Cũng được.
Dialogue: 0,1:41:56.25,1:41:58.88,Default,,0000,0000,0000,,Hết 6.23 bảng thưa ông.\NChúc ông 1 ngày tốt lành.
Dialogue: 0,1:41:58.98,1:42:00.31,Default,,0000,0000,0000,,Cảm ơn. Tạm biệt.
Dialogue: 0,1:42:01.09,1:42:02.09,Default,,0000,0000,0000,,Xin chào.
Dialogue: 0,1:42:05.76,1:42:07.55,Default,,0000,0000,0000,,- Nhìn này!\N- Gì?
Dialogue: 0,1:42:07.68,1:42:08.89,Default,,0000,0000,0000,,Căn phòng này không đẹp sao?
Dialogue: 0,1:42:09.01,1:42:10.18,Default,,0000,0000,0000,,Ừa.
Dialogue: 0,1:42:10.72,1:42:12.06,Default,,0000,0000,0000,,Nhanh lên.
Dialogue: 0,1:42:12.89,1:42:14.19,Default,,0000,0000,0000,,Vô tội.
Dialogue: 0,1:42:18.07,1:42:19.40,Default,,0000,0000,0000,,Tuyệt vời!
Dialogue: 0,1:42:52.56,1:42:54.56,Default,,0000,0000,0000,,Hôm nay không phải một ngày tồi tệ chứ.
Dialogue: 0,1:42:54.64,1:42:57.73,Default,,0000,0000,0000,,Không. Mọi thứ đều tuyệt.
Dialogue: 0,1:42:58.77,1:43:01.44,Default,,0000,0000,0000,,Một ngày không thể tuyệt hơn.
Dialogue: 0,1:43:02.32,1:43:04.78,Default,,0000,0000,0000,,Oh, nhẹ nhõm quá,
Dialogue: 0,1:43:05.78,1:43:08.78,Default,,0000,0000,0000,,bởi vì nếu nó\Nlà một ngày tồi tệ.
Dialogue: 0,1:43:09.24,1:43:13.24,Default,,0000,0000,0000,,em sẽ bị bắt mây mưa\Nvới anh để bù đắp cho chuyện đó.
Dialogue: 0,1:43:14.79,1:43:15.79,Default,,0000,0000,0000,,Ngủ ngon.
Dialogue: 0,1:43:20.79,1:43:23.17,Default,,0000,0000,0000,,Hôm nay là một ngày rất, rất tệ.
Dialogue: 0,1:43:23.30,1:43:25.67,Default,,0000,0000,0000,,Anh cảm thấy rất tồi, thực sự luôn.
Dialogue: 0,1:43:25.80,1:43:28.47,Default,,0000,0000,0000,,Anh bị sa thải.
Dialogue: 0,1:43:29.30,1:43:31.47,Default,,0000,0000,0000,,Và anh đã giết người.
Dialogue: 0,1:43:37.14,1:43:39.31,Default,,0000,0000,0000,,Tệ quá phải không?
Dialogue: 0,1:43:39.48,1:43:41.48,Default,,0000,0000,0000,,Kinh khủng luôn.
Dialogue: 0,1:43:42.44,1:43:44.78,Default,,0000,0000,0000,,Ngày tệ nhất trước giờ hả.
Dialogue: 0,1:43:45.32,1:43:46.99,Default,,0000,0000,0000,,Em rất tiếc.
Dialogue: 0,1:43:51.91,1:43:55.49,Default,,0000,0000,0000,,Có những ngày,\Nbạn chỉ muốn trải qua 1 lần.
Dialogue: 0,1:43:56.33,1:43:57.50,Default,,0000,0000,0000,,Anh ổn chứ?
Dialogue: 0,1:44:49.01,1:44:51.88,Default,,0000,0000,0000,,Mọi người đã sẵn sàng chưa?
Dialogue: 0,1:44:52.30,1:44:55.72,Default,,0000,0000,0000,,Tất nhiên là không rồi. Ngày đáng ghét.
Dialogue: 0,1:44:56.56,1:44:59.39,Default,,0000,0000,0000,,Cho con một phút.
Dialogue: 0,1:45:21.75,1:45:23.75,Default,,0000,0000,0000,,Quyển sách này xuất sắc quá.
Dialogue: 0,1:45:24.67,1:45:29.34,Default,,0000,0000,0000,,Dickens rất tuyệt vời những câu chuyện trào phúng.
Dialogue: 0,1:45:30.26,1:45:32.01,Default,,0000,0000,0000,,Con đến từ đâu đấy?
Dialogue: 0,1:45:32.38,1:45:33.93,Default,,0000,0000,0000,,Từ...
Dialogue: 0,1:45:34.26,1:45:35.93,Default,,0000,0000,0000,,Được rồi.
Dialogue: 0,1:45:36.22,1:45:37.76,Default,,0000,0000,0000,,Ngày quan trọng.
Dialogue: 0,1:45:38.60,1:45:42.06,Default,,0000,0000,0000,,Cảm ơn con đã ghé thăm.\NBộ vest của cậu Desmond đẹp chứ?
Dialogue: 0,1:45:42.19,1:45:44.02,Default,,0000,0000,0000,,Không chê vào đâu được.
Dialogue: 0,1:45:44.27,1:45:45.27,Default,,0000,0000,0000,,Tuyệt vời.
Dialogue: 0,1:45:45.94,1:45:47.62,Default,,0000,0000,0000,,Bố đã nói là bố muốn được\Nbật nhạc của Nick Cave chưa?
Dialogue: 0,1:45:47.69,1:45:49.36,Default,,0000,0000,0000,,Con sẽ lo chuyện đó.
Dialogue: 0,1:45:49.44,1:45:50.90,Default,,0000,0000,0000,,Cảm ơn con.
Dialogue: 0,1:45:51.28,1:45:53.61,Default,,0000,0000,0000,,Bố đọc con nghe\Nđoạn này nhé?
Dialogue: 0,1:45:57.95,1:46:00.45,Default,,0000,0000,0000,,Bố đọc đi,\Ncon còn nhiều thời gian lắm.
Dialogue: 0,1:46:01.12,1:46:03.00,Default,,0000,0000,0000,,"Tôi nghĩ hẳn là\Nngười La Mã rất thích
Dialogue: 0,1:46:03.08,1:46:05.79,Default,,0000,0000,0000,,chõ mũi vào chuyện của người khác.
Dialogue: 0,1:46:05.96,1:46:09.46,Default,,0000,0000,0000,,Có khi việc mà họ trở nên luôn bồn chồn\N là một hệ quả.
Dialogue: 0,1:46:09.59,1:46:12.80,Default,,0000,0000,0000,,Dù sao thì, cái mũi La Mã của ngài Wopsle\Nđang xía vào chuyện của tôi..."
Dialogue: 0,1:47:48.69,1:47:51.02,Default,,0000,0000,0000,,Anh nghĩ sao\Nvề bọn trẻ.
Dialogue: 0,1:47:51.15,1:47:52.65,Default,,0000,0000,0000,,Bọn chúng làm sao?
Dialogue: 0,1:47:53.69,1:47:55.90,Default,,0000,0000,0000,,Hơi ít đúng không?
Dialogue: 0,1:47:56.99,1:47:57.99,Default,,0000,0000,0000,,Gì cơ?
Dialogue: 0,1:47:58.70,1:48:00.70,Default,,0000,0000,0000,,Ý em là chỉ hai thôi á?
Dialogue: 0,1:48:03.49,1:48:05.87,Default,,0000,0000,0000,,Tàu chỉ được đẻ một đứa thôi đấy.
Dialogue: 0,1:48:07.83,1:48:10.50,Default,,0000,0000,0000,,Em chỉ nghĩ là\Nanh biết đấy,
Dialogue: 0,1:48:11.59,1:48:13.34,Default,,0000,0000,0000,,đây là lúc thích hợp\Nđể sinh một đứa đảm bảo.
Dialogue: 0,1:48:13.42,1:48:14.42,Default,,0000,0000,0000,,Gì?
Dialogue: 0,1:48:14.50,1:48:15.92,Default,,0000,0000,0000,,Đề phòng trường hợp\Nmột đứa quá thông minh
Dialogue: 0,1:48:16.01,1:48:18.40,Default,,0000,0000,0000,,chúng ta không muốn đứa còn lại\Nphải cảm thấy ngu dốt suốt đời chứ?
Dialogue: 0,1:48:18.44,1:48:22.72,Default,,0000,0000,0000,,Và nếu chúng ta có đứa thứ 3,\Nchúng ta sẽ có hai đứa ngốc vui vẻ.
Dialogue: 0,1:48:25.52,1:48:27.18,Default,,0000,0000,0000,,Anh nghĩ sao?
Dialogue: 0,1:48:31.52,1:48:34.02,Default,,0000,0000,0000,,Đây là quyết định khó khăn nhất đời tôi.
Dialogue: 0,1:48:34.52,1:48:36.94,Default,,0000,0000,0000,,Nói CÓ với tương lai
Dialogue: 0,1:48:37.07,1:48:39.45,Default,,0000,0000,0000,,có nghĩa là nói KHÔNG với bố tôi. Mãi mãi.
Dialogue: 0,1:48:41.24,1:48:43.24,Default,,0000,0000,0000,,Chúng ta đợi 1 thời gian nữa chứ?
Dialogue: 0,1:48:46.12,1:48:47.29,Default,,0000,0000,0000,,Tất nhiên.
Dialogue: 0,1:48:48.12,1:48:50.12,Default,,0000,0000,0000,,Em đồng ý.
Dialogue: 0,1:48:54.75,1:48:57.55,Default,,0000,0000,0000,,Bây giờ luôn thì sao?
Dialogue: 0,1:48:59.47,1:49:00.80,Default,,0000,0000,0000,,Ngay bây giờ?
Dialogue: 0,1:49:03.14,1:49:04.30,Default,,0000,0000,0000,,Luôn?
Dialogue: 0,1:49:11.73,1:49:12.73,Default,,0000,0000,0000,,Ừa,
Dialogue: 0,1:49:14.11,1:49:15.11,Default,,0000,0000,0000,,được.
Dialogue: 0,1:49:16.61,1:49:17.65,Default,,0000,0000,0000,,Thật chứ?
Dialogue: 0,1:49:19.95,1:49:22.61,Default,,0000,0000,0000,,Bố luôn ước có thêm một đứa con nữa.
Dialogue: 0,1:49:23.41,1:49:24.41,Default,,0000,0000,0000,,Nên...
Dialogue: 0,1:49:26.83,1:49:29.50,Default,,0000,0000,0000,,Dù sao thì, chúng ta thử cố gắng\N và xem được không.
Dialogue: 0,1:49:30.08,1:49:31.08,Default,,0000,0000,0000,,Chính xác.
Dialogue: 0,1:49:39.84,1:49:41.84,Default,,0000,0000,0000,,Có khi tối nay em đẻ đấy.
Dialogue: 0,1:49:41.93,1:49:44.43,Default,,0000,0000,0000,,Và em không tin được\Nlà anh đã nhớ từng chi tiết nhỏ
Dialogue: 0,1:49:44.51,1:49:46.43,Default,,0000,0000,0000,,của lộ trình\Nđến bệnh viện như nào đâu.
Dialogue: 0,1:49:46.51,1:49:47.85,Default,,0000,0000,0000,,Ngon.
Dialogue: 0,1:49:51.18,1:49:53.02,Default,,0000,0000,0000,,Cho anh 1 giây nhé?
Dialogue: 0,1:49:53.94,1:49:55.60,Default,,0000,0000,0000,,Anh xuống nhà 1 chút.
Dialogue: 0,1:50:12.29,1:50:15.29,Default,,0000,0000,0000,,Tỉ số là 17-20\NMột trận đấu vô cùng kịch tính.
Dialogue: 0,1:50:15.38,1:50:17.17,Default,,0000,0000,0000,,Được chơi bởi 2 cầu thủ giỏi nhất
Dialogue: 0,1:50:17.29,1:50:19.04,Default,,0000,0000,0000,,trong lịch sử của giải đấu.
Dialogue: 0,1:50:19.21,1:50:22.05,Default,,0000,0000,0000,,Đám đông bị mê hoặc bởi chàng cầu thủ trẻ,
Dialogue: 0,1:50:22.13,1:50:24.88,Default,,0000,0000,0000,,đang bị quyến rũ bởi những thành tích\Nlừng lẫy trong quá khứ của lão cầu thủ già.
Dialogue: 0,1:50:26.89,1:50:28.89,Default,,0000,0000,0000,,Chúa ơi, bố thắng rồi,
Dialogue: 0,1:50:29.72,1:50:32.06,Default,,0000,0000,0000,,bố đã không thắng nhiều năm rồi,
Dialogue: 0,1:50:32.56,1:50:34.52,Default,,0000,0000,0000,,Cuối cùng bố đã thắng.
Dialogue: 0,1:50:35.23,1:50:38.86,Default,,0000,0000,0000,,Giải thưởng là gì? Trừ\Nhuy chương vàng Olympic.
Dialogue: 0,1:50:39.90,1:50:41.11,Default,,0000,0000,0000,,Con sẽ hôn bố.
Dialogue: 0,1:50:41.23,1:50:44.24,Default,,0000,0000,0000,,Hôn ư?
Dialogue: 0,1:50:49.58,1:50:51.54,Default,,0000,0000,0000,,Bố hiểu rồi.
Dialogue: 0,1:50:52.91,1:50:54.41,Default,,0000,0000,0000,,Là thế hả?
Dialogue: 0,1:50:56.37,1:50:57.75,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,1:50:58.54,1:51:00.75,Default,,0000,0000,0000,,Đây là lần cuối của con.
Dialogue: 0,1:51:02.05,1:51:03.67,Default,,0000,0000,0000,,Đứa bé\Nsắp ra đời rồi.
Dialogue: 0,1:51:24.78,1:51:26.11,Default,,0000,0000,0000,,Chúc mừng con.
Dialogue: 0,1:51:33.12,1:51:34.62,Default,,0000,0000,0000,,Con trai của ta.
Dialogue: 0,1:51:37.96,1:51:39.58,Default,,0000,0000,0000,,Bố thân yêu của con.
Dialogue: 0,1:51:44.55,1:51:46.59,Default,,0000,0000,0000,,Con còn có thể làm gì nữa không?
Dialogue: 0,1:51:46.72,1:51:48.80,Default,,0000,0000,0000,,Bố còn muốn con làm gì nữa không?
Dialogue: 0,1:51:50.60,1:51:53.26,Default,,0000,0000,0000,,Bố không biết. À có
Dialogue: 0,1:51:55.06,1:51:56.73,Default,,0000,0000,0000,,có 1 điều.
Dialogue: 0,1:51:57.06,1:51:59.14,Default,,0000,0000,0000,,Đi dạo trên bờ biển.
Dialogue: 0,1:51:59.27,1:52:01.15,Default,,0000,0000,0000,,Tất nhiên là phạm luật hoàn toàn,
Dialogue: 0,1:52:01.27,1:52:03.15,Default,,0000,0000,0000,,nhưng nếu chúng ta không thay đổi bất cứ thứ gì,
Dialogue: 0,1:52:03.48,1:52:06.82,Default,,0000,0000,0000,,nếu chúng ta cẩn thận,\Nsẽ không có gì nguy hại đâu.
Dialogue: 0,1:52:07.32,1:52:08.95,Default,,0000,0000,0000,,Sẽ rất tuyệt đấy.
Dialogue: 0,1:52:39.35,1:52:42.35,Default,,0000,0000,0000,,Đợi con với.
Dialogue: 0,1:52:44.19,1:52:45.48,Default,,0000,0000,0000,,Thấp xuống.
Dialogue: 0,1:52:50.20,1:52:51.20,Default,,0000,0000,0000,,Thắng rồi nha.
Dialogue: 0,1:53:00.96,1:53:02.29,Default,,0000,0000,0000,,Con mệt quá.
Dialogue: 0,1:53:03.29,1:53:04.71,Default,,0000,0000,0000,,Cảm ơn bố.
Dialogue: 0,1:53:20.23,1:53:23.06,Default,,0000,0000,0000,,Vậy là tôi sắp kể xong\N câu chuyện của mình.
Dialogue: 0,1:53:23.56,1:53:27.07,Default,,0000,0000,0000,,Như mọi gia đình khác,\Nchúng tôi phải làm quen với cuộc sống sau đám tang,
Dialogue: 0,1:53:27.19,1:53:29.07,Default,,0000,0000,0000,,và mọi thứ đều ổn.
Dialogue: 0,1:53:29.86,1:53:34.03,Default,,0000,0000,0000,,Và mọi thứ ổn định lại như cũ, mùa này qua mùa khác
Dialogue: 0,1:53:34.49,1:53:36.91,Default,,0000,0000,0000,,và chúng đều làm đúng bổn phận của mình.
Dialogue: 0,1:53:38.24,1:53:40.91,Default,,0000,0000,0000,,Và chúng tôi cũng quen\Nvới việc Kit Kat đã hạnh phúc trở lại.
Dialogue: 0,1:53:41.87,1:53:44.37,Default,,0000,0000,0000,,Và cả chuyện con bé trở thành mẹ.
Dialogue: 0,1:53:44.75,1:53:47.42,Default,,0000,0000,0000,,Mặc dù không phải\Nlà một bà mẹ tuyệt vời hay cẩn thận.
Dialogue: 0,1:53:48.84,1:53:50.21,Default,,0000,0000,0000,,Cuối cùng,
Dialogue: 0,1:53:50.34,1:53:54.01,Default,,0000,0000,0000,,tôi nghĩ tôi đã học được\Nbài học cuối cùng từ những chuyến du hành của mình.
Dialogue: 0,1:53:54.80,1:53:57.85,Default,,0000,0000,0000,,Và tôi còn đi được\Nmột bước xa hơn bố tôi.
Dialogue: 0,1:54:08.82,1:54:10.48,Default,,0000,0000,0000,,Để em lo bọn nhỏ.
Dialogue: 0,1:54:12.32,1:54:14.91,Default,,0000,0000,0000,,Không, ngủ tiếp đi, để anh.
Dialogue: 0,1:54:15.03,1:54:16.70,Default,,0000,0000,0000,,Ừa, giúp hộ em nhé,\Ndạo này anh lười lắm.
Dialogue: 0,1:54:17.87,1:54:19.83,Default,,0000,0000,0000,,Sự thật là, tôi\Nkhông du hành ngược thời gian nữa.
Dialogue: 0,1:54:19.87,1:54:21.87,Default,,0000,0000,0000,,Kể cả 1 ngày.
Dialogue: 0,1:54:22.29,1:54:24.87,Default,,0000,0000,0000,,Tôi cố gắng tận hưởng mọi ngày như thể
Dialogue: 0,1:54:25.00,1:54:27.63,Default,,0000,0000,0000,,tôi đã quay lại ngày đó lần 2,
Dialogue: 0,1:54:28.00,1:54:31.67,Default,,0000,0000,0000,,để tận hưởng mọi thứ như thể đó là ngày cuối cùng
Dialogue: 0,1:54:31.92,1:54:34.68,Default,,0000,0000,0000,,trong cuộc sống kì lạ,\Nlẫn bình thường của tôi.
Dialogue: 0,1:55:02.95,1:55:06.67,Default,,0000,0000,0000,,Chào cưng, con dậy rồi à. tuyệt quá.\NCảm ơn con nhé.
Dialogue: 0,1:55:06.79,1:55:08.17,Default,,0000,0000,0000,,Vào đây nào.
Dialogue: 0,1:55:09.79,1:55:12.59,Default,,0000,0000,0000,,Posy? Posy!
Dialogue: 0,1:55:20.97,1:55:21.97,Default,,0000,0000,0000,,Ngon cực.
Dialogue: 0,1:55:43.45,1:55:46.29,Default,,0000,0000,0000,,Chúng tôi đều\Ndu hành xuyên thời gian cùng nhau
Dialogue: 0,1:55:46.58,1:55:48.75,Default,,0000,0000,0000,,hàng ngày.
Dialogue: 0,1:55:48.92,1:55:51.42,Default,,0000,0000,0000,,Tất cả những gì\Nchúng tôi cần làm là làm hết khả năng
Dialogue: 0,1:55:51.88,1:55:54.63,Default,,0000,0000,0000,,để thưởng thức cuộc hành trình đáng nhớ này.
Dialogue: 0,1:56:37.59,1:56:39.51,Default,,0000,0000,0000,,Vâng, vâng, vâng...
Dialogue: 0,1:56:51.81,1:56:53.90,Default,,0000,0000,0000,,Được rồi, gặp anh sau nhé.
Dialogue: 0,1:56:54.02,1:56:55.44,Default,,0000,0000,0000,,Tạm biệt em.
Dialogue: 0,1:56:56.11,1:56:57.61,Default,,0000,0000,0000,,Gặp sau nhé.
